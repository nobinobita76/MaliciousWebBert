<script type="text/javascript">
function postcheck(){

	if (document.getElementById("tel").value==""){
		alert('请填写手机号码！');
		document.getElementById("tel").focus();
		return false;
	}	
	var reg2 = /^1[3,4,5,8]\d{9}$/;
	if (!reg2.test(document.getElementById("tel").value)){
	    alert('请填写正确的手机号码！');
		document.getElementById("tel").focus();
		return false;
	}
	return true;

}
</script>
