<script>
$(document).ready(function(){
	$("#articleContent p[mce_keep=true]").each(function(){
		if($(this).html() == "&nbsp;" ){ //如果没有文字，仅为一个空格
			$(this).remove();//删除空行	
		}
	});

	
	for(var i=0; i<$("#articleContent p").length; i++){
		var str = $("#articleContent p").eq(i).html(); 
		var strNew = str.replace('&nbsp;&nbsp;&nbsp;&nbsp;','　　'); //替换为全角空格
		$("#articleContent p").eq(i).html(strNew);
	}
});
</script>

