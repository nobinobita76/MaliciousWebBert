$('.lnk-delete-comment').click(function(){
    var o = $(this);
    var comment = o.closest('.comment-item');
    var cid = $(this).attr("data-cid");
    var need_confirm = true;

    if(need_confirm){
      if(confirm($(this).attr('title'))){
