  function removeComment(obj, cid){
    $.post_withck("/j/group/topic/85026521/remove_comment",{cid:cid}, function(d){
      d = $.parseJSON(d);
      if(d.r == 0){
        if(d.manager){
          window.location = d.url;
        }else{
          location.reload();
        }
      }else{
        alert(d.err_msg);
      }
    });
  }

