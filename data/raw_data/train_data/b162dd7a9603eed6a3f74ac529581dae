    var curIndex=0;
    //时间间隔 单位毫秒
    var timeInterval=3000;
    var arrimg = new Array();
    var arrlink = new Array();
    arrimg[0] = "http://ad.wanfangdata.com.cn/Images/160x35.gif";
    arrimg[1] = "http://ad.wanfangdata.com.cn/Images/smsj.jpg";
    arrlink[0]="http://www.rlzygl.com/zgh/";
    arrlink[1]="http://www.dgworld.com.cn/";
    var timer = setInterval(changeImg,timeInterval);
function changeImg()
{
    var ad_img = document.getElementById("ad_img");
    var ad_link = document.getElementById("ad_link");
    if (curIndex == arrimg.length - 1) 
    {
        curIndex=0;
    }
    else
    {
        curIndex+=1;
    }
    ad_img.src = arrimg[curIndex];
    ad_link.href = arrlink[curIndex];
}
function timerstop() {
    clearInterval(timer);
}
function timercontinue() {
    timer = setInterval(changeImg,timeInterval);
}
</script>

