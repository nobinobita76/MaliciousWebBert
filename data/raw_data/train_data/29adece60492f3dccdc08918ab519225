	var f=document.feedback;
	var nusername='';
	var waithtml="<br/><center><div style='line-height:30px'><img src='http://www.61ertong.com/images/loadinglit.gif'/> 正在发送中...</div></center><br/>";
	if(f.username){if(f.username.value==''){alert("请输入你的昵称！");f.username.focus();return;}}
	if(f.msg.value==''){alert("评论内容不能为空！");f.msg.focus();return;}
	if(f.msg.value.length>500){alert("你的评论太长，请填写500字以内的评论。");return;}
	if(f.username)nusername=f.username.value;
	$.ajax({type:'post',url:'feedback_ajax.php',data:{dopost:'send',aid:'264286',fid:0,feedbacktype:'feedback',notuser:0,username:nusername,msg:f.msg.value},beforeSend:function(){$('#commetcontentNew').html(waithtml);},success:function(data,status){$('#commetcontentNew').html(data);f.msg.value='';return false;},error:function(xhr,status,error){$('#commetcontentNew').html(xhr.responseText);f.msg.value='';return false;}});
}
</script>  </div>

</body></html>