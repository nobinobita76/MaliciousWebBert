	    function sogou_dl() {
	        if (/(iPhone|iPad|iPod|iOS)/i.test(navigator.userAgent)) { //ios
	            window.location="itms-apps://itunes.apple.com/cn/app/sou-gou-shu-ru-fa-zui-hao/id917670924?mt=8";
