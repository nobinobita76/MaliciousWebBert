			var pageWidth = 640;//css set page's width
			var windowScreenWidth = typeof window.screen.width == 'undefined' ? 0 : parseInt(window.screen.width,10);
			windowScreenWidth = isNaN(windowScreenWidth) ? 0 : windowScreenWidth;
			if(windowScreenWidth > 0) {
				var scale = windowScreenWidth/pageWidth;
				var isAndroid = /Android[\/\s]+([\d\.]+)/i.test(navigator.userAgent);
				var aVersion = isAndroid ? RegExp.$1 : '0';
				if(isAndroid && aVersion < '5.0') {
					if(aVersion > '2.3') {
						document.write('<meta name="viewport" content="width=640, minimum-scale='+scale+', maximum-scale ='+scale+', target-densitydpi=device-dpi" />');
					} else {
						document.write('<meta name="viewport" content="width=320, initial-scale=0.5, user-scalable=0" />');
					}
				} else {
					if(/(iphone|ipad|ios)/i.test(window.navigator.userAgent)) {
						document.write('<meta name="viewport" content="width=device-width, user-scalable=0, initial-scale='+scale+',minimum-scale='+scale+',maximum-scale='+scale+'" />');
					} else {
						document.write('<meta name="viewport" content="width=640, user-scalable=0, target-densitydpi=device-dpi" />');
					}
				}
			}
		</script>
