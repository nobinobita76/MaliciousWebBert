(function(win,doc){
  String.prototype.getQueryString = function(name) {
      var reg = new RegExp("(^|&|\\?)" + name + "=([^&]*)(&|$)"),
          r;
      if(r = this.match(reg)) {
          return unescape(r[2]);
      }
      return null;
  };
  var href = win.location.href,
  hide = href.getQueryString("hide") ? href.getQueryString("hide") : false;
  if (!!hide){
    var a = ["header","footer"],len = a.length,i;
    for (i=0;i<len;i++){
      doc.getElementById(a[i]).style.display = "none";
    }
  }
})(window,document);
</script>
