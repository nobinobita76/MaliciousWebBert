<script language="javascript">
var nextpic=1;
var ptimer;
function switchPic(picNumber,pwait){
clearTimeout(ptimer);
for(var i=1;i<=9;i++){
	document.getElementById('button_'+i).className = 'none';
	document.getElementById('pic_'+i).style.display = 'none';
}
document.getElementById('button_'+picNumber).className = 'current';
document.getElementById('pic_'+picNumber).style.display = 'block';
nextpic = picNumber+1;
if(nextpic>9) nextpic=1;
if(pwait==1){
	ptimer = setTimeout("switchPic("+picNumber+",0)",6000);
}else{
	ptimer = setTimeout("switchPic("+nextpic+",0)",2000);
}
}
switchPic(1,0);
function show(num)
{
			document.getElementById("main_player").innerHTML="<embed height='252' width='328' pluginspage=' http://www.macromedia.com/go/getflashplayer' allowfullscreen='true' wmode='opaque' allowscriptaccess='always' quality='high' name='undefined' id='undefined' src=' http://player.ku6.com/refer/"+num+"/v.swf&amp;color=ffffff&amp;auto=1&recommend=0&amp;adss=0&amp;jump=0&amp;so=0' type='application/x-shockwave-flash'>";
}
</script>
