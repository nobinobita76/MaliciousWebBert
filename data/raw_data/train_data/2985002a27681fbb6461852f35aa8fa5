		<script type="text/javascript" charset="utf-8">
			//mui初始化
			mui.init();

			var accountInfo;

			var childInfo;

			var isLogin = false;

			var titleElem = document.getElementById("title");

			mui.plusReady(function() {
				accountInfo = eval('(' + window.localStorage.accountInfo + ')');

				if(accountInfo == undefined || accountInfo.yhlx == 1) {

					user = {
						id: 1,
						xm: "xm"
					}
					window.localStorage.accountInfo = JSON.stringify(user);
					accountInfo = eval('(' + window.localStorage.accountInfo + ')');
				}
				//绑定主页面标签事件
				mainTag();
				valUserLogin();
				getIsMakeUp();
				//进入页面时就把三个tab页需要完成的动作初始化，避免每次点击时都要重新初始化
				initJZZindex();
				initQuery();
				initMe();
			

			});

			function getIsMakeUp() {
				mui.myAjax(public_url + '/jzz/residence/lggajGetChild', {
					data: {
						'id': accountInfo.id,
						USER_ID: accountInfo.id,
						USER_NAME: accountInfo.xm
					},
					dataType: 'text', //服务器返回json格式数据
					type: 'post', //HTTP请求类型
					async: false,
					timeout: 60000, //超时时间设置为10秒；
					success: function(data) {
						var result = eval("(" + data + ")");
						console.log(result)
							//接口调用成功标识
						if(result.status == 11) {

							window.localStorage.childInfo = JSON.stringify(result.result);

							childInfo = eval('(' + window.localStorage.childInfo + ')');

							if(result.result.ismakeup == 1) {
								mui.alert("您的实名认证照片不通过，请到 “办证记录” 里进行补录！");
							}
						}
					},
					error: function(xhr, type, errorThrown) {
						plus.nativeUI.closeWaiting();
						mui.toast('网络访问出错');
					}
				});
			}

			function valUserLogin() {

				var param = {
					USER_ID: accountInfo.id,
					secretToken: accountInfo.token
				};

				mui.ajax(public_url + '/jzz/jzdjUser/validationUserIsLogin', {
					data: param,
					dataType: 'text',
					type: 'post',
					async: false,
					timeout: 180000,
					success: function(data) {
						if(DEBUG) {
							mui.alert(data);
						}
						var result = eval('(' + data + ')');

						if(result.status == 11) {
							isLogin = true;
						} else {
							user = {
								id: 1,
								xm: "xm"
							}
							window.localStorage.accountInfo = JSON.stringify(user);
							isLogin = false;
						}
					},
					error: function(xhr, type, errorThrown) {
						mui.alert('网络访问出错');
						plus.nativeUI.closeWaiting();
					}
				});
			}

			function mainTag() {
				var navs = document.body.querySelectorAll('.mui-tab-item');
				for(var i = 0; i < navs.length; i++) {
					navs[i].addEventListener('tap', function() {
						//获取每个item的href字段,用于标识需要显示哪个div
						var html = this.href.split('#')[1];
						//mui.alert(this.href.split('#')[1]);
						//首页
						if(html == 'jzz_index') {
							//plus.nativeUI.closeWaiting();
							titleElem.innerHTML = "首页";
							//initJZZindex();
						}
						//查询
						else if(html == 'tab_query') {
							//plus.nativeUI.closeWaiting();
							titleElem.innerHTML = "查询";
							//initQuery();
						}
						//我
						else if(html == 'tab_me_JZZ') {
							//plus.nativeUI.closeWaiting();
							titleElem.innerHTML = "我";
							//initMe();
						}
					});
				}
			}

			//首页开始
			function initJZZindex() {
				document.querySelector("#banzhengjilu").addEventListener('tap', function(event) {

					if(isLogin == true) {
						mui.openWindow({
							url: "jzzList.html",
							id: "jzzList.html"
						});
					} else {
						var btnArray = ['登录', '取消'];
						mui.confirm('请登录之后再进行该操作！', '请您确认', btnArray, function(e) {
							if(e.index == 0) {
								mui.openWindow({
									url: "login_user_type_2.html",
									id: "login_user_type_2.html",
									extras: {}
								});
							}
						});
					}
				});

				document.querySelector("#shenbanjuzhuzheng").addEventListener('tap', function(event) {
					applyJZZ();
				});

				document.querySelector("#shenbanqianzhu").addEventListener('tap', function(event) {

					if(isLogin == true) {

						if(childInfo.smzt != "2" && childInfo.smzt != "1") {
							mui.alert('当前账户为非实名账户，请先进行实名！如果账号已经在居住证受理点办理了实名操作，请退出账号后重新登入再办理该项业务。');
							return
						}
						mui.openWindow({
							url: "JZZQz.html",
							id: "JZZQz.html"
						});
					} else {
						var btnArray = ['登录', '取消'];
						mui.confirm('请登录之后再进行该操作！', '请您确认', btnArray, function(e) {
							if(e.index == 0) {
								mui.openWindow({
									url: "login_user_type_2.html",
									id: "login_user_type_2.html",
									extras: {}
								});
							}
						});
					}

				});

				document.querySelector("#qianzhujilu").addEventListener('tap', function(event) {

					if(isLogin == true) {
						if(childInfo.smzt != "2" && childInfo.smzt != "1") {
							mui.alert('当前账户为非实名账户，请先进行实名！如果账号已经在居住证受理点办理了实名操作，请退出账号后重新登入再办理该项业务。');
							return
						}
						mui.openWindow({
							url: "jzzQzList.html",
							id: "jzzQzList.html"
						});
					} else {
						var btnArray = ['登录', '取消'];
						mui.confirm('请登录之后再进行该操作！', '请您确认', btnArray, function(e) {
							if(e.index == 0) {
								mui.openWindow({
									url: "login_user_type_2.html",
									id: "login_user_type_2.html",
									extras: {}
								});
							}
						});
					}
				});

				document.querySelector("#fangwu_search").addEventListener('tap', function() {
					mui.openWindow({
						url: 'house_code_search.html',
						id: 'house_code_search.html',
						extras: {

						}
					});
				});

				document.querySelector("#houseregister_search").addEventListener('tap', function() {
					mui.openWindow({
						url: 'houseregister_search.html',
						id: 'houseregister_search.html',
						extras: {

						}
					});
				});

				document.querySelector("#speed").addEventListener('tap', function() {
					mui.openWindow({
						url: 'speed.html',
						id: 'speed.html',
						extras: {

						}
					});
				});

				document.querySelector("#register_search").addEventListener('tap', function() {

					mui.toast("功能升级中，请前往居住所在地的居住登记受理点查询您的登记信息");
					return

					mui.openWindow({
						url: 'register_search.html',
						id: 'register_search.html',
						extras: {

						}
					});
				});

				document.querySelector("#jzz_status_search").addEventListener('tap', function() {
					mui.openWindow({
						url: "jzz_status_search.html",
						id: "jzz_status_search.html"
					});
				});

				document.querySelector("#photonum_search").addEventListener('tap', function() {
					mui.openWindow({
						url: "photonum_search.html",
						id: "photonum_search.html"
					});
				});

				//办证指南
				document.querySelector("#certificate_guide").addEventListener('tap', function() {
					mui.openWindow({
						url: "certificate_guide.html",
						id: "certificate_guide.html"
					});
				});

				//常见问题
				document.querySelector("#normal_question").addEventListener('tap', function() {
					mui.openWindow({
						url: "normal_question.html",
						id: "normal_question.html"
					});
				});
				if(window.localStorage.prompt != "done") {
					getPrompt();
				}
				//getAllNews();				
			}

			function getPrompt() {

				var param = {
					apptype: "1"
				};

				mui.ajax(public_url + '/jzz/common/getJzdjPrompt', {
					data: param,
					dataType: 'text',
					type: 'post',
					timeout: timeout,
					success: function(data) {
						var result = eval('(' + data + ')');
						if(result.status == 11) {

							if(result.result != undefined) {
								$("body").showbanner({
									title: "<br><br><br><font style='font-size:20px'>温馨提示</font>",
									duration: 20000,
									html: true,
									addclass: "mybannerstyle2",
									content: result.result.content
								});
							}

							window.localStorage.prompt = "done";
						}

					},
					error: function(xhr, type, errorThrown) {
						mui.toast('网络访问出错');
					}
				});

			}

			function getAllNews() {
				var param = {
					USER_ID: accountInfo.id,
					USER_NAME: accountInfo.xm,
					timestamp: new Date().getTime()
				};

				plus.nativeUI.showWaiting('正在获取通知通告，请稍候..');
				mui.ajax(public_url + '/jzz/news/getLastJzdjNews', {
					data: param,
					dataType: 'text',
					type: 'post',
					timeout: 180000,
					success: function(data) {
						if(DEBUG) {
							mui.alert(data);
						}
						var result = eval('(' + data + ')');
						plus.nativeUI.closeWaiting();

						if(result.status == 11) {
							var bt = baidu.template;
							var htmlStr = "";
							document.getElementById("news-group").innerHTML = "";
							for(var i = 0; i < result.result.length; i++) {
								//获取数组的每个对象
								var obj = result.result[i];
								//数据与模板结合，生成html
								htmlStr += bt("newsList", obj);
							}
							document.getElementById("news-group").innerHTML = htmlStr;
							for(var i = 0; i < result.result.length; i++) {
								document.getElementById("news_" + result.result[i].id).addEventListener('tap', function() {
									mui.openWindow({
										url: 'news_detail.html',
										id: 'news_detail.html',
										extras: {
											newsId: this.id.substring(5)
										}
									});
								});
							}

						} else {
							mui.alert('通知通告获取失败，请重试');
						}
					},
					error: function(xhr, type, errorThrown) {
						mui.alert('网络访问出错');
						plus.nativeUI.closeWaiting();
					}
				});
			}

			function news(val) {
				mui.openWindow({
					url: 'news_detail.html',
					id: 'news_detail.html',
					extras: {
						newsId: val
					}
				});
			}

			function applyJZZ() {

				if(isLogin == false) {
					var btnArray = ['登录', '取消'];
					mui.confirm('请登录之后再进行该操作！', '请您确认', btnArray, function(e) {
						if(e.index == 0) {
							mui.openWindow({
								url: "login_user_type_2.html",
								id: "login_user_type_2.html",
								extras: {}
							});
						}
					});
				} else {

					var param = {
						name: accountInfo.xm,
						credentialsNum: accountInfo.zjhm,
						USER_ID: accountInfo.id,
						USER_NAME: accountInfo.xm,
						timestamp: new Date().getTime()
					};

					plus.nativeUI.showWaiting('正在校验居住证办理状态，请稍候..');
					mui.myAjax(public_url + '/jzz/residence/lggajGetJZZStatus', {
						data: param,
						dataType: 'text',
						type: 'post',
						timeout: 180000,
						success: function(data) {
							//mui.alert(data);
							var result = eval('(' + data + ')');
							plus.nativeUI.closeWaiting();

							if(result.status == 11) {
								switch(result.result.type) {
									case "1":
									case "6":
										mui.openWindow({
											url: "banliJZZ_system_check.html",
											id: "banliJZZ_system_check.html",
											extras: {
												type: result.result.type
											}
										});
										break;
									case "3":
									case "4":
									case "5":
										mui.alert('您已申办居住证。本应用目前仅支持证件新办功能，' +
											'补办新证/换领新证/证件再次申办请到网上居住证服务平台进行办理');
										break;
									case "2":
									case "7":
									case "8":
										mui.alert('对不起，您目前的条件不符合申办要求');
										break;
									case "9":
										mui.alert('居住证状态：证件存在正在办理的签注，不符合办证条件，请核对信息后继续！');
										break;
								}
							} else if(result.status == 999) {

								var btnArray = ['登录', '取消'];
								mui.confirm(result.error, '请您确认', btnArray, function(e) {
									if(e.index == 0) {
										mui.openWindow({
											url: "login_user_type_2.html",
											id: "login_user_type_2.html",
											extras: {

											}
										});
									}
								});
							} else {
								mui.alert('校验失败，请重试');
							}
						},
						error: function(xhr, type, errorThrown) {
							mui.alert('网络访问出错');
							plus.nativeUI.closeWaiting();
						}
					});
				}
			}
			//首页结束

