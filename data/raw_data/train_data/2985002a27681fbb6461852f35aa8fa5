			//我开始
			function initMe() {

				updateBindBtn();

				if(isLogin == false) {
					document.querySelector("#account_info a").innerHTML = " (未实名)";
				} else {
					if(childInfo.smzt == "2" || childInfo.smzt == "1") {
						document.querySelector("#account_info a").innerHTML = accountInfo.xm + " (已实名)";
					} else {
						document.querySelector("#account_info a").innerHTML = accountInfo.xm + " (未实名)";
					}
				}

				document.querySelector("#bind").addEventListener('tap', function() {

					var btnArray = ['确定', '取消'];
					mui.confirm('确定要绑定该微信号吗？', '确认绑定', btnArray, function(e) {
						if(e.index == 0) {
							plus.nativeUI.showWaiting('请稍候..');
							var param = {
								id: accountInfo.id,
								openid: window.localStorage.openId,
								USER_ID: accountInfo.id,
								USER_NAME: accountInfo.xm,
								timestamp: new Date().getTime()
							};
							mui.myAjax(public_url + '/jzz/jzdjUser/bindWeiXinOpenid', {
								data: param,
								dataType: 'text',
								type: 'post',
								timeout: 180000,
								success: function(data) {
									plus.nativeUI.closeWaiting();
									if(DEBUG) {
										mui.alert(data);
									}
									var result = eval("(" + data + ")");
									if(result.status == 11) {
										mui.toast("绑定成功.");
										window.localStorage.isBind = true;
										updateBindBtn();
									} else if(result.status == 999) {
										mui.alert(result.error);
										mui.openWindow({
											url: "login_user_type_2.html",
											id: "login_user_type_2.html",
											extras: {

											}
										});
									} else if(result.status == -99) {
										mui.alert(result.error);
									}
								},
								error: function(xhr, type, errorThrown) {
									mui.alert('网络访问出错');
									plus.nativeUI.closeWaiting();
								}
							});
						}
					});
				});

				document.querySelector("#unBind").addEventListener('tap', function() {
					var btnArray = ['确定', '取消'];
					mui.confirm('确定要解除绑定吗？', '确认解绑', btnArray, function(e) {
						if(e.index == 0) {
							plus.nativeUI.showWaiting('请稍候..');
							var param = {
								id: accountInfo.id,
								openid: window.localStorage.openId,
								USER_ID: accountInfo.id,
								USER_NAME: accountInfo.xm,
								timestamp: new Date().getTime()
							};
							mui.myAjax(public_url + '/jzz/jzdjUser/unBindWeiXinOpenid', {
								data: param,
								dataType: 'text',
								type: 'post',
								timeout: 180000,
								success: function(data) {
									plus.nativeUI.closeWaiting();
									if(DEBUG) {
										mui.alert(data);
									}
									var result = eval("(" + data + ")");
									if(result.status == 11) {
										mui.toast("解绑成功.");
										window.localStorage.isBind = false;
										updateBindBtn();
									} else if(result.status == 999) {
										mui.alert(result.error);
										mui.openWindow({
											url: "login_user_type_2.html",
											id: "login_user_type_2.html",
											extras: {

											}
										});
									} else if(result.status == -99) {
										mui.alert(result.error);
									}
								},
								error: function(xhr, type, errorThrown) {
									mui.alert('网络访问出错');
									plus.nativeUI.closeWaiting();
								}
							});
						}
					});
				});

				document.querySelector("#account_info").addEventListener('tap', function() {

					if(isLogin == true) {
						mui.openWindow({
							url: 'account_modify.html',
							id: 'account_modify.html',
							extras: {}
						});
					} else {
						var btnArray = ['登录', '取消'];
						mui.confirm("请登录之后再进行该操作！", '请您确认', btnArray, function(e) {
							if(e.index == 0) {
								mui.openWindow({
									url: "login_user_type_2.html",
									id: "login_user_type_2.html",
									extras: {

									}
								});
							}
						});
					}

				});

				document.querySelector("#change_password").addEventListener('tap', function() {
					mui.openWindow({
						url: 'change_password.html',
						id: 'change_password.html',
						extras: {

						}
					});
				});

				document.querySelector("#user_feedback").addEventListener('tap', function() {
					mui.openWindow({
						url: 'user_feedback.html',
						id: 'user_feedback.html',
						extras: {

						}
					});
				});

				document.querySelector("#btnLogin").addEventListener('tap', function() {
					mui.openWindow({
						url: 'login_user_type_2.html',
						id: 'login_user_type_2.html',
						extras: {

						}
					});
				});

				document.querySelector("#about").addEventListener('tap', function() {
					mui.openWindow({
						url: 'about.html',
						id: 'about.html',
						extras: {

						}
					});
				});

				document.querySelector('#btnLogOut').addEventListener('tap', function(event) {
					var btnArray = ['确定', '取消'];
					mui.confirm('确定要注销登录吗？', '深圳市居住证', btnArray, function(e) {
						if(e.index == 0) {
							window.localStorage.accountInfo = "";
							window.localStorage.userType = "1";
							window.localStorage.username = "";
							window.localStorage.mypassword = "";

							mui.openWindow({
								url: "login_user_type_2.html",
								id: "login_user_type_2.html",
								extras: {

								}
							});
						}
					});
				});

				document.querySelector('#btnCloseApp').addEventListener('tap', function(event) {
					var btnArray = ['确定', '取消'];
					mui.confirm('确定要关闭应用吗？', '深圳市居住证', btnArray, function(e) {
						if(e.index == 0) {
							window.localStorage.accountInfo = "";
							plus.runtime.quit();
							//mui.back();
						}
					});
				});

			}

			function updateBindBtn() {

				if(isLogin == false) {
					document.getElementById("btnLogOut").style.display = "none";

					document.getElementById("x1").style.display = "none";
					document.getElementById("x2").style.display = "none";
				} else {
					document.getElementById("btnLogin").style.display = "none";
					//判断用户是否已经绑定微信，动态控制"绑定","解绑"按钮的显示
					if(window.localStorage.isBind == 'true') {
						document.getElementById("bind").style.display = "none";
						document.getElementById("unBind").style.display = "block";
					} else {
						document.getElementById("bind").style.display = "block";
						document.getElementById("unBind").style.display = "none";
					}
				}

			}
			//我结束
		</script>
	

</body></html>