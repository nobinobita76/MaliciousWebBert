		function words () {
		   var Length=$("#comment_content").val().length;
		   if (Length > 250) {
				var num=$("#comment_content").val().substr(0,250);
				$("#comment_content").val(num);
		   }else{
				$("#surplus_prompt").text(250-$("#comment_content").val().length);
		   }
		}

