	//异步判断登录状态
	var login_tag = 1;
	
	$.ajax({
		type:"POST",
		url:"http://www.caishimv.com/index.php/web/web_user/is_login.html",
		data:{login_tag:login_tag},
		dataType:"json",
		beforeSend: function() {
	//			alert('beforeSend');
	    },					
		success:function(data){
			//创建成功
			if (data.state == 200)
			{
				var user_photo = data.result.user_photo;
				if(user_photo){
					if(user_photo.indexOf("ttp://") > 0){
						user_photo = user_photo;
					}else{
						user_photo = 'http://www.caishimv.com/'+user_photo;
					}
					
					$("#ajax_user_photo").attr('src',user_photo); 
				} 
				var user_name = data.result.username.substr(0,5);
				$("#ajax_user_name").text(user_name);
				// 显示登录信息
				$("#no_login_status").hide();
				$("#login_status").show();
			}else{
		        return false;
			}
				
		},
		complete: function(){
	//			alert('complete');
		},
		error: function(){
			//请求出错处理
	        return false;
		}
	});
	
