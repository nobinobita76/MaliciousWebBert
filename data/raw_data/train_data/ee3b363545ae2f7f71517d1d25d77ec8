  <script>
		
		//考虑数据的交互，多久请求一下数据库
		$(document).ready(function () {
			setInterval("startRequest()",15000);
		});
	          
	       function startRequest()
	        {
		    	arcid= "1976";
		        $.ajax({
			        type: 'POST',
			        url: 'http://www.caishimv.com/index.php/web/web_comment/tanmu_comments.html',
			        data:{arcid:arcid},
			        dataType: 'json',
			        success: function (data) {
			        	if( data["state"] == 200 ){
			        		if(Object.prototype.toString.apply(data["result"]) === '[object Array]'){
				        		var html = '';
						        for (var i = 0; i < data["result"].length; i++) {
		// 				        	html+= "<div id='"+data["result"][i]["id"]+"' style='font-size:" +data["result"][i]["size"]+ ";color:"+data["result"][i]["color"]+"'><p>"+data["result"][i]["msg"]+"</p></div>";
						        	html+= "<div id='"+data["result"][i]["id"]+"' style='font-size:" +data["result"][i]["size"]+ ";color:"+getReandomColor()+"'><p>"+data["result"][i]["msg"]+"</p></div>";
						        }
						        $(".d_show").children().remove();
						        $(".d_show").append(html);
								init_screen();
	
								//显示弹幕
								$("#danmu").show();
								
		// 						num=$(".d_show").find("div").length;
		// 						if(num>30){
		// 						$(".d_show").find("div:lt(20)").remove();  
		// 						} 
			        		}else{
			        			//隐藏弹幕
								$("#danmu").hide();
							}   
			        	}else{
				        	//隐藏弹幕
							$("#danmu").hide();
				        }  
			        },
		        });
	        }

	       startRequest();
	
	    function init_screen() {
	        var _top = 0;
	        $(".d_show").find("div").show().each(function () {
	            var _left = $(window).width() - $(this).width()+220;
	            var _height = $(window).height()+100;
	
	            _top = _top + 36;
	            if (_top >= _height - 120) { 
	                _top = 40;
	            }
	            $(this).css({left: _left, top: _top});
	            var time = 10000;
	            if ($(this).index() % 2 == 0) {
	                time = 12000;
	            }
	             if ($(this).index() % 3 == 0) {
	                time = 14000;
	            }
	            if ($(this).index() % 4 == 0) {
	                time = 16000;
	            }
	            if ($(this).index() % 5 == 0) {
	                time = 18000;
	            }
				if ($(this).index() % 7 == 0) {
	                time = 20000;
	            }
	            if ($(this).index() % 8 == 0) {
	                time = 23000;
	            }
	            $(this).animate({left: "-" + _left + "px"}, time, function () {
	            });
	        });
	    }
	
	    //随机获取颜色值
	    function getReandomColor() {
	        return '#' + (function (h) {
	            return new Array(7 - h.length).join("0") + h
	        })((Math.random() * 0x1000000 << 0).toString(16))
	    }
	    
	</script> 
  <script>
		$('#danopen').click(function () {
		            var data = $(this).attr('data');
		            if (data == 1) 
		            {
		                $(this).attr('data', 0).attr('title','已关闭');
		                $(this).children('span').css({'left':'22px','color':'#cccccc'}).html('关闭');
						$("#conts").hide();
		            }
		            else {
		                $(this).attr('data', 1).attr('title', '已开启');
		                $(this).children('span').css({'left':'0px','color':'#3366FF'}).html('开启');
						$("#conts").show();
		            }
		        })
		</script> 
