		function ajaxAddComment(){
			//取值
			var msg = $('#comment_content').val();;
			var	resid = '1976';
			var	restitle = '小扎很忙：刚跟习大大握过手 紧接着就被莫迪熊抱';
			var	typeid = '11';
	
			if(msg.length < 8){
				alert('评论内容不能小于8个字！');
				return;
			}
	
			$.ajax({
				type:"POST",
				url:"http://www.caishimv.com/index.php/web/web_comment/add_comment.html",
				data:{msg:msg,resid:resid,restitle:restitle,typeid:typeid},
				dataType:"json",
				beforeSend: function() {
					//
	            },					
				success:function(data){
					//创建成功
					if (data.state == 200)
					{
						$('#comment_content').val('');
						
						content = '<li class="comment_item">'+
								'<div class="comment_item_img">'+
								'<img src="'+data.result.user_photo+'">'+
							'</div>'+
							'<div class="comment_itemcon2">'+
									'<p class="yuegaotxt10">'+data.result.username+' <span>1秒前</span></p>'+
									'<p class="yuegaotxt11">'+msg+'</p>'+
									'<p class="yuegaotxt120"><a href="javascript:void(0);" id="'+data.result.comment_id+'_like" onclick="like_comment('+data.result.comment_id+')" class="iconbg5">0</a> <a href="javascript:void(0);" title="" onclick="reply_comment(\'@'+data.result.username+' \' )" class="example">回复</a></p>'+
							'</div>'+
							'<div class="clear_both"></div>'+
						'</li>';
					
						$('#conter_bott_list ul li:first').before(content);

						//location.reload();
					}else{
						alert('评论失败！');
					}
						
				},
				complete: function(){
					//JAlert('complete');
				},
				error: function(){
					//请求出错处理
					alert('error');
				}
			});	
		}
	
