		url:"http://www.caishimv.com/index.php/web/web_user/is_login.html",
		data:{login_tag:login_tag},
		dataType:"json",
		beforeSend: function() {
	//			alert('beforeSend');
	    },					
		success:function(data){
			//创建成功
			if (data.state == 200)
			{
				var user_photo = data.result.user_photo;
				if(user_photo){
					if(user_photo.indexOf("ttp://") > 0){
						user_photo = user_photo;
					}else{
						user_photo = 'http://www.caishimv.com/'+user_photo;
					}
					$("#comment_user_photo").attr('src',user_photo); 
				} 
