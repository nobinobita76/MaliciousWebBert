  <script type="text/javascript">
	function load_more(load_page) {

		if(load_page){
			var page = 0;
			$("#pagenum").val(1);
		}else{
			var page = $("#pagenum").val();
			var page1 = parseInt($("#pagenum").val())+1;
			$("#pagenum").val(page1);
		}

		var arcid = '1976';
		$.ajax({
			type:"POST",
			url:"http://www.caishimv.com/index.php/web/web_comment/more_comments.html",
			data:{page:page,arcid:arcid},
			dataType:"json",
			beforeSend: function() {
				$("#load_more_button").text('努力加载ing');
			},	
			success:function(data){
				if( data["state"] == 200 ){
						if(Object.prototype.toString.apply(data["result"]) === '[object Array]'){
							if(data["result"].length < 20){
								$("#load_more_button").text('后面没有了');
								$("#load_more_button").attr("disabled","disabled");
							}else{
								$("#load_more_button").text('加载更多');
							}
						}else{
							$("#load_more_button").text('后面没有了');
							$("#load_more_button").attr("disabled","disabled");
						}
					
						var content = "";

						for(i=0;i<data["result"].length;i++){
							var content = new Array ();

							content += '<li class="comment_item">'+
								'<div class="comment_item_img">'+
									'<img src="'+data['result'][i]['user_photo']+'">'+
								'</div>'+
								'<div class="comment_itemcon2">'+
										'<p class="yuegaotxt10">'+data['result'][i]['username']+' <span>'+data['result'][i]['createtime']+'</span></p>'+
										'<p class="yuegaotxt11">'+data['result'][i]['msg']+'</p>'+
										'<p class="yuegaotxt120"><a href="javascript:void(0);" id="'+data['result'][i]['id']+'_like" onclick="like_comment('+data['result'][i]['id']+')" class="iconbg5">'+data['result'][i]['likenum']+'</a> <a href="javascript:void(0);" title="" onclick="reply_comment(\'@'+data['result'][i]['username']+' \' )" class="example">回复</a></p>'+
								'</div>'+
								'<div class="clear_both"></div>'+
							'</li>';
							
							$('#conter_bott_list ul li:last').after(content);
						};
					}else{
						alert('加载失败！');
					}
				},
				complete: function(){
					//
				},
				error: function(){
					//请求出错处理
				}
			})
		} 
	
		load_more(true);
		
</script> 
  <script type="text/javascript">
//手机端访问pc自动跳转wap
function browserRedirect() {
		
		var sUserAgent = navigator.userAgent.toLowerCase();
		var bIsIpad = sUserAgent.match(/ipad/i) == "ipad";
		var bIsIphoneOs = sUserAgent.match(/iphone os/i) == "iphone os";
		var bIsMidp = sUserAgent.match(/midp/i) == "midp";
		var bIsUc7 = sUserAgent.match(/rv:1.2.3.4/i) == "rv:1.2.3.4";
		var bIsUc = sUserAgent.match(/ucweb/i) == "ucweb";
		var bIsAndroid = sUserAgent.match(/android/i) == "android";
		var bIsCE = sUserAgent.match(/windows ce/i) == "windows ce";
		var bIsWM = sUserAgent.match(/windows mobile/i) == "windows mobile";

		if (bIsIphoneOs || bIsMidp || bIsUc7 || bIsUc || bIsAndroid || bIsCE || bIsWM) {
			var str = window.location.href;
			str=str.replace('caishimv.com/','caishimv.com/wap/');
			window.location.href = str;
			
		}
	}

	browserRedirect();
</script> 
