<script type="text/javascript" src="http://www.feng.com/images_v4/js/fancybox/jquery.mousewheel-3.0.4.pack.js"></script><script type="text/javascript" src="http://www.feng.com/images_v4/js/fancybox/jquery.fancybox-1.3.4.pack.js"></script><script type="text/javascript">
jQuery(function($){
	var panel = $('#article_content'),
	arti_ttl = "PSV\u5b8c\u7f8e\u7834\u89e3\u4e86 \u4f60\u53ef\u80fd\u4f1a\u53d1\u73b0\u5b83\u5e76\u4e0d\u597d\u73a9";
	panel.find("img").each(function(i){
		var ttl,imgalt,imgparent=$(this).parent();
		var imgparenttag = imgparent.get(0).tagName.toLowerCase();
		if(imgparenttag=="a"){
			var h=imgparent.attr("href")||"";
			if(h.length>0&&h!=$(this).attr("src")&&h.indexOf("javascript")!=0){
				return;
			}
			imgparent.attr("href",$(this).attr("src"));
			imgparentttl = imgparent.attr("title");
			if( typeof imgparentttl =="undefined"|| imgparentttl.length==0){
				imgalt = $(this).attr("alt");
				ttl = typeof imgalt != "undefined"&&imgalt.length>0 ? imgalt:arti_ttl;
				imgparent.attr("title",ttl);
			}
		}else{
			imgalt = $(this).attr("alt");
			ttl = typeof imgalt != "undefined"&&imgalt.length>0 ? imgalt:arti_ttl;
			$(this).wrap("<a href='"+$(this).attr("src")+"' title='"+ttl+"'></a>");
		}
	});
	panel.find('a[href$=".jpg"], a[href$=".png"], a[href$=".gif"]').fancybox({
		transitionIn : 'elastic',
		transitionOut : 'elastic',
		zoomOpacity : true,
		overlayShow : false,
		zoomSpeedIn : 500,
		zoomSpeedOut : 500
	});
});
</script>

