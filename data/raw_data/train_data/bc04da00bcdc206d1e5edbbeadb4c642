  <script type="text/javascript">
$(function(){
	$("#footerNav .bclass").click(function(){
		var _this = $(this);
		var list = _this.parent().find(".list");
		var none = list.is(":hidden");
		$("#footerNav .list").hide();
		if(none){
			var listWidth = list.width();
			var marginLeft = listWidth / 2;
			list.css({'margin-left':"-"+marginLeft+"px"}).show();
		}else{
			list.hide();
		}
	});
	$(document).click(function(e){
		if($(e.target).closest("#footerNav").length == 0) { 
			$("#footerNav .list").hide();
		}
	});
});
</script> 
