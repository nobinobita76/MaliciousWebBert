	if($(".zhan").length>0){
		$(".zhan").click(function(){
			var _this = $(this);
			var plid = $(this).attr("id").replace("z_", "");
			var num = parseInt($(this).html());
			$.ajax({
				type: 'POST',
				url: '/news/e/wap/ajax.php' ,
				data: {action:"addzcnum", id:1508, plid:plid} ,
				success:function(data){
					if(data == 0){
						num = num + 1;
						_this.html(num);
						_this.addClass("zhanclick");
					}
				}
			});
		});
	}
	
});
</script> 
