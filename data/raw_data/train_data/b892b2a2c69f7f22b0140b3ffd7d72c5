$(function(){
	if(typeof(sidebar_tab_flag) == 'undefined')
	{
		$('.side_tab').mouseover(function(){
			var index = $('.side_tab').index(this),
				op_index = 0;
			if(index % 2)
				op_index = index - 1
			else
				op_index = index + 1
			$('.tab_cnt').eq(index).show().end().eq(op_index).hide();
			
			
			$(this).addClass('active').siblings().removeClass('active')
		})
		var sidebar_tab_flag = null;
	}
})
</script> 
