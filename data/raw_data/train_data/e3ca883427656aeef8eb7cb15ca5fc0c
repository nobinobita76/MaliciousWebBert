    $(window).scroll(function(){
        var topHeight = parseInt($(window).scrollTop() + 1 + 70);  //浮动频道高度70
        if ($(window).scrollTop()>lbdHeight){
            $("#adc6op3").addClass("adc6op3");
        }else{
            $("#adc6op3").removeClass("adc6op3");
        }
    });
});

</script>
