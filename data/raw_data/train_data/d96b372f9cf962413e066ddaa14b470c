		});
		$("#getMoreReply").on("click",getReply);
    });
	
	/*
	 * 收藏
	 */
	function collectArtic(){
		if($(".collect-content").attr("isreplide") == "true"){
			initAlert("您已经收藏过该文章了！","","warn");
			return false;
		}
		var _url = "/contentcollect/collectcontent.html";
		var _data = {};
		_data['contentId'] = _contentId;
		_data[_param] = _token;
		$.ajax({
			type: "POST",
			url: _url,
				data: _data,
				success: function(data){
				data = eval('('+ data +')');
				switch(data.status){
					case 1:
						$(".collect-content").attr("isreplide","true");
						initAlert(data.msg,"","warn");
						break;
					case 0:
						initAlert(data.msg,"","warn");
						break;
				}
			},
			error:function(){
				initAlert("系统或网络问题，请稍后再试！","","warn");
			}
		},'json');
	}
	
	/*
	 * 获取评论列表
	 */
	function getReply(){
		var url = "/contentcomment/getcommentnew.html"
		var _page = parseInt($("#replyTitle").attr("page"));
		$.get(url,{content_id:_contentId,page:_page},function(data){
			if(data.status){
				var _len = data.data.list.length;
				var _html = "";
				var _img,_name,_clen,_llen;
				for(var i=0; i<_len; i++){
					_html = _html + getReplyHtml(data.data.list[i].comment_id,data.data.list[i].avatar,data.data.list[i].nick_name,data.data.list[i].comment,data.data.list[i].web_time_desc,data.data.list[i].ding,data.data.list[i].cai,data.data.list[i].pcomment_info);
				}

				if(_len == 0)
				{
					_html = "<p id=\"no-comment\" class=\"margin-t5 line-h-24 size-14\">暂无评论</p>";
				}
				//评论数量
				$("#comment_count").html(parseInt(data.data.totalCount));
				$("#getMoreReply").before(_html);
				if(data.data.pageCount <= _page){
					$("#getMoreReply").remove();
				}else{
					_page++;
					$("#replyTitle").attr("page",_page);
				}
			}else{
				initAlert(data.msg,"","warn");
			}
		},'json');
	}
	
	/*
	 * 获取评论的html
	 */
	/*
	 * 获取评论的html
	 */
	function getReplyHtml(pid,imgurl,name,comment,times,ding,cai,pcomment_info){
		if(!imgurl){
			imgurl = "/images/version2.0/center-icon.jpg";
		}

		var pcommentHtml="";
		var replyTagtt = "";

		if(pcomment_info != undefined && pcomment_info.length > 0)
		{
			pcomment_info = pcomment_info[0];
			pcommentHtml = "<dl class='comment padding-0'>"
				+"	    <dt>"
				+"		    <img src='"+pcomment_info.avatar+"'>"
				+"		    <img src='/images/version2.0/center-icon-cover-w.png' class='cover'>"
				+"	    </dt>"
				+"	    <dd>"
				+"         <div class='h-20 color-c size-14 line-h-20'>"
				+"             <span class='color-h size-16 line-h-20 float-l'>"+pcomment_info.nick_name+"</span>"
				+"             <span class='margin-l10 float-l'>"+pcomment_info.web_time_desc+"</span>"
				+"         </div>"
				+"         <div class='size-16 align-l line-h-22 padding-15 margin-t10 bg-b'>"
				+"             <p>"+pcomment_info.comment+"</p>"
				+"         </div>"
				+"	    </dd>"
				+ "</dl>";
		}

		if(pid != 'none')
		{
			replyTagtt =  "  <div class='float-r'>"
				+"               <a href='javascript:void(0)' onclick='DingOrCaiReply(this,true)' class='color-c'>顶（<span>"+ding+"</span>）</a>"
				+"               <span class='padding-l10 padding-r10'>|</span>"
				+"                <a href='javascript:void(0)' onclick='DingOrCaiReply(this,false)' class='color-c'>踩（<span>"+cai+"</span>）</a>"
				+"                <span class='padding-l10 padding-r10'>|</span>"
				+"                <a href='javascript:void(0)' onclick='replyReply(this)' class='color-c'>回复</a>"
				+"           </div>";
		}

		return "<dl id='"+pid+"' class='comment'>"
			+"	<dt>"
			+"		<img src='"+imgurl+"'>"
			+"		<img src='/images/version2.0/center-icon-cover-w.png' class='cover'>"
			+"	</dt>"
			+"	<dd>"
			+"      <div class='h-20 color-c size-14 line-h-20'>"
			+"           <span class='color-h size-16 line-h-20 float-l'>"+name+"</span>"
			+"           <span class='margin-l10 float-l'>"+times+"</span>"
			+               replyTagtt
			+"       </div>"
			+"       <div class='size-16 align-l line-h-22 padding-15 margin-t10 bg-b'>"
			+"            <p>"+comment+"</p>"
			+"           <div class='margin-t10 margin-b10 pid-comment-content'></div>"
			+             pcommentHtml
			+"       </div>"
			+"	</dd>"
			+"</dl>";
	}
	
	/*
	 * 回复文章
	 */
	function replyArtic(){
		var _url = "/contentcomment/comment.html"
		var _data = {};
		_data['content_id'] = _contentId;
		_data['comment'] = $("#replyArticForm").val();
		_data[_param] = _token;
		$.ajax({
			type: "POST",
		    url: _url,
		    data: _data,
		    success: function(data){
				data = eval('('+ data +')');
				switch(data.status){
					case 0:
						initAlert(data.msg,"","warn");
						break;
					case 1:
						console.log(data.data)
						$("#replyTitle").after(getReplyHtml(data.data.comment_id,data.data.userInfo.avatar,data.data.userInfo.nick_name,$("#replyArticForm").val(),"刚刚",0,0));
						$("#replyArticForm").val("");
						$("#comment_count").html(parseInt($("#comment_count").val()+1));
						if($("#no-comment").length > 0)
						{
							$("#no-comment").remove();
						}
						initAlert(data.msg,"","success");
						break;
				}
		    },
			error:function(){
				initAlert("系统或网络问题，请稍后再试！","","warn");
			}
		},'json');
	}
	
	/*
	 * 点击回复评论添加回复输入框
	 */
	function replyReply(obj){
		if(!isLogined()){
			initPop(400,360,'initLogin()');
			return false;
		}
		var _this = obj;
		if($("dl.comment").find(".replayform").length > 0){
			if($(_this).parents("dd:first").find(".replayform").length > 0){
				initAlert("您当前正在回复该评论！","","warn");
				return false;
			}
			initAlert("您有进行中的回复还没有完成！","","warn");
			return false;
		}
		$(_this).parents("dd:first").append("<div class='replayform'><textarea></textarea><span class='btn btn-c margin-l10'>取消</span><span onclick='replyReplySubmit(this)' class='btn btn-a'>回复</span></div>");
		$(_this).parents("dd:first").find(".replayform span:first").click(function(){
			$(this).parent().remove();
		});
	}
	
	/*
	 * 为评论点赞或差评
	 */
	function DingOrCaiReply(obj,isding){
		if(!isLogined()){
			initPop(400,360,'initLogin()');
			return false;
		}
		var _obj = $(obj);
		var pid = $(_obj).parents("dl:first").attr("id");
		var _url = "/contentcomment/dingcai.html"
		var _data = {};
		_data['content_id'] = _contentId;
		if(isding){
			_data['type'] = "ding";
		}else{
			_data['type'] = "cai";
		}
		_data['comment_id'] = $(obj).parents("dl:first").attr("id");
		_data[_param] = _token;
		$.ajax({
			type: "POST",
		    url: _url,
		    data: _data,
		    success: function(data){
				data = eval('('+ data +')');
				switch(data.status){
					case 0:
						initAlert(data.msg,"","warn");
						break;
					case 1:
						$(_obj).find("span").html(parseInt($(_obj).find("span").html())+1)
				}
		    },
			error:function(){
				initAlert("系统或网络问题，请稍后再试！","","warn");
			}
		},'json');
	}
	
