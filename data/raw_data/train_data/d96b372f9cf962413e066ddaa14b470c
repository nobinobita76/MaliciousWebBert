    var _fixsearch = $(".r-fixed").find("li.icon3");
    $(_fixsearch).click(function(){
        var _this = this;
        if($(_this).find("input:focus").length>0){
            return false;
        }
        if($(_this).hasClass("selected")){
            $(_this).find(".fix-search").animate({width:0,left:0},200,function(){
                $(_this).removeClass("selected");
                $(this).addClass("over-hidden");
            })
        }else{
            $(_this).addClass("selected");
            $(_this).find(".fix-search").animate({width:340,left:-340},200,function(){
                $(this).removeClass("over-hidden");
                $(_this).find("input").focus();
            })
        }
    });
    $(function(){
        //最近访问股票
        $.get("/site/ajaxstockhistory.html",function(data){
            if(data.status == 1)
            {
                $(".stock-view-history").html(data.data.html);
                var _marguee1 = $(".marquee").find("p");
                var _mw = $(_marguee1).width();
                var _boxw = $(".marquee").width();
                var _marquee2;
                var _left1 = _left2 = 0;
                var _speed = 30;
                var autoMarquee = function(){
                    _left1 = $(_marguee1).position().left;
                    _left2 = $(_marquee2).position().left;
                    if(_left1 == 0){
                        _left2 = _mw;
                    }
                    if(_left2 == 0){
                        _left1 = _mw;
                    }
                    $(_marguee1).css({left:_left1-1});
                    $(_marquee2).css({left:_left2-1});
                }
                if(_boxw<_mw){
                    var _marquee2 = $(_marguee1).clone();
                    $(_marguee1).after(_marquee2);
                    $(_marquee2).css({left:_mw});
                    _auto = setInterval(autoMarquee,_speed);
                    $(".marquee").mouseover(function(){
                        clearInterval(_auto);
                    });
                    $(".marquee").mouseout(function(){
                        _auto = setInterval(autoMarquee,_speed);
                    });
                }
            }
        },'json');

        //行情搜索处理
        //如果股票搜索未完全 则从列表的第一个作为默认，点击搜索就进入这支个股
        var _submitSecuHref = '';
        $(".stock-keywords").on('input focus propertychange',function() {
            //顶部行情搜索和数据大全搜索
            var _this = $(this);

            $.get("/site/searchsecu.html?keywords=" + $(this).val() + "&from=" + $(this).attr('data-from'), function (data) {
                if (data.status == 1) {
                    _this.parent().find(".search-result").html(data.data.html);
                    _submitSecuHref = _this.parent().find(".search-result").find('dd a:first-child').attr('href');
                }
                else {
                    initAlert(data.msg, "", "warn");
                }
            }, 'json');
        });

        //内页搜索开始初始化
        var _this = $(".stock-keywords");
        if(_this.val())
        {
            $.get("/site/searchsecu.html?keywords=" + _this.val() + "&from=" + _this.attr('data-from'), function (data) {
                if (data.status == 1) {
                    _this.parent().find(".search-result").html(data.data.html);
                    _submitSecuHref = _this.parent().find(".search-result").find('dd a:first-child').attr('href');
                }
                else {
                    initAlert(data.msg, "", "warn");
                }
            }, 'json');
        }

        //失去光标隐藏结果
        $(".stock-keywords").blur(function(){
            var _searchresult = $(this).parent().find(".search-result");
            setTimeout(function(){_searchresult.html('');},200);

            //左侧浮动搜索
            var _this = this;
            if($(_this).parent().hasClass("fix-search")){
                setTimeout(function(){
                    $(_this).parent().animate({width:0,left:0},200,function(){
                        $(_this).parents("li").removeClass("selected");
                        $(this).addClass("over-hidden");
                    })
                },200)
            }
        });

        $(".search-content,.search-stock").click(function(){
            if($(this).find(".stock-keywords").val()!='' && $("#search-form").attr('action') != '')
            {
                if($(this).hasClass('search-content'))
                {
                    $("#search-form").submit();
                }
                else
                {
                    var _centerHref = _submitSecuHref != '' && _submitSecuHref != undefined ? _submitSecuHref : 'http://stock.zhitongcaijing.com';
                    window.open(_centerHref);
                }
            }
        });
        (function(){
            var needLogin = 0;
            if(needLogin)
            {
                initPop(400,360,'initLogin()');
            }

        })();
        //字体切换
        $(".language").click(function(){
            var url = $(this).attr("url");
            $.get(url,function(data){
                location.reload(true);
            },'json')
        });
    });
</script> 
