	/*
	 * 提交回复评论
	 */
	function replyReplySubmit(obj){
		var pid = $(obj).parents("dl:first").attr("id");
		var _url = "/contentcomment/comment.html"
		var _data = {};
		if(!$("#"+pid).find("textarea").val()){
			initAlert("您未输入任何评论文字！","","warn");
			return false;
		}
		_data['content_id'] = _contentId;
		_data['comment'] = $("#"+pid).find("textarea").val();
		_data['pid'] = pid;
		_data[_param] = _token;
		$.ajax({
			type: "POST",
		    url: _url,
		    data: _data,
		    success: function(data){
				data = eval('('+ data +')');
				switch(data.status){
					case 0:
						initAlert(data.msg,"","warn");
						break;
					case 1:
						$("#"+pid).find(".pid-comment-content").after("<div class='margin-t10 margin-b10'></div>"+getReplyHtml("none",data.data.userInfo.avatar,data.data.userInfo.nick_name,_data.comment,"刚刚",0,0)+"</div>");
						$("#"+pid).find(".replayform").remove();
						initAlert(data.msg,"","success");
				}
		    },
			error:function(){
				initAlert("系统或网络问题，请稍后再试！","","warn");
			}
		},'json');
	}
	
	/*
	 * 实时行情
	 */
	function resetRightData(){
		$.get("/ajax/index.html",
			function(data){
				var _data;
				if(typeof(data) == "string"){
					_data = eval('('+ data +')').data;
				}else{
					_data = data.data;
				}
				var _html = "";
				for(var key in _data){
					if(_data[key].zde > 0){
						_html+="<li class='up'>";
					}else{
						_html+="<li class='down'>";
					}
					_html+="<span class='name'>"+_data[key].name+"</span>"
						+"	<span class='price'>"+_data[key].newPrice+"</span>"
						+"	<span class='updown'>"+parseFloat(_data[key].zde).toFixed(2)+"</span>"
						+"	<span class='updown'>"+(parseFloat(_data[key].zdf)*100).toFixed(2)+"%</span>"
						+"</li>";
				}
				$("#detailRightData").html(_html);
			}
		);
	}
	resetRightData();
	var rightDataInterval = setInterval("resetRightData()",10000);

	function getDetailCommon()
	{
		var _url = "/content/ajaxwebdetailcommon.html?content_id=45469";
		$.get(_url,function(data){
			if(data.status == 1)
			{
				$("#browse_count").html(data.data.browse_count);
				$("#comment_count").html(data.data.comment_count);
				$(".detail-relate").html(data.data.relateReadHtml);
				$(".detail-recommend").html(data.data.recommendHtml);
				$(".detail-gonggao").html(data.data.gonggaoHtml);
			}
		},'json');
	}
