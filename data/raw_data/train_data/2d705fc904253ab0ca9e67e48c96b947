	//大标题切换
	$('.menu li').click(function(){
		var index = $(this).index();
		$(this).addClass('add').siblings().removeClass('add');
		$(".tagCont>.tagbox").eq(index).addClass('add').siblings().removeClass('add');
		$(".showZh>.showzhbox").eq(index).addClass('add').siblings().removeClass('add');	
	});
	//小标题切换
	$('.chidMenu li').click(function(){
		var index = $(this).index();
		$(this).addClass('add').siblings().removeClass('add');
		$(this).parent().prev().children('.chidbox').eq(index).addClass('add').siblings().removeClass('add');

		//判断显示
		//xianFun(index+1);
	});
	//底部轮播
	var $centerwell_first = $('#centerwell li:first');
    	$centerwell_first.css({ width: '610px'});
    $('#centerwell li').click(function () {
        //if (!$(this).is(':animated')) {
            $(this).stop().animate({ width: '610px'}, 400).siblings().stop().animate({ width: '98px' }, 400);
        //}
    });

    //弹出层
    //白羽毛
	$('.byu').click(function(){
		showpop('bswBox');
	});
	//金羽毛
	$('.jyu').click(function(){
		showpop('jswBox');
	});

	//显示小框	
	scrShow('scrojdiv','scroj','-65');
	scrShow('scrosim','scroj','-55');
	///scrShow('scrbai','scrshuo','-98');
	//scrShow('scrjin','scrshuo','-138');

	function scrShow(w,n,c){
		$('.'+ w).hover(function(){
			$(this).children('.'+ n).stop().animate({ bottom: '0px'}, 200);
		},function(){
			$(this).children('.'+ n).stop().animate({ bottom: c +'px'}, 200);
		});
	}

	srcFade('scrjiny','scrshuoy');
	srcFade('scrbai','scrshuo');
	srcFade('scrjin','scrshuo');
	function srcFade(w,n){
	$('.'+w).hover(function(){
			$(this).children('.'+n).fadeIn();
		},function(){
			$(this).children('.'+n).fadeOut();
		});
	}


