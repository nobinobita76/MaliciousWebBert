var invite = 'invite.asp';
var invite_reward = 'invite_reward.asp';


function linFun(obg,i){
	$.getJSON(binvite_reward+'?Id='+i,function(ret){
        
        //console.log('新人='+JSON.stringify(ret));

    	if(ret.data.ok == '-1'){
    		alert(ret.msg);
        }else if(ret.data.ok == '-4'){
	        alert(ret.msg);
	    }else if(ret.data.ok == '2'){
	    	alert(ret.msg);
	    	$(obg).addClass('yilin');
	    }else if(ret.data.ok == '5'){
	    	alert(ret.msg);
	    }

    }); 	
}
function linFun1(obg,i){
	$.getJSON(invite_reward+'?Id='+i,function(ret){
        
        //console.log('邀请='+JSON.stringify(ret));

    	if(ret.data.ok == '-1'){
    		alert(ret.msg);
        }else if(ret.data.ok == '-4'){
	        alert(ret.msg);
	    }else if(ret.data.ok == '2'){
	    	alert(ret.msg);
	    	$(obg).addClass('yilin');
	    }else if(ret.data.ok == '5'){
	    	alert(ret.msg);
	    }

    }); 	
}


//登陆后页面加载执行
	var len = $('#one .chidbox').length;
	for (var i = 0; i < len; i++) {
		//console.log($('#one .acrBtn').parent().index());

		//console.log('i='+i);
		var j= i + 1;
		xianFun(j);
	};

	var len1 = $('#two .chidbox').length;
	for (var i = 0; i < len1; i++) {
		//console.log($('#one .acrBtn').parent().index());

		//console.log('i='+i);
		var j= i + 1;
		xianFun1(j);
	};
//-4不满足条件 1可领取 2领取成功 -6系统错误 -5已领取 -3入参错误 -1未登录
	function xianFun(i){

		var j = i-1;
		$.getJSON(binvite+'?Id='+i,function(ret){
	        //console.log('新人奖励='+JSON.stringify(ret));
	    	if(ret.data.ok == '-1'){
	    		//alert(ret.msg);
	        }else if(ret.data.ok == '1'){
	        	// 立即领取
	        	//$('#one>.chidbox').eq(j).find('.acrBtn').addClass("add");

	        }else if(ret.data.ok == '-5'){
	        	// 已领取
	        	$('#one>.chidbox').eq(j).find('.acrBtn').addClass("yilin");
	        }else if(ret.data.ok == '-4'){
	        	//不满足条件
	        	$('#one>.chidbox').eq(j).find('.acrBtn').addClass("add");
	        }
    	
    	});
	}

	function xianFun1(i){

		var j = i-1;
		$.getJSON(invite+'?Id='+i,function(ret){
	        //console.log('邀请奖励='+JSON.stringify(ret));
	    	if(ret.data.ok == '-1'){
	    		//alert(ret.msg);
	        }else if(ret.data.ok == '1'){
	        	// 立即领取
	        	//$('#one>.chidbox').eq(j).find('.acrBtn').addClass("add");

	        }else if(ret.data.ok == '-5'){
	        	// 已领取
	        	$('#two>.chidbox').eq(j).find('.acrBtn').addClass("yilin");
	        }else if(ret.data.ok == '-4'){
	        	//不满足条件
	        	$('#two>.chidbox').eq(j).find('.acrBtn').addClass("add");
	        }
    	
    	});
	}

//登陆后页面加载执行



