/*<![CDATA[*/
jQuery(function($) {

jQuery(document).on('click', '#yw0', function(){
	jQuery.ajax({
		url: "\/search\/captcha\/refresh\/1",
		dataType: 'json',
		cache: false,
		success: function(data) {
			jQuery('#yw0').attr('src', data['url']);
			jQuery('body').data('captcha.hash', [data['hash1'], data['hash2']]);
		}
	});
	return false;
});

});
/*]]>*/
</script>

