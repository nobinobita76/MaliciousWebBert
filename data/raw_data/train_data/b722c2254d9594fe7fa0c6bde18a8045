<script type="text/javascript">
$(document).ready(function(){
    //去除广告
    $('._ih').remove();
    
    $(".web-user-regist-btn").click(function(){ //快速注册提示内容
        layer.alert("注册方法：<br>发送您的昵称到 1069 0133 5235 6910 004，您会收到登录账号和密码；该账号密码还可以同时登录即时通讯工具“微邦”，实现与专家即时、私密的沟通交流。发送该短信不收信息费。 ");
    });
    $(".nav a.area-change").click(function(){
        var is_visiable = $('#org-select').is(':visible');
        if(is_visiable) {
            //如果是显示状态 关闭显示同时删除地区选择下拉列表
            $("#org-select").hide();
            $("#area-expert-select").children("select").remove();
        }
        else{
            var objLeft = $(this).offset().left;
            var objTop = $(this).offset().top;
            $("#org-select").attr({style: "left:"+(objLeft-260)+"px; top:"+(objTop+46)+"px;"});
            $("#org-select").show();
            $("#area-select-level").val(1);
            initSelect();
        }
    });
    $(".close-select-btn").click(function(){
        $("#org-select").hide();
        $("#area-expert-select").children("select").remove();
    });

    $("#area-change-btn").click(function(){
        var postData = $("#web-area-change").serialize();
        var select_area_id = $("#area-sel-1").val();
        if(typeof select_area_id != "undefined" && select_area_id == 25897) {
          window.open("http://www.gd12355.org", "_self");
          return;
        }
        $.ajax({
          url:"/ajax/changearea",
          dataType:"json",
          type:"POST",
          data:postData,
          success: function(data){
            //console.log(data);
            if(data.err==0){
              window.open(data.urlPc, "_self");
            }
          }
        });
    });

        //用户登录链接事件
    $(".user-login-link").click(function(){
        layer.open({
            type: 1,
            title: "请您登录",
            closeBtn: true,
            shadeClose: true,
            //skin: 'yourclass',
            area:['400px', '320px'],
            content: $('#user-login-alert'),
            success: function(layero, index){
                //console.log(layero, index);
                $("#user-login-alert-btn").unbind("click");
                $("#user-login-alert-btn").click(function(){ //用户登录ajax请求
                    var mobile = $("#user_mobile").val();
                    var pwd = $("#user_pwd").val();
                    var code = $("#user_code").val();
                    if(mobile==""){
                      layer.alert("请输入您的手机号");
                      return false;
                    }
                    if(pwd==""){
                      layer.alert("请输入您的密码");
                      return false;
                    }
                    if(code==""){
                      layer.alert("请输入验证码");
                      return false;
                    }
                    //console.log(1);
                    $.base64.utf8encode = true;
                    $("#user_pwd").val($.base64.btoa(pwd));
                    var d = $("#user-login-form-all").serialize();
                    // console.log(d);
                    // return false;
                    $.ajax({
                      url:"/ajax/login",
                      dataType:"json",
                      type:"POST",
                      data:d,
                      success: function(data){
                        //console.log(data);
                        if(data.err==0){
                          if(data.url!="") {
                            window.location.href = data.url;
                          }
                          else{
                            location.reload();
                          }
                        }
                        else {
                            $("#user_pwd").val("");
                            layer.alert(data.msg);
                        }
                      }
                    });
                });
                $(".user-none-notice a.regist").unbind("click");
                $(".user-none-notice a.reset").unbind("click");
                $(".user-none-notice a.regist").click(function(){ //快速注册提示内容
                    layer.alert("注册方法：<br>发送您的昵称到 1069 0133 5235 6910 004，您会收到登录账号和密码；该账号密码还可以同时登录即时通讯工具“微邦”，实现与专家即时、私密的沟通交流。发送该短信不收信息费。 ");
                });
                $(".user-none-notice a.reset").click(function(){ //重置密码
                    layer.alert("重置密码：<br>微邦用户请发送CZ到 1069 0133 5235 6910 007，您会收到登录账号和新密码，发送该短信不收信息费。腾讯QQ、新浪微博、微信用户请到对应的平台重置密码。 ");
                });
            }
        });
        return false;
    });
    
});
  
  /*用户地区选择*/
    function initSelect(){
    $.ajax({
      url:"/ajax/initselect",
      dataType:"json",
      type:"POST",
      data:{id:0},
      success: function(data){
        nextLevel = 1;
        if(data!=''){
          if(data!=''){
            var htmlTxt = '<option value="0">全国</option>';
            var idPre = "area-sel-"+nextLevel;
            $.each(data, function(k, v){
              htmlTxt += '<option value="'+v.id+'">'+v.name+'</option>';
            });
            htmlTxt = '<select id="'+idPre+'" name="area_sel['+nextLevel+']" opt-level="'+nextLevel+'" class="invite-sel">'+htmlTxt+'</select>';
            $("#area-expert-select").append(htmlTxt);
            $("#area-expert-select").children("select").unbind("change");
            $("#area-expert-select").children("select").bind("change", getChild);
          }
        }
      }
    });
  }
    /*用户地区选择*/

  function getChild(){
    var parentVal = $(this).val();

    var nextLevel = parseInt($(this).attr('opt-level'))+1;
    /*删除当前级别之后的下拉框*/
    for (var i = nextLevel; i <= 10; i++) {
      $("#area-sel-"+i).remove();
    }
    if(parentVal==0) {
      return;
    }

    var lastID = $("#area-sel-"+(nextLevel-2)).val();
    if(lastID==undefined){
      lastID = 0;
    }
    $.ajax({
      url:"/ajax/area",
      dataType:"json",
      type:"POST",
      data:{id:parentVal, level:(nextLevel-1), last:lastID},
      success: function(data){
        
        if(data!=''){
          //data = $.parseJSON(data);
          if(data!=''){
            var htmlTxt = '<option value="0">不限</option>';
            var idPre = "area-sel-"+nextLevel;
            $.each(data, function(k, v){
              htmlTxt += '<option value="'+v.id+'">'+v.name+'</option>';
            });
            htmlTxt = '<select id="'+idPre+'" name="area_sel['+nextLevel+']" opt-level="'+nextLevel+'" class="invite-sel">'+htmlTxt+'</select>';
            $("#area-expert-select").append(htmlTxt);
            $("#area-select-level").val(nextLevel);
            $("#area-expert-select").children("select").unbind("change");
            $("#area-expert-select").children("select").bind("change", getChild);
          }
        }
      }
    });
  }

