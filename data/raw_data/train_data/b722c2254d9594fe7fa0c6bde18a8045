<script type="text/javascript">
$(document).ready(function(){
  $(".RCcodeWrap .showpic").mouseenter(function(){
    var showID = $(this).attr("show-id");
    var relativePosition = $("#snsFixPannel").offset();
    if(showID!=""){
      $("#RCcodeShow .ReCodeShowPic").hide();
      $("#RCcodeShow #ReCodeShow_"+showID).show();
      $("#RCcodeShow").attr({"style":"top: "+parseInt(relativePosition.top)+"px; left: "+(parseInt(relativePosition.left)-150)+"px; display: block;"});
    }
  });
  $(".RCcodeWrap .showpic").mouseleave(function(){
      $("#RCcodeShow").hide();
  });

  $("#clickToTop").click(function(){  
    $('body,html').animate({scrollTop:0},100);  
    return false;  
  });

});
</script>
