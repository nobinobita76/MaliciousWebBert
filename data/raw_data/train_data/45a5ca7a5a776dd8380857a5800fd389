<script type="text/javascript">
function checkForm()
{
	if(document.frmSearch.keyword.value=='' || document.frmSearch.keyword.value=='输入关键字')
	{
		alert("请输入搜索关键字！");
		document.frmSearch.keyword.value='';
		document.frmSearch.keyword.focus();
		return false;
	}
}
</script>
<script type="text/javascript" language="javascript">
$(document).ready(function() {// do something here
	$(".search_video .search_input").mouseover(
		function()	{
			$(".search_video").addClass('search_video_over');
		}
	)
	$(".search_video .search_input").mouseout(
		function()	{
			$(".search_video").removeClass('search_video_over');
		}
	)
});
