        $(responseText).find('chan').each(function () {
            var xmlId = $(this).attr("id");
            var source = $(this).find("s").text(); //源素材
            var targetLink = $(this).find("c:eq(0)").text(); //目标链接
            var exposure = $(this).find("cc").text(); //曝光
            if (configsObject.start == xmlId) {
                startAd.source = source;
                startAd.targetLink = exposure + targetLink;
                startAd.targetLink = startAd.targetLink.replace('&v', '&random').replace(/&/g, '[]');
                if (source == '') {
                    startAd.targetLink = '';
                }
            }
