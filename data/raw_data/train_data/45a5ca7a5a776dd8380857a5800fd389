                pauseAd.source = source;
                pauseAd.targetLink = exposure + targetLink;
                pauseAd.targetLink = pauseAd.targetLink.replace('&v', '&random').replace(/&/g, '[]');
                if (source == '') {
                    pauseAd.targetLink = '';
                }
            }
        });
        setPlayer(startAd, pauseAd);
