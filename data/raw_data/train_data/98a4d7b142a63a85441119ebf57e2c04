//DateFormater.js
Date.prototype.Format = function(fmt)   
    { //author: meizz   
      var o = {   
        "M+" : this.getMonth()+1,                 //月份   
        "d+" : this.getDate(),                    //日   
        "h+" : this.getHours(),                   //小时   
        "m+" : this.getMinutes(),                 //分   
        "s+" : this.getSeconds(),                 //秒   
        "q+" : Math.floor((this.getMonth()+3)/3), //季度   
        "S"  : this.getMilliseconds()             //毫秒   
      };   
      if(/(y+)/.test(fmt))   
        fmt=fmt.replace(RegExp.$1, (this.getFullYear()+"").substr(4 - RegExp.$1.length));   
      for(var k in o)   
        if(new RegExp("("+ k +")").test(fmt))   
      fmt = fmt.replace(RegExp.$1, (RegExp.$1.length==1) ? (o[k]) : (("00"+ o[k]).substr((""+ o[k]).length)));   
      return fmt;   
    }
//BBS JavaScript
var bt=baidu.template;
var loginURL="/user/login?url=http%3A%2F%2Fm.tvoao.com%2Fnews%2F21421.html#pub";
var author = "";
var uc_uid = "";
$(function(){
	$(document).on("click",".comment_reply",function(){
		if(uc_uid){
			$(".reply_text").removeClass("red");
			if($(this).hasClass('reply')){
				$('.reply_box').hide();
				$(this).removeClass("reply").text('回复');
			} else {
				$('.reply_box').hide();
				$(this).parent().next().show();
				$('.comment_reply').removeClass("reply").text('回复');
				$(this).addClass("reply").text('取消回复');
			}
		} else {
			window.location=loginURL;
		}
	});
	$(document).on("click",".reply_box>i",function(){
		var tid = $(this).data("tid");
		var pid = $(this).data("pid");
		var authorid = $(this).data("authorid");
		var aid = "21421";
		var oTextarea = $(this).prev(".reply_text").find(".textarea");
		var reply = oTextarea.text();
		var bbsnum = parseInt($('#bbs_num').text());
		if($.trim(reply).length == 0){
			$(this).prev(".reply_text").addClass("red");
		} else {
			var _this = this;
			$.post("/forum/addpost.html",{tid: tid,message: reply,articleid: aid,parentid: pid,topid: pid,authorid: authorid},function(res){
				if(res == '1'){
					oTextarea.text('');
					$(_this).parent().next().prepend('<li><h3><span></span>'+author+'</h3><span>'+(new Date()).Format("yyyy-MM-dd hh:mm:ss")+'</span><p>'+html_encode(reply)+'</p></li>');
					$("#bbs_num").text(bbsnum+1);
				} else if(res == '-1') {
					$(_this).prev(".reply_text").addClass("red");
				} else if(res == '-2') {
					alert('您一分钟内不能重复提交！');
				} else if(res == '0'){
					window.location=loginURL;
				}
			});
		}
	});
	//发布新帖子
	$('.reply_text2 .textarea').on("focus",function(){
		if(!uc_uid){
			//window.location=loginURL;
		}
	});
	$('.reply_box2>i').on("click",function(){
		var oTextarea = $('.reply_text2').find('.textarea');
		var message = oTextarea.text();
		var bbsnum = parseInt($('#bbs_num').text());
		var subject = '德法院裁定YouTube要对用户上载侵权视频负责';
		var articleid = '21421';
		sessionStorage["thread"] = $.trim(message);

		if($.trim(message).length == 0){
			$('.reply_text2').addClass("red");
		} else {
			$('.reply_text2').removeClass("red");
			$.post("/forum/addthread.html",{'subject': subject, 'message': message, 'articleid': articleid, 'parentid': 0, 'topid': 0},function(res){
				if(res.msg == '1'){
					sessionStorage.removeItem("thread");
					var headpic = $('#headpic').val();
					var author = "";
					var dateline = res.data['dateline'];
					var tid = res.data['tid'];
					var pid = res.data['pid'];
					var data = null;
					var oData = {'headpic': headpic, 'author': author, 'dateline': dateline, 'message': message, 'tid': tid, 'pid': pid, 'data': data};
					var html=bt('infolist', oData);
					oTextarea.text('');
					$('#lists').prepend(html);
					$("#bbs_num").text(bbsnum+1);
				} else if(res == '-2') {
					alert('您一分钟内不能重复提交！');
				} else if(res.msg == '0'){
					window.location=loginURL;
				}
			});
		}
	});
});
