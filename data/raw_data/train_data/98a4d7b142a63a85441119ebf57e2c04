        oNav.style.left= 0;
    },false);
    oMenuOff.addEventListener('click',function(){
        oNav.style.WebkitTransition ='0.5s all ease';
        oNav.style.left= '-'+9.3+'rem';
    },false);
    oBox.addEventListener('click',function(){
        oNav.style.WebkitTransition ='0.5s all ease';
        oNav.style.left= '-'+9.3+'rem';
