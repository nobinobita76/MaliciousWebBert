$(function(){
	var aid = "21421";
	$("#load").html('<div class="loading-new" style="display:none;" id="loading-new"><span><i></i>正在加载...</span></div>');
	$.get("/forum/threadlist/num/5",{'aid': aid},function(result){
		$("#load").html('');
		if(result && result.length>0){
			for(var i=0;i<result.length;i++){
				var html=bt('infolist',result[i]);
				$("#lists").append(html);
			}
		}
	},'json');

	if(document.referrer.indexOf('login?url')>-1 && sessionStorage["thread"]){
		$('.reply_text2 .textarea').text(sessionStorage["thread"]);
		$('.reply_box2>i').click();
		sessionStorage.removeItem("thread");
	} else {
		sessionStorage.removeItem("thread");
	}
});
