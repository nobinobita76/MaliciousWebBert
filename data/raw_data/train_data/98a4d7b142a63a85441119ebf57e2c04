//删除数组中一个元素
Array.prototype.remove = function(val) {
var index = this.indexOf(val);
if (index > -1) {
this.splice(index, 1);
}
};
var j=1;
var arrays = new Array();
var string_leng = $("#vote p[class='vote_title']").length;
$("#vote p[class='vote_title']").each(function(){
  if($(this).next("input[id='num"+j+"']").val()==0){
       var  len=  $("#option_list"+j+" li").length;
       $("#option_list"+j+" li span").each(function(){
       
       
         $(this).parent().find("p").click(function(){
         
         
           
           $(this).parent().find("span").click();
         
         
         });
       
       
         //单选框选择
          $(this).click(function(){
               var str_n = $(this).parent().attr("name");
               $(this).attr("class","checkimg on");
               //单选检查认证赋值
             $("#"+$(this).parent().parent().prev("input").attr("id")).val($(this).attr("id"));
             var szs ='';
             var szs1='';
             for(var z=1;z<=string_leng;z++){
                if(szs){
                   if($("#check"+z).val()){
                      szs+="_"+$("#check"+z).val();
                      szs1+=","+$("#check"+z).val();
                   }
                
                }else{
                    
                  if($("#check"+z).val()){
                      szs=$("#check"+z).val();
                      szs1=$("#check"+z).val();
                   }
                }
               
             }
            // alert(szs.split(","));
            var chengdu = szs.split("_");
             if(chengdu.length==string_leng){
                  $("#start_toupiao_e").remove();
                 $("#start_toupiao").attr("class","vote_btn3");
                 //$("#start_toupiao").html("<a  style='color:#ffa147' href=javascript:aa('"+szs1+"');>投票</a>");
                 $("#start_toupiao").html("<a  style='color:#ffffff' href=javascript:aa('"+szs1+"');>投票1</a>");
              }else{
                $("#start_toupiao").html("<p class='vote_btn' id='start_toupiao' onclick='alertTip();'>投票</p>");
              
              }
               //alert($("#"+$(this).parent().parent().prev("input").attr("id")).val());
              for(var i=1;i<=len;i++){
                 if(str_n!=i){
                   $(this).parent().parent().find("li[name='"+i+"']").find("span").attr("class","checkimg");
                 }
              }
          
          });
                 
           
       });
      
   
   }
   if($(this).next("input[id='num"+j+"']").val()==1){
       
       var get_str = new Array();
        //多选
       $("#option_list"+j+" li span").each(function(){
         $(this).parent().find("p").click(function(){
           $(this).parent().find("span").click();
         
         });
       
         $(this).click(function(){
         
           if($(this).attr("class")=="checkimg"){
              $(this).attr("class","checkimg on");
             // alert($(this).attr("id"));
              get_str.push($(this).attr("id"));
           }else{
             get_str.remove($(this).attr("id"));
             $(this).attr("class","checkimg");
           }
            
            var str_ii = get_str.join();
            //alert(str_ii);
            $("#"+$(this).parent().parent().prev("input").attr("id")).val(str_ii);
             var szs ='';
             var szs1='';
             for(var z=1;z<=string_leng;z++){
                
                if(szs){
                   if($("#check"+z).val()){
                      szs+="_"+$("#check"+z).val();
                      szs1+=","+$("#check"+z).val();
                   }
                
                }else{
                    
                  if($("#check"+z).val()){
                      szs=$("#check"+z).val();
                      szs1=$("#check"+z).val();
                   }
                }
               
             }
             var chengdu = szs.split("_");
              if(chengdu.length==string_leng){
                //  $("#start_toupiao_e").remove();
                 $("#start_toupiao").attr("class","vote_btn3");
                 $("#start_toupiao").html("<a  style='color:#ffffff' href=javascript:aa('"+szs1+"');>投票</a>");
              }else{
                 $("#start_toupiao").html("<p class='vote_btn' id='start_toupiao' onclick='alertTip();'>投票</p>");
              }
         
         });
         
         
       });
   
   }
    
  j++;

});

//投票

function aa(vals){
  //判断用户是否登录
     var pid='21421';
     var vote_id='';
      $.ajax({
			url: "/Checkvote/toupiao",
			data: {voteid:vote_id,parentid:pid,id:vals},
			type: "POST",
			dataType: "json",
			success: function (data) { 
			 if(data=="ok"){
			   alert("投票成功！");
			   location.href="/news/21421.html";
			 }
			
			}
			
		});
  
}
