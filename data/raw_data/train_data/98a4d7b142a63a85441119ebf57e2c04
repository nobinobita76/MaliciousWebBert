(function(){
	var oSearchnav=document.querySelector('#search_nav');
	var oSearchBtn=document.querySelector('.searchbtn');
	var oSearchOff=document.querySelector('.searchoff');
	var oNav2 = document.querySelector('#left_nav');


    var wW = $(window).width();
    oSearchnav.style.left = wW+'px';
    oSearchnav.style.display = 'block';

    oSearchBtn.addEventListener('click',function(){

        // show search bar
		oSearchnav.style.WebkitTransition ='1s all ease';
        oSearchnav.style.left=0;
		oNav2.style.WebkitTransition ='0.5s all ease';
        oNav2.style.left= '-'+9.3+'rem';

        //$('#container').hide();
        //$(window).scrollTop(0);
    },false);
	oSearchOff.addEventListener('click',function(){
        // hide search bar
		oSearchnav.style.WebkitTransition ='1s all ease';
        oSearchnav.style.left = wW+'px';
       // $('#container').show();
    },false);
}());
