    <script>
        jQuery(document).ready(function () {
            LoadToken();
        });
        function GetData(url, data, callBack) {
            jQuery.ajax({
                type: "post",
                async: true,
                url: url,
                data: data,
                dataType: "json",
                success: function (data) {
                    callBack(data);
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("error");
                    LoadToken();
                }
            });
        }

        jQuery("#aid-cre-form").submit(function (e) {
            GetData(jQuery(this).attr("action"), jQuery(this).serialize(), function (data) {
                callBack(this.id, data);
            });
            return false;
        });


        function callBack(form, data) {
            if (data.type == "alert") {
                alert(data.message);
                //jQuery("#padder1").show();
                //jQuery("#p").val("");
            }
            else if (data.type == "jump") {
                window.location.href = data.message;
            }
            else if (data.type == "none") {
                //jQuery("#padder1").show();
            }
            LoadToken();
        }

        function LoadToken() {
            jQuery("#Token").load('/Home/Token/');
        }
    </script>



