  <script>
window.wendaDigg =function(ansid){
  ba_event("Digg","From_Answer");
  var _dom = this;
  http({
      url: location.protocol+"//wenda.toutiao.com/wenda/web/commit/digg/",
      method: 'get',
      data: {
          ansid:ansid
      },
      type: 'jsonp',
      success: function(rs) {
        if(rs.err_no==0){
          addClass(_dom,"answer-like like"); 
          var _c = _dom.getElementsByTagName('span')[0];
          var count = parseInt(_c.innerText);
          _c.innerText = (count+1);
        }else{
          riot.mount('#toast', 'toast', {
             msg: rs.err_tips
           });
        }
      }
  });
}
window.wendaBury =function(ansid){
  ba_event("Bury","From_Answer");
  var _dom = this;
  http({
      url: location.protocol+"//wenda.toutiao.com/wenda/web/commit/bury/",
      method: 'get',
      data: {
          ansid:ansid
      },
      type: 'jsonp',
      success: function(rs) {
        if(rs.err_no==0){
          addClass(_dom,"answer-dislike dislike"); 
        }else{
           riot.mount('#toast', 'toast', {
             msg: rs.err_tips
           });
        }
      }
  });
}

function addClass(obj, cls){
  var obj_class = obj.className,
  blank = (obj_class != '') ? ' ' : '';
  added = obj_class + blank + cls;
  obj.className = added;
}
 
function removeClass(obj, cls){
  var obj_class = ' '+obj.className+' ';
  obj_class = obj_class.replace(/(\s+)/gi, ' '),
  removed = obj_class.replace(' '+cls+' ', ' ');
  removed = removed.replace(/(^\s+)|(\s+$)/g, '');
  obj.className = removed;
}
 
function hasClass(obj, cls){
  var obj_class = obj.className,
  obj_class_lst = obj_class.split(/\s+/);
  x = 0;
  for(x in obj_class_lst) {
    if(obj_class_lst[x] == cls) {
      return true;
    }
  }
  return false;
}
