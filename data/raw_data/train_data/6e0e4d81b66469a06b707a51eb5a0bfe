			<script>
    			$("#packageB_p_Detail").on("pagebeforeshow",function(){
    				//16.06.17 thh 提交后重新访问有问题，重新存session 
      			    getParam('packageB_p');
    			});
				$('#packageB_p_Detail').on('pageshow',function(){
					phoneDetailView.init();
				});
				//详情页
				var phoneDetailView = {
				    isLoginIn:'N',		//实名制修改 2016.5.16 thh 判断是否登录
					//sessionStorage数据
					data : {},
					cardInfo : {},
					packageInfo : {},					//接口信息			
					paymentInfo : {},					//预存
					//页面初始化
					init:function(){
					    //判断是否登录，否则执行销售品 
						if(isNull(packageB_p.data.sessionid)){							
							this.ticketLogin(packageB_p.data.ticket || '');
						}else{
						  this.reLoad();
						}						
					},
					//登陆
					ticketLogin:function(tickets){
						var paramLogin = {
							ticket : tickets,
							sessionid : ""
						}
						doAjax('ticketLoginPB',paramLogin,function(data){
							if(data.headerInfo.code == 'W_0000'){
								if(data.responseContent.serviceCode == '0'){
									packageB_p.data.sessionid = data.responseContent.sessionid;
									packageB_p.data.userId = data.responseContent.userId;
									if(!isNull(data.responseContent.isLoginIn)){
									    phoneDetailView.isLoginIn = data.responseContent.isLoginIn; //登录Y 不登陆 N
									}
									packageB_p.data.isLoginIn = phoneDetailView.isLoginIn;		  //登录Y 不登陆 N
									packageB_p.setData();									phoneDetailView.reLoad();
								}else{
									packageB_p.to404(data);
								}
							}else{
								//登录接口失败跳转错误页
								packageB_p.to404(data);
							}
						},function(data){
							//登录接口失败跳转错误页
							packageB_p.to404(data);
						},function(data){
							//登录接口失败跳转错误页
							packageB_p.to404(data);
						},true,true,packageB_p.loadError);
					},
					//切换销售品
					reLoad : function(id){
						if(id){
							packageB_p.data.salesid = id;
							delete packageB_p.data.cardType;
							delete packageB_p.data.provinceInfo;
							delete packageB_p.data.payMentType;
							delete packageB_p.data.packageType;
							delete packageB_p.data.salesInfo;
							delete packageB_p.data.numberInfo;
							packageB_p.setData();
						}
						//加载销售品详情
						this.loadProduct();
						/* 选套 */
						this.getSpec();
						//绑定页面事件
						this.onFun();
						/* 选卡 */
						this.selectCard();
					},
					//绘制销售品
					drawSalesInfo : function(data){
						var _this = this;
						//初始化轮播
						_this.initCarousel(data.photoAlbums);						
						//初始化销售品信息
						var detailInfo = $('.detail_information');
						detailInfo.children('h3').html(data.salesProdName);								//销售品名称
						//销售品优惠信息
						if(!isNull(data.salesProdDisInfo)){
							detailInfo.children('p:first').html(data.salesProdDisInfo);
						}else{
							detailInfo.children('p:first').html('');
						}	
						//判断是否缺货
						if(data.stock <= 0){
							$('#detailSubmitBtn').html('缺货').addClass('detail_que').off();
						}else{
							$('#detailSubmitBtn').html('立即购买').removeClass('detail_que').addEventFun(function(){
								_this.createOrder();
							});
						}
						//初始化赠品信息
						var gifts = [];
						$.each(data.gifts,function(i,n){
							gifts.push($('<li>',{html:'<span class="detail_zeng">赠</span>'+n.name}));
						});
						$('#detailZenginfo').html(gifts);
					},
					//绘制规格组 (套餐)
					drawSpec : function(data){
						return $('<li>',{
							data:data,
							html:data.specValue,
							class:(data.pid == packageB_p.data.salesid) ? 'select_package' : '',
							click:function(){
								$(this).addClass('select_package').siblings().removeClass('select_package');
								$('#detailErrTip').hide();
								if($(this).data().pid != packageB_p.data.salesid){
									phoneDetailView.reLoad($(this).data().pid);
								}
							}
						});
					},
					//加载销售品
					loadProduct : function(){
						var _this = this;//页面对象
						var param = {
							sessionid : packageB_p.data.sessionid || '',
							salesproductid : packageB_p.data.salesid || ''
						};
						doAjax('getSalesDetailPB',param,function(data){
							if(data.headerInfo.code == 'W_0000'){
								if(data.responseContent.serviceCode == '0'){
									delete data.responseContent.serviceCode;
									delete data.responseContent.serviceMessage;
									
									packageB_p.data.salesInfo = data.responseContent;
									packageB_p.setData();
									/* 选预存 */
									phoneDetailView.selectPayment();
									_this.drawSalesInfo(data.responseContent);
								}else{
									packageB_p.to404(data);
								}
							}else{
								packageB_p.to404(data);
							}
						},function(data){
							packageB_p.to404(data);
						},function(data){
							packageB_p.to404(data);
						},true,true,packageB_p.loadError);
					},
					//获取规格组
					getSpec : function(){
						var _this = this;//页面对象
						var param = {
							sessionid : packageB_p.data.sessionid || '',
							salesproductid :packageB_p.data.salesid || ''
						};
						doAjax('getSpecPB',param,function(data){
							if(data.headerInfo.code == 'W_0000'){
								if(data.responseContent.serviceCode == '0'){
									phoneDetailView.count ++;
									delete data.responseContent.serviceCode;
									delete data.responseContent.serviceMessage;
									packageB_p.data.packageInfo = data.responseContent.dataList;
									packageB_p.setData();
									var packageType = [];
									if(packageB_p.data.packageInfo.length >0){
										$('.selectPackage').show();
										$.each(packageB_p.data.packageInfo,function(i,n){
											packageType.push(_this.drawSpec(n));
										});
										$('.package').html(packageType);
									}else{
										$('.selectPackage').hide();
									}
								}else{
									packageB_p.to404(data);
								}
							}else{
								packageB_p.to404(data);
							}
						},function(data){
							packageB_p.to404(data);
						},function(data){
							packageB_p.to404(data);
						},true,true,packageB_p.loadError);
					},
					//初始化轮播
					initCarousel : function(data){
							var _this = this;
							var opt = {
								target:$('#phoneDetailCarousel'),
								data:data,
								autoRun:false,
								stepFun:function(action){
									_this.carousel.culPoint(action,$('#detailLunboPoint>ul'));
								},
								pointMove:false
							};
							_this.carousel = new Carousel(opt);
							var html = "";
							$('#'+_this.carousel.getId()).append(html); 
							$('#detailLunboPoint').html($('#phoneDetailCarousel .wap_bannerPoint'));
					},
					//初始化套餐选择情况
					initSelect : function(){
						//手机号码
						var pn = '';
						if(packageB_p.data.numberInfo && packageB_p.data.numberInfo.phoneNumber){
							pn = packageB_p.data.numberInfo.phoneNumber.slice(0,3)+' '+packageB_p.data.numberInfo.phoneNumber.slice(3,7)+' '+packageB_p.data.numberInfo.phoneNumber.slice(-4);
						}
						$('#detailSelectNumber span:first').html(pn);
						var salesProdDisPrice = (packageB_p.data.salesInfo && packageB_p.data.salesInfo.salesProdDisPrice)?parseFloat(packageB_p.data.salesInfo.salesProdDisPrice):0;
						var selectPrepay = (packageB_p.data.payMentType && packageB_p.data.payMentType.amount)?parseInt(packageB_p.data.payMentType.amount):0;
						var numPrepay = (packageB_p.data.numberInfo && packageB_p.data.numberInfo.prepayMent)?parseInt(packageB_p.data.numberInfo.prepayMent):0;
						var price = selectPrepay + numPrepay + salesProdDisPrice;
						//话费价格
						$('.detail_information>.detail_information_p>span:first>b').html(price);
						//$('.detail_information>.detail_information_p>span:last').html('（包含'+price+'元话费）');
					},
					//初始化详情
					initDetail : function(salesProdPicInfo,ggcs,gwts){
						var deDiv = $('#detailDetailTag');
						deDiv.children('div:eq(0)').html(salesProdPicInfo);
						deDiv.children('div:eq(1)').html(ggcs);
						deDiv.children('div:eq(2)').html(gwts);
						$('#detailDetail>li').addEventFun(function(){
							$(this).addClass('detail_sgg_avtive').siblings().removeClass('detail_sgg_avtive');
							deDiv.children('div:eq('+$(this).index()+')').show().siblings().hide();
						});
						$('#detailDetail>li:first').addClass('detail_sgg_avtive').click();
					},
					//创建订单锁
					createLock : false,
					//创建订单
					createOrder : function(){
						$('#detailErrTip').hide();
						var phonenumber = (packageB_p.data.numberInfo && packageB_p.data.numberInfo.phoneNumber) ? packageB_p.data.numberInfo.phoneNumber : '';
						if($.isEmptyObject(packageB_p.data.numberInfo) || isNull(phonenumber)){
							$('#detailErrTip').html(packageB_p.errTip.e025.tip).show();
							return false;
						}
						var _this = this;														    //页面对象
						if(_this.createLock){
							return false;
						}else{
							_this.createLock = true;
						}
						/* 预存、卡号、套餐 */
						packageB_p.data.cardType = $('#packageB_p_Detail .select_card').data();
						//packageB_p.data.payMentType = $('#packageB_p_Detail .select_payment').data();
						packageB_p.data.packageType = $('#packageB_p_Detail .select_package').data();
						var param = {
								sessionid : packageB_p.data.sessionid,
								shopid : packageB_p.data.shopid || '20001',						  																//shopid 分销渠道
								shop : packageB_p.data.shop || '',									  															//shop 店铺id
								shopCode : packageB_p.data.salesInfo.shopCode,																					//shopCode （店铺id当shop为空取shopCode）
								salesProdId : packageB_p.data.salesid,								  															//销售品id
								uimType : ((packageB_p.data.cardType && packageB_p.data.cardType.code)?packageB_p.data.cardType.code:''), 						//号卡id
								cashSalesProdId: (packageB_p.data.payMentType && packageB_p.data.payMentType.code) ? packageB_p.data.payMentType.code : '',		//现金预存包ID
								phoneNumber: packageB_p.data.numberInfo.phoneNumber || ''			  //手机号码
						};
						doAjax('createOrderCloudCardPB',param,function(data){
							_this.createLock = false;
							if(data.headerInfo.code == 'W_0000'){									//实名制修改 2016.5.16 zms 跳转公共页面
								packageB_p.data.orderInfo = {
									orderId:data.responseContent.orderId,                   		//订单id
									realPrice:data.responseContent.realPrice,               		//订单价格
									prestoreAmount:data.responseContent.prestoreAmount      		//预存金额
								};
								if(packageB_p.data.salesInfo.newProcess == 'Y'){					//改版实名制  B(newProcess==“Y”新流程=="N"以前的流程)2016.7.31 thh
									packageB_p.setData();
									changePage('../packageB_p/packageB_pOrder.html');
								}else{
								    packageB_p.data.netInfoChange = {
											submit_url : '../packageB_p/packageB_pOrder.html',  		//提交订单页						
											netInfo_url : '../publicPages/uploadPic.html',	    		//公共 上传身份证
											wapUpload_url : '/pc/packageBWapUpload.do'					//wap上传
									};
								    var packageB_pUrl = '';
									if(data.responseContent.isOldUser == 'Y'){							//老用户
										packageB_p.data.orderInfo.customerName = data.responseContent.customerName;
										packageB_pUrl = 'identityCheck';								
									}else{
										packageB_p.data.buyUserType = 'N';								//新用户
										packageB_pUrl = 'uploadPic';
									}
									delete packageB_p.data.netInfo;											//生产订单成功，清空图片上传信息
									packageB_p.setData();
									window.location.href = "../publicPages/"+packageB_pUrl+".html?obj=packageB_p";		//跳转
									$('body').find("#loginWait").remove();
									
								}
							}else{
								$('#detailErrTip').html(data.headerInfo.message).show();
							}
						},function(data){
							_this.createLock = false;
							packageB_p.to404(data);
						},function(data){
							_this.createLock = false;
							packageB_p.to404(data);
						},true,true);
					},
					//跳转至选号
					toNumber : function(){
						$('#detailErrTip').hide();
						changePage('../packageB_p/packageB_p_select_number.html');
					},
					//页面绑定事件
					onFun:function(){
						var _this = this;
						$('#detailShowHide').addEventFun(function(){
							//初始化图文详情  购物须知：data.gwts 单套餐没有
							if(!$('#detailDetailTag').children('div:eq(0)').html().length>0){
								_this.initDetail(packageB_p.data.salesInfo.salesProdPicInfo,packageB_p.data.salesInfo.gwts,"");
							}
							$('#detail_sgg').toggle();
							var status = $(this).data().status;
							if(status){
								status = false;
								$(this).css('margin-bottom','0').children('img:last').attr('src','http://image2.chinatelecom-ec.com/client/wap/common/images/arrow_top.png').parent().next().css('margin-bottom','5rem');
							}else{
								status = true;
								$(this).css('margin-bottom','5rem').children('img:last').attr('src','http://image2.chinatelecom-ec.com/client/wap/common/images/arrow_down.png').parent().next().css('margin-bottom','0');
							}
							$(this).data({status : status});
						}).data({status : true});
						$('#detailSelectNumber').addEventFun(function(){
							_this.toNumber();
						});
						$('#phoneDetailCarousel').off('click').on('click','#detailCarLeft',function(){
							_this.carousel.swipe('right');
						}).on('click','#detailCarRight',function(){
							_this.carousel.swipe('left');
						});
					},
					selectCard : function(){
						var _this = this;
						//号卡请求
						var param = {
							sessionid : packageB_p.data.sessionid || '',
							salesproductid : packageB_p.data.salesid || ''
						};
						doAjax('getCardTypePB',param, function(data){
							if(data.headerInfo.code == 'W_0000' && data.responseContent.serviceCode == '0'){
								data = data.responseContent.uimTypes;
								if(data.length > 0){
									$('.selectCard').show();
									var cardTypes = [];
									$.each(data,function(i,n){
										cardTypes.push(_this.initBtn(n));
									});
									$('.card').html(cardTypes);       					  		//显示选卡信息       
									$('.card li:first').addClass('select_card');    		    //默认选择第一个显示的卡
								}else{
									$('.selectCard').hide();									
								}
							}else{
								$('#detailErrTip').html(data.responseContent.serviceMessage).show();
							}
						}, function(data){
							$('#detailErrTip').html(packageB_p.errTip.e000.tip).show();
						}, function(data){
							$('#detailErrTip').html(packageB_p.errTip.e000.tip).show();
						},true,true);
					},
					selectPayment : function(){
						var _this = this;
						//预存款
						param = {
							sessionid : packageB_p.data.sessionid || '',
							salesproductid : packageB_p.data.salesid || ''
						};
						doAjax('getPrestoresPB', param, function(data){
							if(data.headerInfo.code == 'W_0000' && data.responseContent.serviceCode == '0'){
								data = data.responseContent;
								if(data.prestores.length>0){
									$('.selectPayment').show();
									var depositNums = [];
									$.each(data.prestores,function(i,n){
										depositNums.push(_this.initBtns(n));
									});
									$('.payment').html(depositNums);  						//显示页面信息
									packageB_p.data.payMentType = $('#packageB_p_Detail .select_payment').data();
									packageB_p.setData();
									$('#packageB_p_Detail .select_payment').click(); 		//click 用来计算价格
								}else{
									phoneDetailView.initSelect();
									$('.selectPayment').hide();								//用调用来计算价格
								}
							}else{
								$('#detailErrTip').html(data.responseContent.serviceMessage).show();
							}
						}, function(data){
							$('#detailErrTip').html(packageB_p.errTip.e000.tip).show();
						}, function(data){
							$('#detailErrTip').html(packageB_p.errTip.e000.tip).show();
						},true,true); 
					},
					//初始化号卡
					initBtn : function(data){
						return $('<li>',{
							data:data,
							html:data.name,
							class:(data.default) ? 'select_card' : '',
							click:function(){
								$(this).addClass('select_card').siblings().removeClass('select_card');
							}
						});
					},
					//初始化预存款
					initBtns : function(data){
						return $('<li>',{
							data:data,
							html:data.name,
							class:(data.default) ? 'select_payment' : '',
							click:function(){
								$(this).addClass('select_payment').siblings().removeClass('select_payment');
								packageB_p.data.payMentType = $('#packageB_p_Detail .select_payment').data();
								packageB_p.setData();
								phoneDetailView.initSelect();
							}
						});
					}/* ,
					areaQueryByShopid : function(){
						var param = {
							sessionid : packageB_p.data.sessionid || '',
							shopcode : packageB_p.data.salesInfo.shopCode
						};
						doAjax('areaQueryByShopid',param,function(data){
							if(data.headerInfo.code == 'W_0000'){
								if(data.responseContent.serviceCode == '0'){
									delete data.responseContent.serviceCode;
									delete data.responseContent.serviceMessage;
									packageB_p.data.provinceInfo = data.responseContent;
									packageB_p.setData();
									changePage('../packageB_p/packageB_p_select_number.html');
								}else{
									packageB_p.to404(data);
								}
							}else{
								packageB_p.to404(data);
							}
						},function(data){
							packageB_p.to404(data);
						},function(data){
							packageB_p.to404(data);
						},true,true,packageB_p.loadError);
					} */
				};
			</script>
