//判断是否为动态密码用户
function validIsDynPassUser(){
	var username = document.getElementById("username").value;	
	if(null != username && "" != username){
		$.ajax({			
			url: "/sso/validDysPasswordUser?username=" + username,
			type:"POST",
			async:false,
			//data: formData,
            dataType:"html",
		    error: function(){
		    	alert("判断是否为动态密码用户失败！");
		    },
			success: function(data){				
				if("Y" == data){
					isDyn = true;
					$("#normal").hide();
					$("#dynpass").show();
				}else{
					$("#dynpass").hide();
					$("#normal").show();
				}
	        }
		    });
	}
}

function changePwd()
{
	var url = "http://sso.chinagasholdings.com:8080/ekp/sys/organization/sys_org_person/sysOrgPerson_chgmypwd_sso.jsp";
	window.open(url);
}

function changeMyPwd(){	
	var username = document.getElementById("username").value;
	var password = document.getElementById("password").value;
	if("pass123" == password && !isDyn){
	  var url = "http://sso.chinagasholdings.com:8080/ekp/sys/organization/sys_org_person/chgPersonInfo.do?method=chgMyPwd&username=" + username;
	  window.open(url);
	  return false;
	}
	return true;
}


