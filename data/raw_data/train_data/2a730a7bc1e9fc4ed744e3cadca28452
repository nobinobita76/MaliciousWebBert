var article_id = 314292;

$("#set_excellent").attr('rel', '1').html('将此篇文章设为精华文章');

// 设置精华文章按钮操作
$.get('/?m=article&a=isshow_excellent_button', function(data){
if( data == 1 ){
var lock = 0;
$("#set_excellent").show().click(function(){
if( lock ){return;}
var type = $(this).attr('rel'),
text = $("#set_excellent").html();
lock = 1;
$("#set_excellent").html('正在发送请求...');
$.ajax({
type:'POST',
url: '/?m=article&a=set_excellent',
data: {article_id:article_id, type:type},
dataType:'json',
cache:false,
timeout: 10000,
success: function(obj){
if( obj.error == 0 ){
if(type == 1){
$(".ico_jing").show();
setTimeout(function(){
$("#set_excellent").attr('rel', '0').html('取消此篇文章的精华状态');
}, 60000);
$("#set_excellent").html('设置成功。因缓存原因会延迟几分钟生效');
}else{
$(".ico_jing").hide();
setTimeout(function(){
$("#set_excellent").attr('rel', '1').html('将此篇文章设为精华文章');
}, 60000);
$("#set_excellent").html('设置成功。因缓存原因会延迟几分钟生效');
}
}else{
alert(obj.msg);
}
},
error: function(xhr, status){
//alert(status);
if( status == 'parsererror' ){
$("#set_excellent").html('数据解析错误');
}else if( status == 'timeout' ){
$("#set_excellent").html('网络连接超时');
}else if( status == 'error' ){
$("#set_excellent").html('遇到未知错误');
}
setTimeout(function(){
$("#set_excellent").html(text);
}, 2000);
},
complete: function(){
lock = 0;
}
});
return false;
});
}
});

// 获取名誉行家列表
$.get('/?m=user&a=get_roleer', function(obj){
if( typeof obj == 'object' ){
var user, tpl = $("#reputation_expert_tpl").html(), html;
for(var i in obj){
user = obj[i];
html = tpl;
html = html.replace(/\[uid\]/g, user.uid);
html = html.replace(/\[userimg\]/g, '<img src="'+user.userimg+'"/>');
html = html.replace(/\[username\]/g, user.username);
html = html.replace(/\[desc\]/g, user.desc);
$("#reputation_expert_tpl").after(html);
}
}
},'json');

var imgs = $(".wrap2").find(".nw_cot img");
imgs.each(function(){
var o=$(this), src=o.attr('src'), width = o.attr("width");
if(width > 600){
//修改之前620宽的图片为600像素
o.width(600);
o.parents("div.img_c_620").css("width", 600).width(600);
}

if( src.indexOf("att.baike.com")>0 && !o.closest('a').size() ){
//图片来自att.baike.com，并且没有链接
src = src.replace(/_(s|f|140|950)/, '');
src = src.replace(/\.(jpg|png|gif)/, '_950.$1');
o.wrap('<a href="'+ src +'" target="_blank"></a>');
}
});
var uidlist = [];
$("cite[ming]").each(function(){
var uid = $(this).attr('ming');
if( $.inArray(uid, uidlist) < 0 ){
uidlist.push(uid);
}
});
if( uidlist.length ){
$.get('/?m=article&a=reputation_expert', {uidlist:uidlist}, function(obj){
if(typeof obj == "object"){
for(var uid in obj){
if( obj[uid] ){
$("cite[ming="+uid+"]").show();
}
}
}
},'json');
}

