		    btnPAPlayStop_d2_268760501_2a20_PSlider_.onclick=parPlaySlide_d2_268760501_2a20_PSlider_;
        }
        
        function parNextSlide_d2_268760501_2a20_PSlider_() //NEXT
        {
           
		    parSlideIndex_d2_268760501_2a20_PSlider_%=3;
