             function DoSearchForEnterkey_d2_268760501_2a21(e)
             {
                var ev = window.event|| e;
                if (ev.keyCode == 13) {SearchInSite_d2_268760501_2a21() };
              }
             function SearchInSite_d2_268760501_2a21()
             {
               var obj =document.getElementById('txtKeyword_d2_268760501_2a21');
               var objType = document.getElementById('sel_d2_268760501_2a21');
               var objHidden =document.getElementById('hfSM_d2_268760501_2a21');
               var strUrl ='_d8.htm';
               var strParameter;
               if(strUrl.indexOf('.htm')== strUrl.length-4)
               {
                 strParameter ="?";
               }
               else
               {
                 strParameter ="&";
               }
               
               if(objType!=null)
               {
                 strParameter += "t="+objType.value;
               }
               if(objHidden!=null && objHidden.value!='')
               {
                 if(strParameter.indexOf('&')!= strParameter.length-1)
                 {
                   strParameter += "&";
                 }
                 strParameter += "m="+escape(objHidden.value);
               }
               if(obj!=null && $.trim(obj.value) !='')
               { 
                 if(strParameter.indexOf('&')!= strParameter.length-1)
                 {
                   strParameter += "&";
                 }
                 strParameter += "k="+encodeURIComponent(obj.value);
               }
               else
               {
                 alert('请输入关键词！');
                 return;
               }
              mynet_openLinkTop(strUrl+strParameter);
            }
