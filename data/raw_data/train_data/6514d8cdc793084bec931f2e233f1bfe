        var parSlideIndex_d2_268760501_2a20_PSlider_=0;
        var parSlidePlay_d2_268760501_2a20_PSlider_=true;
        var parSlideCount_d2_268760501_2a20_PSlider_=0;
        var parSlideInterval_d2_268760501_2a20_PSlider_=1000;
