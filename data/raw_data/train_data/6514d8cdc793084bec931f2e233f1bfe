                  <td class="style6">
                   <div align="left">
                    <div id="divPreviewImg" style="padding:0px 10px 10px 0px;float:left;"> 
                    </div> 
                    <script type="text/javascript">
var divPreviewImg = document.getElementById("divPreviewImg");
