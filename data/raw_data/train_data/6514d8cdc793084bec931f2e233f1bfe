function ShowComments(index)
{
    var commentsListDIV = document.getElementById("commentsListDIV");
   var addCommentDiv = document.getElementById("addCommentDiv"); 
    if(index == 0)
    {   
        commentsListDIV.style.display = "block"; 
        addCommentDiv.style.display = "none";
    } 
    else
    {
        commentsListDIV.style.display = "none"; 
        addCommentDiv.style.display = "block"; 
    }  
}
