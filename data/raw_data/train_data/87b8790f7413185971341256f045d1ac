    $(function () {
        $('.Nav_Muent ul li').each(function (i) {
            $(this).hover(function () {
                $(this).addClass('Curt').siblings().removeClass('Curt');
                $('.TabCont>div:eq(' + i + ')').show().siblings().hide();
            });
        });

        $("#sxd").click(function () {
            Util.window.Show($("#sxdInfo").html(), "随心贷", "立即申请", function(){window.location='https://cs.my089.com/Borrow/CreditApplication'},null);
        });

        $("#Problem dl").each(function (i) {
            this.id = "dl_" + i;
            $('#Problem dl#dl_1').css('margin-left', '45px');
            $('#Problem dl#dl_2').css('float', 'right');
        });
    });
