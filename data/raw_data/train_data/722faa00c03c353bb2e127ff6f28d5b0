     <script>
	seajs.use(["jquery","widget/commit/index","widget/face/index","kkpage/index","pagination/jqpg-index","fileUpload/index","validate/index","uploader/topic-uploadimg","widget/login/dialog-login","widget/showpicbox/picshow"],function(JQ,commit,messageFacePic,kkpager,jqpage,myFileUpload,myValidate,uploadimg){
		new jqpage('[node-type="jqpagin"]');
		new kkpager("#kkpager");
		//发布新话题点击事件
		commit.init(".js-commont-do",{
			resetComForm:function(obj){
				JQ(obj.element).find(".js-upload").each(function(){
					JQ(this).data("topicUploader").allReset();
				});
				
				JQ('[name="picUrl"]').val("");
				JQ('[name="fileUrl"]').val("");
				JQ("#topic_post .fileimages-content").html("");
				JQ('#topic_post .upimages-content').html("");
			},
			textareaFocus:function(){
			}
			
		});
		new messageFacePic('.js-add-face');
		JQ("#newTopic").click(
			function(){
				location.href = "/posting.shtml?teamId="+59; 
			}
		);
		JQ(document).delegate(".deleteReply","ajax:success",function(e,data){
			if(data.msg == "success"){
				
				JQ(this).closest(".media").remove();
			}else{
				Renhe.alert("您没有权限进行该操作！");
			}
		})
		
		JQ("#joinTeam").on("ajax:success",function(e,data){
			if(data.msg == "noLogin"){
				// 请先登录
				 showLogin();
			}
			else if(data.msg == "audit"){
				Renhe.alert("您已提交入圈申请");
			}
			else if(data.msg == "joinedTeam"){
				//您已经是本小组成员了，请勿重复加入
				Renhe.alert("您已经是本圈子成员了，请勿重复加入");
			}
			else if(data.msg == "no"){
				//该小组为实名小组，您需要通过实名认证才能申请加入
                Renhe.alert("该圈子为实名圈子，您需要通过实名认证才能申请加入！<a href='http://www.renhe.cn/tuiguang/?showSelfHelp=true'>点此认证</a>");
			}
			else if(data.msg == "payMemberNo"){
				//该小组为高级会员小组，您需要升级到付费会员才能申请加入。
				
				Renhe.alert({content : "该圈子为高级会员圈子，您需要升级到付费会员才能申请加入。<br /><br /><p align='center'><a class='btn-red' href='http://www.renhe.cn/vip/' target='_blank'>马上升级付费会员</a></p>", showOKButton : false,  width : 350});
				return false;
			}
			
			else if(data.msg == "yes"){
				location.href="/joinTeam.shtml?operation=join&teamId="+data.teamId;
			}
			
			else if (data.msg == "0"){
				Renhe.alert("您的账号还未审核！");
			}
			
			else if(data.msg == "declined") {
				Renhe.alert("您的账号审核不通过！");
			}
		})
		
		JQ(".operation").on("ajax:success",function(e,data){
			
			if(data.msg=="success"){
				JQ(this).hide().siblings(".operation").show();
			}
			
		})
		new myValidate("#myForm");
		
		function msetData(vars){
    		var picUrlArr = [];
    		JQ.each(vars.uploadData,function(i,item){
    			picUrlArr.push(item.url)
    		})
    		JQ('[name="picUrl"]').val(picUrlArr.join(','))
    	}
		myFileUpload(".js-fileupload",{
    		maxfile:9,
    		uploadDone:msetData,
    		delDone:msetData
    	});
		new uploadimg(".js-upload",{
    		callback:function(d,ups){
    			if(ups.options.filetType=="image"){
    				var el = JQ('[name="picUrl"]');
    			}else{
    				var el = JQ('[name="fileUrl"]');
    			}
    			el.val(d.join(","))
    		}
    	});
		
		var chat=null;
		$(".chat").on("ajax:send",function(){
			chat = Renhe.popop('<div class="well well-large well-transparent lead"><i class="icon-spinner icon-spin icon-2x pull-left"></i> 正则创建，请耐心等待...</div>',{title:'正在创建..',buttons:null,closeText: ""})
		})
		$(".chat").on("ajax:success",function(e,data){
			chat.dialog("close");
			if(data.success){
				$('<div action-type="show-chat" data-cid="'+data.imConversationId+'" style="display:none"></div>').appendTo("body").trigger('click');

			}else{
				Renhe.alert(data.msg);
			}
		})
	})
</script> 
