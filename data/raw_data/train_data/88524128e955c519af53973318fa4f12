  <script language="javascript">
		function swap(pre, prebt, css,start, end, index) {
			//alert(css);
			for (i = start; i <= end; i++) {
				if (document.getElementById(pre + i) && document.getElementById(prebt + i)) {
					if (i == index) {
						document.getElementById(pre + i).style.display = "";
						//document.getElementById(prebt + i).style.background = "#ffffff";
						//document.getElementById(prebt + i).style.color = "#000000";
						document.getElementById(prebt + i).className=css+"_selected";
						//alert(index);
					}
					else {
						document.getElementById(pre + i).style.display = "none";
						//document.getElementById(prebt + i).style.background = "#000000";
						//document.getElementById(prebt + i).style.color = "#ffffff";
						document.getElementById(prebt + i).className=css+"_init";
						//alert(index);
					}
				}
			}
			return true;
		}

