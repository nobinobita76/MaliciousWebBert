		}
	}
	else{

	if(nCurrIndex == 0){
		document.write(num(_nPageCount, _nCurrIndex, _sPageName, _sPageExt));
		document.write("<a target='_self' style='font-size:10.5pt;color:#007355;text-decoration:none;' href=\""+_sPageName+"_" + (nCurrIndex+1) + "."+_sPageExt+"\">【下一页】</a>&nbsp;");
		}
	else if (nCurrIndex == 1){
		document.write("<a target='_self' style='font-size:10.5pt;color:#007355;text-decoration:none;' href=\""+_sPageName+"."+_sPageExt+"\">【上一页】</a>&nbsp;");
