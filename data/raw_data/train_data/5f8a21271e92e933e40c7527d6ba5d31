<script type="text/javascript">
    $(function () {
        //var bd_width = $(window).width();
        var bd_width = parseInt(document.body.clientWidth);
        if (isNaN(bd_width) || bd_width <= 0) {
            bd_width = parseInt(document.documentElement.clientWidth);
        }

        $(".article iframe,.article embed").each(function (i, n) {
            var i_width = getAttValue($(this), "width");
            var i_height = getAttValue($(this), "height");
            if (i_width > 0 && i_height > 0) {
                if (!isNaN(bd_width) && bd_width > 20) {
                    var all_width = bd_width - 20;
                    var all_height = parseInt((i_height / i_width) * all_width);
                    $(this).css({ "width": all_width + "px" });
                    $(this).css({ "height": all_height + "px" });
                }
            }
            $(this).show().css({ "display": "block" });
        });

        if ($("#youku_TGBus").length > 0) {
            var total = 0;
            var timer = window.setInterval(function () {
                total++;
                if ($("#youku_TGBus").width() != 0) {
                    $("#youku_TGBus").css({ "width": (bd_width - 20) + "px", "height": (bd_width - 20) * 0.58 + "px" });
                    window.clearInterval(timer);
                }
                else if (total == 100) {
                    window.clearInterval(timer);
                }
            }, 70);
        }

        function getAttValue(objdom, attname) {
            var itemvalue = objdom.attr(attname);
            if (itemvalue == "") {
                itemvalue = objdom.css(attname);
            }
            if (itemvalue != "" && itemvalue != "100%") {
                itemvalue = parseInt(itemvalue);
                if (!isNaN(itemvalue)) {
                    return itemvalue;
                }
            }

            return 0;
        }


    });
</script>
