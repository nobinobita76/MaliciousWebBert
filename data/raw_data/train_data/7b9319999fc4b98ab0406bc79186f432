<script type="text/javascript">
    (function (doc, win) {
        var docEl = document.getElementsByTagName("html")[0];
        var bodyEl = document.getElementsByTagName("body")[0];
        var obj = { 320:1, 360:1, 375:1, 400:1, 414:1, 440:1, 480:1
                    , 520:1, 560:1, 600:1, 640:1, 680:1, 720:1
                    , 760:1, 800:1, 960:1, 1440:1
                  }
        // if(obj[docEl.clientWidth]) {
        //     return;
        // }
        resizeEvt = 'orientationchange' in window ? 'orientationchange' : 'resize',
        recalc = function () {
            var maxWidth = $Le && $Le.Config && $Le.Config.pageMaxWidth ? $Le.Config.pageMaxWidth : 640;
            var clientWidth = docEl.clientWidth > maxWidth ? maxWidth : docEl.clientWidth || 1200;
            var pcMinWidth = 640;
            docEl.removeAttribute("style");
            bodyEl.removeAttribute("style");
            if(bodyEl.className == "mobile"){
                
                if(docEl.clientWidth > pcMinWidth){
                    // bodyEl.style.minWidth =  1200 + 'px';
//                    bodyEl.className = "pc";
                }else if(docEl.clientWidth < 320) {
//                    bodyEl.className = "pc";
                    docEl.style.fontSize =  320/10 + 'px';
                    bodyEl.style.minWidth =  320 + 'px';
                }else {
                    // console.log(3333, "320 ~ 640")
//                    bodyEl.className = "pc";
                    docEl.style.fontSize =  clientWidth/10 + 'px';
                    bodyEl.style.maxWidth =  clientWidth + 'px';
                }

            }
            
       
//            bodyEl.className = "mobile";
            
            // if (!clientWidth) return;
            if(docEl.clientWidth > 640) {
                docEl.style.fontSize =  640/10 + 'px';
                // bodyEl.style.width =  640 + 'px';

            }else if(docEl.clientWidth < 320) {
                docEl.style.fontSize =  320/10 + 'px';
                bodyEl.style.minWidth =  320 + 'px';
            }else {
                docEl.style.fontSize =  clientWidth/10 + 'px';
                bodyEl.style.maxWidth =  clientWidth + 'px';
            }

        };
        recalc();
        if (!doc.addEventListener) return;
        win.addEventListener(resizeEvt, recalc, false);
        doc.addEventListener('DOMContentLoaded', recalc, false);
    })(document, window);    
</script>
