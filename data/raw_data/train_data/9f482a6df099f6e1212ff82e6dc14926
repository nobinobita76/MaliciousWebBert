  <script type="text/javascript">
      $(document).ready(function() {

          initFollow();
          getFollowCount();
          //鼠标上移效果
          $(".follow_success").mouseover(function(){
              $(".follow_success").hide();
              $(".follow_cancel").show();
          });
          $(".follow_cancel").mouseout(function(){
			  if($('.follow_add').is(':hidden')){
              $(".follow_success").show();
              }
              $(".follow_cancel").hide();
          });
      });

      function getFollowCount(){
          $.ajax({
              type: "GET",
              url: "http://mingjia.cngold.org/expert/1413627/2/subscribe/6199/countAjax.htm?_="+new Date(),
              data: "" ,
              dataType: 'json',
              cache: false,
              success: function (data) {
                  if (data.flag) {
                      $(".followCount").html(data.data);
    					$("#fans").html(data.data);
                  }

              }
          });
      }

      function initFollow(){

          var id = getCookieLoginName('IDENTITY');
          if(id==""){
              $(".follow_add").show();
          }else{
              $.ajax({
                  type: "GET",
                  url: "http://mingjia.cngold.org/expert/"+id+"/2/subscribe/6199/ajax.htm?_="+new Date(),
                  data: "" ,
                  dataType: 'json',
                  cache: false,
                  success: function (data) {
                      if (data.flag) {
                          if(data.data){
                              $(".follow_success").show();
                          }else{
                              $(".follow_add").show();
                          }
                      } else {
                          $(".follow_add").show();
                      }

                  }
              });

          }
      }

      function follow(type){
          var id = getCookieLoginName('IDENTITY');
          if(id==""){
              window.location.href='//passport2.cngold.org/?service='+window.location.href;
          }else{
              if(type==1){
                  addFollow();
              }else if(type==0){
                  deleteFollow();
              }


          }
      }

      function addFollow(){
          var id = getCookieLoginName('IDENTITY');
          $.ajax({
              type: "GET",
              url: "http://mingjia.cngold.org/expert/"+id+"/2/subscribe/6199/add.htm?_="+new Date(),
              data: "" ,
              dataType: 'json',
              cache: false,
              success: function (data) {
                  if (data.flag) {
                      $(".follow_success").show();
                      $(".follow_add").hide();
                      $(".follow_cancel").hide();
                      getFollowCount();
                  }

              }
          });
      }

      function deleteFollow(){
          var id = getCookieLoginName('IDENTITY');
          $.ajax({
              type: "GET",
              url: "http://mingjia.cngold.org/expert/"+id+"/2/subscribe/6199/del.htm?_="+new Date(),
              data: "" ,
              dataType: 'json',
              cache: false,
              success: function (data) {
                  if (data.flag) {
                      $(".follow_add").show();
                      $(".follow_success").hide();
                      $(".follow_cancel").hide();
                      getFollowCount();
                  }

              }
          });
      }


      function getCookieLoginName(objName){
        if(!objName){
            objName="USER"
        }
        var arrStr = document.cookie.split("; ");
        for(var i = 0;i < arrStr.length;i ++){
            var cookieStr = decodeURIComponent(arrStr[i]);
            var temp = cookieStr.split("=");
            if(temp[0] == objName)
                return unescape(temp[1]);
        }
        return "";
    }


  </script>
