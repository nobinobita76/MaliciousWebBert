alert("评论内容不能为空!");
$("#talk-con").focus();
break;
case 0:
alert("评论成功，谢谢参与!");
window.location.reload();
break;
}
}, "json");
});
$(document).ajaxStart(function() {
__onSubmit = true;
});
$(document).ajaxComplete(function() {
__onSubmit = false;
});
_get_famoustfs();
$("#followBtn").bind("click",function(){
var _follow_users='';
$("#famousTF :input[name='userID']").each(function(i){
if(i !== 1)
_follow_users += $(this).val()+'@';
else
_follow_users = $(this).val();
});
$.getJSON("http://plus.kdslife.com/user/follow_batch/?callback=?", { toUserNames: _follow_users }, function(data){
switch (data) {
case -3 :
alert("您还未登录哦~亲~");
break;
case -1 :
alert("您已关注此人，去山上看看吧~");
break;
case -2 :
case 1 :
alert("关注成功！去山上看看吧~");
break;
}
});
});
