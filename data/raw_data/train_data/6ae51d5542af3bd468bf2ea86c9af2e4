<script type="text/javascript">
$(document).ready(function(){
    GPage.loadpage('text', vurl + "&_hmt_cn=" + _hmt_cn);
	if($.cookie('tips'+'14173')!=null&&$.cookie('tips'+'14173')!=''){
		$(".add").hide();
	}
	$(".hu").click(function(){
		$.cookie("tips"+'14173',"hide",{expires:1, path: '/'});
		$(".add").slideToggle();
	});

	$("#pretermitbtn").hover(function(){
		$("#pretermitoption").stop().fadeIn(300);
	},function(){
		$("#pretermitoption").stop().fadeOut(300);
	})
	$("#pretermitbtn").click(function(){
		$("#text p").css({
			"font-size":"16px",
			"line-height":"42px",
		});
		$("#textbg").css("background","#faf9f5")
	})
	$("#bg").click(function(){
		$("#bgoption").stop().fadeIn(300);
	})
	$("#bg").mouseleave(function(){
		$("#bgoption").stop().fadeOut(300);
	})
	
	$("#bgoption ul li").on("click", function(){
		var _this = $(this);
		var _thisColor = _this.attr("bg-cr");
		$("#textbg").css("background-color", "#"+_thisColor);
	})
	
	$("#font").click(function(){
		$("#fontoption").stop().fadeIn(300);
	})
	$("#font").mouseleave(function(){
		$("#fontoption").stop().fadeOut(300);
	})
	
	$("#fontoption ul li").on("click", function(){
		var _this = $(this);
		var _thisFont = _this.attr("size");
		$("#text p").css("font-size", _thisFont+"px");
	})
	
	$("#fontoption ul li").on("click", function(){
		var _this = $(this);
		var _thisLineh = _this.attr("line-h");
		$("#text p").css("line-height", _thisLineh+"px");
	})
	
	
	function bodyScroll(){
		var body_height = parseInt($("body").scrollTop());
		var change = 5;
		var change_height = body_height+change;
		$("body").scrollTop(change_height);
	}
	
	$("#auto_scroll").on("click",function(){
		var autoRead = setInterval(bodyScroll,400);
		$(window).on("keypress",function(e){
			e.preventDefault();
			if(e.keyCode==32){
				clearInterval(autoRead);
			}
		})
	})
	
	$("#auto_scroll").hover(function(){
		$("#rollingoption").stop().fadeIn(300);
	},function(){
		$("#rollingoption").stop().fadeOut(300);
	})
});
</script>

