   $(function(){
    // 评论提交
    $("#form_submit").click(function(){
      var Txt=$("#comment-text").val();
      if(Txt==0){
        $("#msg1").show();
        $("#msg1").text("评论不能为空")
        setTimeout(function(){
         $("#msg1").hide()
       },1000);
        return false ;
      }else {
       $("#msg").show();
       $("#msg").text("已发表成功") ;
       setTimeout(function(){
         $("#msg").hide()
       },1000);
        $.ajax({
          url: $(this).parent("form").attr("action"),
          data: $(this).parent("form").serialize(),
          type: 'POST',
        })
        $(this).parent("form").find("#comment-text").val("")
      }
    })
   //判断是否有显示评论
   $(".comment-ul").each(function(){
     var liLen=$(this).find("li") ;
     if(liLen.length>0){
      $(".comment-more").hide();
     }else {
      $(".comment-more").show();
     }
   })
  })
