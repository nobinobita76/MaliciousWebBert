<script>
    function closeWindow(){
        if($.browser.msie){ // IE
            window.close();
        }
        else{ // chrome,firefox无法通过js关闭浏览器，暂时归类成chrome
            window.opener=null;
            window.open('','_self');
            window.close();
        }
    }
</script>

