<script>
$(function(){

    // setTimeout(function(){
    //     $('#username').click();
    //     $('#password').click();
    //     document.getElementById('form_data').reset();
    // }, 1000);

    $('input[type=text], input[type=password]').on('click', function(){
        $(this).addClass('border_blue');
    })
    $('input[type=text], input[type=password]').on('blur', function(){
        $(this).removeClass('border_blue');
    })

    $('input[name=phone], input[name=email]').on('blur', function(){
        var type =$(this).data('type');
        var name = $(this).val();

        var warn_dom = type == 'phone' ? $('#phone_data') : $('#email_data');
        warn_dom = warn_dom.find('.warn_tip_name');

        $.ajax({
            url: '/api/check_regname',
            type: 'POST',
            data: {type: type, name: name},
            dataType: 'json',
            success: function(data){
                if(data.status == 0){
                    warn_dom.text('');
                }else{
                    warn_dom.text(data.msg);
                }
            }
        })

    });

    $('input[name=password], input[name=re_password]').on('blur', function(){
        var type = $(this).data('type');

        var warn_dom = type == 'phone' ? $('#phone_data') : $('#email_data');
        warn_dom = warn_dom.find('.warn_tip_pwd');

        if(type == 'phone' && ($('.phone_pwd').val() != $('.phone_pwd2').val()) ){
            warn_dom.text('密码不一致');
        }else if(type == 'email' && ($('.email_pwd').val() != $('.email_pwd2').val()) ){
            warn_dom.text('密码不一致');
        }else{
            warn_dom.text('');
        }
    })


    $('.phone_form_change').click(function(){
        $('#email_data').hide();
        $('#phone_data').show();
        $('#form_type').val('phone');

        $('.email_form_change').removeClass('curr');
        $('.phone_form_change').addClass('curr');

        $('.warn_tip').text('');
    })
    $('.email_form_change').click(function(){
        $('#phone_data').hide();
        $('#email_data').show();
        $('#form_type').val('email');

        $('.phone_form_change').removeClass('curr');
        $('.email_form_change').addClass('curr');

        $('.warn_tip').text('');
    })

    var can_click1 = false;
    // vcode
    $(document).on('click', ".get_phone_vcode", function(){
        var _this = $(this);

        var tu_vcode = $("input[name=tu_vcode]").val();
        if(tu_vcode == '')
        {
            alert('请输入图形验证码');
            return false;
        }

        var phone = $("input[name=phone]").val();
        var pattern_phone = /^1[34578]\d{9}$/;
        if(phone == '')
        {
            alert('请输入手机号码');
            return false;
        }
        if(!pattern_phone.test(phone))
        {
            alert('手机号码格式不正确');
            return false;
        }

        if(can_click1) return false;
        can_click1 = true;

        $.ajax({
            url: '/api/voice',
            type: 'POST',
            data: {phone: phone, tu_vcode:tu_vcode, vcode_type: 'reg'},
            dataType: 'json',
            success: function(data){
                if(data.status != 0)
                {
                    alert(data.msg);
                    can_click1 = false;
                }else{
                    timer_cls(60, '.get_phone_vcode');
                    _this.removeClass('vcode_btn');
                    _this.addClass('vcode_btn_disable');
                }

                setTimeout(function(){
                    can_click1 = false;
                    _this.removeClass('vcode_btn_disable');
                    _this.addClass('vcode_btn');
                }, 59.5 * 1000);
            }
        });
    });


    var can_click2 = false;
    // vcode
    $(document).on('click', ".get_email_vcode", function(){
        var _this = $(this);

        var email = $("input[name=email]").val();
        var pattern_phone = /^(([0-9a-zA-Z]+)|([0-9a-zA-Z]+[_.0-9a-zA-Z-]*[0-9a-zA-Z-]+))+@([a-zA-Z0-9_-])+((\.[a-zA-Z0-9_-]{2,3}){1,2})$/;


        if(email == '')
        {
            alert('请输入邮箱地址');
            return false;
        }
        if(!pattern_phone.test(email))
        {
            alert('邮箱地址格式不正确');
            return false;
        }

        if(can_click2) return false;
        can_click2 = true;

        $.ajax({
            url: '/api/sendEmail',
            type: 'POST',
            data: {email: email, vcode_type: 'reg'},
            dataType: 'json',
            success: function(data){
                if(data.status != 0)
                {
                    alert(data.msg);
                }else{
                    timer_cls(60, '.get_email_vcode');
                    _this.removeClass('vcode_btn');
                    _this.addClass('vcode_btn_disable');
                }

                setTimeout(function(){
                    can_click2 = false;
                    _this.removeClass('vcode_btn_disable');
                    _this.addClass('vcode_btn');
                }, 59.5 * 1000);
            }
        });
    });

    $('.reg_form').on('submit', function(){

        var warn_tip = $('.warn_tip').text();
        // if(warn_tip) return false;

        var form_type = $('#form_type').val();
        var data = $('#'+form_type+'_data').serialize();

        $.ajax({
            url: '/member/reg',
            type: 'POST',
            data: data,
            dataType: 'json',
            success: function(data){

                var _data = data;

                if(data.status == 0){
                    // location.href = data.url;

                    $.ajax({
                        url: "http://www.ji7.com/api/sso_sign?t=bbs.ji7.com",
                        type: 'GET',
                        async: false,
                        dataType: 'text',
                        success: function(url){
                            
                            $.ajax({
                                url: url,
                                type: 'GET',
                                async: false,
                                dataType: 'jsonp',
                                success: function(data){
                                    location.href = _data.url;
                                }
                            })

                        }
                    })
                
                }else if(data.status == 100){
                    alert(data.msg);
                }else{
                    $('.warn_tip').text(data.msg);
//                     alert(data.msg);
                }
            }
        })

        return false;
    })
})

</script>



