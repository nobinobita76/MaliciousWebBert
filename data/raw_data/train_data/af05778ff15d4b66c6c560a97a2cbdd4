			obj.focus();
			var len = obj.value.length;
		    if (document.selection) {
		        var sel = obj.createTextRange();
		        sel.moveStart('character',len);
		        sel.collapse();
		        sel.select();
		    } else if (typeof obj.selectionStart == 'number' && typeof obj.selectionEnd == 'number') {
		        obj.selectionStart = obj.selectionEnd = len;
		    }
		}
	
	}
	//判断是否为空
	function checkIsnull(str){
		var reg = /^\s*$/;
		var result = str.match(reg);
		if(result){return true;}else{return false;}
	}
	function dosubmit(){
		var uid 		= '0';
		var username 	= '';
		var content  	= document.getElementById('textarea1').value;
		var fid      	= '37';
		var tid      	= '2826766';
		var subject     = '电话绑架骗局 大家要提高警惕转告家人';
		var dateline    = '1247826740';
		var image_path 	= 0;
		if(undefined  == pid && undefined  == floor){
			var apid = 0;
			var afloor = 0;
		}else{
			var apid      = pid;
			var afloor    = floor;
		}
		if(checkIsnull(content)){
			alert('回复内容不能为空!');
			return;	
		}
		$.ajax({
			url :'/ajax/wapnew.php?hf=1&m='+Math.random() ,
			type : 'post',
			dataType : "json",
			data : {'uid':uid,'username':username,'content':content,'fid':fid,'tid':tid,'image_path':image_path,'pid':apid,'floor':"16",'receiveuid':receiveuid,'subject':subject,'dateline':dateline},
			success : function(result){
				if( result.code == 1){
					alert('回复成功!');
					window.location.href = "http://m.55bbs.com/bbs_2826766_2/";
					//document.getElementById('textarea1').value ='';
					return;
				}else if(result.code == 2 ){
					alert('回复失败!');return;
				}else if(result.code == 3){
					alert('该帖已关闭!');return;
				}else if(result.code == 4){
					alert('您已经被禁言!');return;
				}
			}
		});
	}
