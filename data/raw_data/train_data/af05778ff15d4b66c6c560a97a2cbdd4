		document.querySelector('.header .search').addEventListener('click',function(){
    		if(search_flog){
    			document.querySelector('.header .hd_bottom').style.display = 'block';
    			search_flog = false;
    		}else{
    			document.querySelector('.header .hd_bottom').style.display = 'none';
    			search_flog = true;
    		}
    	},false);
		// 清除搜索框
		document.querySelector('.search_box .s_txt').onfocus = function(){
			document.querySelector('.search_box .s_txt').oninput = function(){
				if(document.querySelector('.search_box .s_txt').value != ''){
					document.querySelector('.search_box .clear_btn').style.display = 'block';
				}else{
					document.querySelector('.search_box .clear_btn').style.display = 'none';
				}
			}
		}
		document.querySelector('.search_box .clear_btn').onclick = function(){
			document.querySelector('.search_box .s_txt').value = '';
			document.querySelector('.search_box .clear_btn').style.display = 'none';
			document.getElementById("searchContent").focus();
		}
	}catch(e){}
</script> 
