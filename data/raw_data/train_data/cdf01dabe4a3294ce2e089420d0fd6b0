  <script>
 

function CheckOrder()
{
	var telephone   = $("#telephone").val();
	var goodnum   = $("#goodnum").val();
	var goodpw   = $("#goodpw").val();
    if(telephone==''){
    	alert("亲电话不能为空");
    	return false;
    }
      
      if (!telephone) {
      alert("手机号不能为空！");
      return false;
      }
      var reg = /(1[3-9]\d{9}$)/;
      if (!reg.test(telephone))
      {
      	alert("请输入正确格式的手机号码！");
      	return false;
      }
 

    
     if(goodnum=='' ){
    	alert("亲购买数量不能为空");
    	return false;
    }
    
    
    return  ture;
    //$("#gpform").submit();
	
}
</script> 
  <script>
jQuery(document).ready(function($) {
	$('.theme-poptit .close').click(function(){
		//alert(123);
		$('.theme-popover-mask').fadeOut(100);
		$('.theme-popover').slideUp(200);
		$('.theme-popovers').slideUp(200);
	})
})
    function huodong(id,cid){
    	var login = "";
    	if(login !=''){
    		$('.theme-popover-mask').fadeIn(100);
		    $('.theme-popover').slideDown(200);
		    $('#aid').attr('value',id);
		    $('#cid').attr('value',cid);
    	}else{
    		alert("只有会员才可参加活动，请先注册，如果您是会员登录！");
    	}
	}
	
	 function gradeChange(){
        var objS = document.getElementById("pid");
        var value = objS.options[objS.selectedIndex].value;
         $.ajax({
			url  : 'goodid.php',
			type : 'post',
			data : {'id':value},
			dataType:'html',
			//beforeSend:function(){},
			success:function(data){
				 var arr = data.split(',');
				 $('#goodname').attr('value',arr[0]);
				 $('#goodp').attr('value',arr[1]);
				 $('#goodid').attr('value',value);
			}
		});
     }
	
	function goupiaos(id){
		//alert(id);
		document.getElementById("gpform").reset(); 
		$("#pid").html("");
        $.ajax({
			url  : 'goodidn.php',
			type : 'post',
			data : {'id':id},
			dataType:'html',
			//beforeSend:function(){},
			success:function(data){
				$("#pid").append(data); 
			}
		});
    	var login = "";
    	if(login !=''){
    		$('.theme-popover-mask').fadeIn(100);
		    $('.theme-popovers').slideDown(200);
		    //$('#goodid').attr('value',goodid);
		    $('#id').attr('value',id);
 
    	}else{
    		alert("只有会员才可购票，请先注册，如果您是会员请登录！");
    	}
    	 
	};
	 
</script>   
