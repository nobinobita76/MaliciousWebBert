  <script>
 

function vote(id,x){
	var ip ="140.205.205.32";
	var btv = parseInt($('#bt'+x).html())+1;
	//alert(btv);
	//return;
    $.ajax({    
        type:'post',        
        url:"biaotai.php",  
        data:{id:id,ip:ip,x:x}, 
        dataType:'html',    
        success:function(data){
        	//alert(data);
        	if(data == 1){
        		alert('亲你已经表过态了！');
        	}else{
        		alert('表态成功，感谢您的参与！');
        		$('#bt'+x).html(btv);
        	}
        }
             
    }); 

}

</script> 
