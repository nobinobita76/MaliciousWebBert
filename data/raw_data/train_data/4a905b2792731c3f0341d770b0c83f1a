<script type="text/javascript">
var timer = 600; //10分钟计时
var favoriteCnt = 0; //收藏/取消收藏点击次数
function toSubmitBut(action,obj){
	if(action=='PTB#'){
		//if('100002'!='100006'){
			var h=document.documentElement.clientHeight*0.94
			$('.rule-info').css('height',h+'px');
			var _html = $('.ptb-rule').html();
			if(_html == null || _html == 'null'){
				Alert('尚未添加，敬请期待！');
			}else{
				var step_s=0;
				layer.open({
					title: false,
					type: 1,
					move: true,
					scrollbar:true,
					content: _html,
					skin: 'cContact',
					area: '12rem',
					yes: function() {
					},cancel: function(){ 
				        layer.closeAll();
				    },success: function(){
				    	$(".close_contactBox").click(function(){
							layer.closeAll();
						});
				    }
			    });
			}
		//}else{
		//	Alert('敬请期待！');
		//}
		return;
	}
	if(action=='NOPTB#'){
		Alert('尚未添加，敬请期待！');
		return;
	}
	if(action.indexOf("http") != -1){
		window.location.href=action;
		return;
	}else	if(action.indexOf("?") == -1){
		action = action + "?bth="+$(obj).parent().index();
	}else{
		action = action + "&bth="+$(obj).parent().index();
	}
	$("#dataForm").attr("action",action);
	$("#dataForm").submit();
}
//添加或取消收藏
function addfavorite(){
	var collectobject = '112630186';
	var flag = false;
	$.ajax({
        type: "POST",
        url: "/addfavorite.html",
        data: {collectobject:collectobject,collecttype:'1'},
        dataType: "json",
        async: false,
        success: function(json){
        	if(json.code=='-1'){
        		var domainUrl = 'http://51508.m.7881.com';
        		location.href="/toLogin.html?comeback="+domainUrl;
			}else if(json.code=='1'){
				flag = true;
            }
        }
    });
	return flag;
}
//是否微信浏览器
function isWeixinBrowser(){
    var ua = navigator.userAgent.toLowerCase();
    return (/micromessenger/.test(ua)) ? true : false ;
}
var swiper = new Swiper('.swiper-container', {
    pagination: '.swiper-pagination',
    slidesPerView: 1,
	autoplay : 5000,
	autoplayDisableOnInteraction : false,
    paginationClickable: true,
    loop: true
});
var _html = $(".wstore-share-box").html();
$(".share-flag").click(function(){
	layer.open({
    	className:"wstore-share-tip",
		content: _html,
		shadeClose:false,
		success: function(elem){
		    $(".wstore-share").click(function(){
		    	layer.closeAll();
		    });
		    $(".laymshade").css("background","rgba(0,0,0,.9);");
		    $(".section").css("display","block");
		}     
	});
});
$(".collection-flag").click(function(){
	if(favoriteCnt > 10){
		Alert("收藏/取消收藏点击次数过多，请稍后再试！");
		var interval = setInterval(function(){
			timer--;
			if (timer == 0) {
				favoriteCnt = 0;
			}
		}, 1000);
		return;
	}
	var opresult = addfavorite();
	if(opresult){
		if($(this).hasClass("pulse-slow")){
			$(this).removeClass("on");
    		$(this).find("span").text("收藏");
    		$(this).find("em").css("display","inline-block");
    		layer.closeAll();
    		layer.open({
				content: '<h5><em class="iconfont">&#xe605;</em></h5><p>取消收藏成功</p>',
				shade:false,
				className:'popuo-collection',
				time: 1.5
			});
			//$(this).removeClass("pulse-slow");
			//$(this).find("p").eq("2").text("收藏");
		}else{
			$(this).addClass("on");
    		$(this).find("span").text("已收藏");
    		$(this).find("em").hide();
    		layer.closeAll();
    		layer.open({
				content: '<h5><em class="iconfont">&#xe605;</em></h5><p>收藏成功</p>',
				shade:false,
				className:'popuo-collection',
				time: 1.5
			});
			//$(this).addClass("pulse-slow");
			//$(this).find("p").eq("2").text("已收藏");
		}
	}else{
		//Alert('收藏/取消收藏失败，请稍后重试');
	}
	favoriteCnt++;
});
$(function(){
	var isFavorite = '';
	if(isFavorite=='Y'){
		$(".collection-flag").addClass("on");
		$(".collection-flag").addClass("pulse-slow");
		$(".collection-flag").find("span").text("已收藏");
		$(".collection-flag").find("em").hide();
		layer.closeAll();
	}
	if(isWeixinBrowser()){
		$(".share-flag").show();
 	}
	
});
</script>
    
