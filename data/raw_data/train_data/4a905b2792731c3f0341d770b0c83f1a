<script type="text/javascript">
    var swiper = new Swiper('.swiper-container', {
        pagination: '.swiper-pagination',
        slidesPerView: 9,
        paginationClickable: true,
        spaceBetween:10,
        freeMode: true
    });
    //var gtid = $("#gtid").val();
    function GetQueryString(name) {
    	var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)","i");
    	var r = window.location.search.substr(1).match(reg);
    	if (r!=null) return (r[2]); return null;
    }
    var bth = GetQueryString("bth");
    $(".store-nav").find("li").eq(bth).attr("class","on");
    /*if(gtid=='100136'){
    	$(".store-nav").find("li").eq(2).attr("class","on");
    }
    if(gtid=='100137'){
    	$(".store-nav").find("li").eq(3).attr("class","on");
    }
    if(gtid=='all'){
    	$(".store-nav").find("li").eq(1).attr("class","on");
    }*/
    var mzPage = 0;
    $(function(){
    	var gtid='100136';
    	
    	if(gtid=='100136'){
    		$("#fa").attr("class","on");
    	}
    	if(gtid=='100137'){
    		$("#fadc").attr("class","on");
    	}
    	if(gtid=='100131'){
    		$(".menuType").empty();
    		$(".menuType").append('<li id="anddc"><span>安卓版代充</span></li>');
    		$("#anddc").attr("class","on");
    	}
    	
    	$('#currentNo').val("-1");
    	queryGoodsListAjax();
    	loadFaceValueInfo("5");
		$(".store-listnav-ul").find("li").click(function(){
			var flag  = $(this).attr("class");
			$(this).addClass("on").siblings("li").removeClass("on");
			if($(this).hasClass("par-value")){ //如果点击的是面值
				var distype = $(this).parent().parent().find(".downmenu-value").css("display");
				if(distype == "none"){
					$(".downmenu-value").show();
					$(this).find("em").html("&#xe639;");
				}else {
					$(".downmenu-value").hide();
					$(this).find("em").html("&#xe627;");
				};
				$(".downmenu-type").hide();
				$(".par-type").find("em").html("&#xe627;");
			}else if($(this).hasClass("par-type")){ //如果点击的是类型
				var distype = $(this).parent().parent().find(".downmenu-type").css("display");
				if(distype == "none"){
					$(".downmenu-type").show();
					$(this).find("em").html("&#xe639;");
				}else {
					$(".downmenu-type").hide();
					$(this).find("em").html("&#xe627;");
				};
				$(".downmenu-value").hide();
				$(".par-value").find("em").html("&#xe627;");
			}else if($(this).hasClass("par-zk")) { //如果点击的是折扣
				$(".downmenu-value").hide();
				$(".downmenu-type").hide();
				$(".par-value").find("em").html("&#xe627;");
				$(".par-type").find("em").html("&#xe627;");
				// 开发 加载 "按折扣排序"
				$(".goodslist").empty();
				$('#currentNo').val("-1");
				$("#sorttype").val("discountAsc");
				queryGoodsListAjax();
				/*var txt = $(this).find("i").text();
				if (txt == "折扣从低到高"){
					if($(this).hasClass("on")){
						$(this).html("<b><i>折扣从高到低</i><em class='iconfont'>&#xe639;</em></b>");
						$("#sorttype").val("discountDesc");
					} else{
						$("#sorttype").val("discountAsc");
					}
					queryGoodsListAjax();
				} else {
					$(this).html("<b><i>折扣从低到高</i><em class='iconfont'>&#xe627;</em></b>");
					// 开发 加载 "折扣从高到底"
					
				};*/
			}else{ 									//如果点击的是默认
				$(".downmenu-value").hide();
				$(".downmenu-type").hide();
				$(".par-value").find("em").html("&#xe627;");
				$(".par-type").find("em").html("&#xe627;");
				// 开发 加载 "默认"
				$("#sorttype").val("");
				$(".goodslist").empty();
				$('#currentNo').val("-1");
				queryGoodsListAjax();
			}
			
		});
		// 页面到底部...
		$(window).scroll(function(){
		    if($(window).scrollTop() >= $(document).height() - $(window).height()){
				queryGoodsListAjax();
		    }
		});
		// 选择面值...
		$(".downmenu-value").on("click","li",function(){
			$(this).addClass("on").siblings("li").removeClass("on");
			$(this).parent().parent().hide();
			$(".par-value").find("em").html("&#xe627;");
			$(".par-type").find("em").html("&#xe627;");
			// 开发 加载 "点击的信息"
			$("#pid").val($(this).attr("data-id"));
			$(".goodslist").empty();
			$('#currentNo').val("-1");
			queryGoodsListAjax();
		});
		
		// 选择面值中的加载更多...
		$('.more-menu').click(function(){
			loadFaceValueInfo("");
			$(this).hide();
			return false;
		});
		//首充号、首充号代充链接
		$(document).on("tap",".downmenu-type li",function(){
			var txt = $(this).text();
			var action = "";
			if(txt == '首充号'){
				action="/storeGoods-100136-"+$('#gameid').val()+".html?bth="+bth;
			}else if(txt == '安卓版代充'){
				action="/storeGoods-100131-"+$('#gameid').val()+".html?bth="+bth;
			}else{
				//action="/storeGoods-100137-"+$('#gameid').val()+".html?bth="+(bth+1);
				action="/storeDcIndex.html?u=118423043&bth="+(parseInt(bth)+1);
			}
			$("#dataForm").attr("action",action);
	    	$("#dataForm").submit();
		});
		
    });
    function queryGoodsListAjax(){
    	var gtid = $("#gtid").val();
    	var gameid = $("#gameid").val();
    	var currno = $('#currentNo').val();
    	var pid = $('#pid').val();
    	currno = parseInt(currno)+1;
    	$('#currentNo').val(currno);
    	$.ajax({
            type: "POST",
            url: "/ajaxStoreGoodsList.html",
            data: {gameid:gameid,gtid:gtid,currentNo:currno,sorttype:$("#sorttype").val(),
            	userid:$("#userid").val(),pid:pid},
            dataType: "json",
            success: function(data){
            	if(data.success == 'T'){
            		var dataList = data.list;
    				dataList=eval("("+dataList+")");//转换为json对象
    				
    				if(dataList != ''){
    					$.each(dataList,function(i,item){
    						/* var html = "<li><div class='sto-txt-box'><a href='/store-goods-"+item.goodsid+".html'>"+
    			    			"<div class='icon-j'><img src='http://pic.7881.com/m7881-2016/images/icon-02.png' alt='' />"+
    			    			"<p>"+item.discount+"折</p></div><div class='img-box'><img src='http://pic.7881.com/7881/market/images/game_logo/"+item.gameid+".png'"+
    			    			" alt='"+item.gamename+"' /></div><h2></h2><h2>"+item.title+"</h2></a><a href='#'><p class='store-mon'>￥ "+item.price.toFixed(6)+"</p></a></a></li>"; */
       			    			var html = "<li><div class='sto-txt-box'><a href='/goods-"+item.goodsid+".html'>"+
    			    			"<div class='icon-j'><img class='xdyh-icon' src='http://pic.7881.com/m7881-2016/images/xdyh-icon.png' alt='下单优惠' />"+
    			    			"</div><div class='img-box'><img src='http://pic.7881.com/7881/market/images/game_logo/"+item.gameid+".png'"+
    			    			" alt='"+item.gamename+"' /></div><h2></h2><h2>"+item.title+"</h2></a><a href='#'><p class='store-mon'>￥ "+item.price.toFixed(6)+"</p></a></a></li>";
    						$(".goodslist").append(html);
    					});
    				}
            	}else{
            		$(".spinner").hide();
            		$(".loadtext").text("然而并没有更多了~！");
            	}
            }
        });
    }
    //加载面值
    function loadFaceValueInfo(count){
    	var gtid = $("#gtid").val();
    	var gameid = $("#gameid").val();
    	var userid = $("#userid").val();
    	$.ajax({
    	    type: 'post',
    	    url: '/loadFaceValueInfo.html',
    	    data: {gameid: gameid,count:count,userid: userid,gtid: gtid},
    	    dataType: 'json',
    	    //async: false,
    	    success: function (json) {
    			if (json) {
    				$.each(json, function(i, item){
    					$(".downmenu-value").find("ul").append("<li data-id="+item.pid+"><span>"+item.goodstitle+"</span></li>");
    				});
    		   	}
    	    }
    	});
    }
    
</script>

</body></html>