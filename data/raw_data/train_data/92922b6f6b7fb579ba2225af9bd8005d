var $searchForm_input2 = $('.searchForm_input2');

$searchForm_input2.focus(function(){
	if($searchForm_input2.val() == ''){
		$searchForm_input2.val("");
	}
});

$searchForm_input2.blur(function(){
	if($searchForm_input2.val() == ""){
		$searchForm_input2.val('');
