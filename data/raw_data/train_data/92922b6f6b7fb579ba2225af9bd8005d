<script>
$('.downloan_3G .close').bind('click', function(event) {
	$('.downloan_3G').fadeOut(300);
});
$(function(){
	$('.div').each(function(){
		if($(window).height() > $(this).offset().top){
			var obj = $(this);
			$url = obj.find('.ajax_html').find('b').html();
			obj.removeClass('div');
			if($url != ''){
			insertdata($url,obj);
			}
		}
	});

	$(document).scroll(function(){
		var top = $(window).scrollTop()
		if (top > 640) {
			$(".fix").fadeIn(1000)
		} else {
			$(".fix").fadeOut(1000)
		}
	})
	$(".fix a").click(function(){
		$("html,body").animate({'scrollTop':0},500)
	})

	//向下加载
	$(window).scroll(function () {
		$('.div').each(function(){
			var fold = $(window).height() + window.scrollY;
			if(fold >= $(this).offset().top){
				var num = $(this).find('.ajax_html').find('b').html();
				var obj = $('.div'+num);

				obj.removeClass('div');
				$url = obj.find('.ajax_html').find('b').html();
				if($url != ''){
					insertdata($url,obj);
				}
			}
		});
	});

function insertdata(url,obj){
			var aurl = "http://book.3g.cn/index.php?m=Index&a=indexajax&wsto=0";
	obj.find('.ajax_html').replaceWith('<p class="ajax_html" style="text-align:center;"><img src="http://res.book.3g.cn/book_3g_cn/images/loading.gif"/></p>');
    $.ajax({
        type : "GET",
        url : aurl,
        data : "page=" + url,
        async : true,
        dataType : 'text',
        success : function(data) {
            obj.find('.ajax_html').replaceWith(data);
            litim();
            if(data != ''){
                obj.removeClass('div');
            }else{
                obj.addClass('div');
            }
        }
    });
};

function insertdata2(url,obj){
			var aurl = "http://book.3g.cn/index.php?m=Index&a=indexajax&wsto=0";
	$.ajax({
		type : "GET",
		url : aurl,
		data : "page=" + url,
		async : true,
		dataType : 'text',
		success : function(data) {
			obj.replaceWith(data);
			litim();
		}
	});
};
function litim(){
	var $prev = $('.litimFree_prev');
	var $next = $('.litimFree_next');

$next.click(function(){
	var $t = $(this).parent();
	var $obj = $t.next().find('.ajax_slide');
	var $url = $t.next().find('b').html();
	if($t.next().html() != null){
		$t.next().show();
		$t.hide();
		if($obj.hasClass('nullvalue')){
			$obj.removeClass('nullvalue');
			insertdata2($url,$obj);
		}
	}else{
		$(this).removeClass('next');	
	}
});

$prev.click(function(){
	var $t = $(this).parent();
	var $obj = $t.find('.ajax_slide');
	var $url = $t.find('b').html();
	if($t.prev().html() != null){
		$t.prev().show();
		$t.hide();
		if($obj.hasClass('nullvalue')){
			$obj.removeClass('nullvalue');
			insertdata2($url,$obj);
		}
	}else{
		$(this).removeClass('prev');
	}
});
};
});
function onclickurl(url){
	location.href = url;
}
</script>
