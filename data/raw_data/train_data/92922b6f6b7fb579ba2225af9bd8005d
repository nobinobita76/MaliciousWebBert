<script type="text/javascript">
	/*返回顶部*/
	$(window).scroll(function(e) {
		var sclST = $(window).scrollTop();
        if(sclST>0){
			$('.gotop').show(300)
		}else{
			$('.gotop').hide(300)	
		}
    });
	
    $('.gotop').click(function(e) {
        $('html,body').animate({scrollTop:0},600)
    }); 
</script>

