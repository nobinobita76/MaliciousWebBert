					<script type="text/javascript">
    (function(){
        try {
        function $(id) {
            return document.getElementById(id);
        }

        function bind(fn, context) {
            var outerArgs = slice.call(arguments, 2);
            return function () {
                var innerArgs = slice.call(arguments);
                var finalArgs = innerArgs.concat(outerArgs);
                return fn.apply(context, finalArgs);
            }
        }

        function addEventListener(el, type, listener, capture) {
            if (el.addEventListener) {
                el.addEventListener(type, listener, capture);
            }
            else if (el.attachEvent) {
                el.attachEvent('on' + type, listener);
            }
            else {
                el['on' + type] = listener;
            }
        }

        function getEvent(event) {
            return event ? event : window.event;
        }

        function getTarget(event) {
            return event.target || event.srcElement;
        }

        function preventDefault(event) {
            if (event.preventDefault) {
                event.preventDefault();
                event.stopPropagation();
            }
            else {
                event.returnValue = false;
                event.cancelBubble = true;
            }
        }
        var go = $('go'),slice = Array.prototype.slice,
                pageNum = $('pageNum'),
                that = this,
                count = parseInt(go.getAttribute('count')),
                pagego;
        addEventListener(go, 'click', bind(function (event) {
            pagego = parseInt(pageNum.value);
            if (!/^[1-9]\d*$/.test(pagego)) {
                alert('请输入正确的页码');
                preventDefault(getEvent(event));
                return;
            }

            if (pagego < 1) {
                pagego = 1;
            }
            if (pagego > count) {
                pagego = count;
            }
            location.href = go.getAttribute('href_prefix') + pagego;
        }, that), false);

        addEventListener(pageNum, 'keyup', bind(function (event) {
            event = getEvent(event);
            if (event.keyCode !== 13) {
                return;
            }
            pagego = parseInt(pageNum.value);
            if (!/^[1-9]\d*$/.test(pagego)) {
                alert('请输入正确的页码');
                preventDefault(getEvent(event));
                return;
            }

            if (pagego < 1) {
                pagego = 1;
            }
            if (pagego > count) {
                pagego = count;
            }
            location.href = go.getAttribute('href_prefix') + pagego;
            }, that), false);
        } catch (e){}
    })();
</script>
