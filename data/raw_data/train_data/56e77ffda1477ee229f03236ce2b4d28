      <script>
VeryCD.__tmp_show_images = null;
VeryCD.__is_uploading_image = false;
var widget_show_images = function(entry_id, type) {
    if (!VeryCD.Member.Id) {
        VeryCD.login();
        return false;
    }
    $.ajax({
        url: '/base/ajax/entry/get_images',
        type: 'post',
        data: {'entry_id':entry_id, 'type':type},
        dataType: 'json',
        success: function(rs) {
        	if (rs.code == 0){
                if (Sizzle('#ul_upload_img')[0]) {
                	Sizzle('#ul_upload_img')[0].innerHTML = rs.msg;
                }
                Sizzle('#image_upload_tips')[0].style.display = 'none';
                init_images();
                VeryCD.__tmp_show_images = 8;
            } else if (rs.code == -2) {
                Sizzle('#image_upload_tips')[0].style.display = 'block';
            } else {
                VeryCD.error(rs.msg);
            }
		}
	});
}
function del_entry_img(img_id) {
    VeryCD.confirm('您确定要删除此图片？',350,null,'确认删除',function(el){
    if (el!='ok')return false;
        $.ajax({
            url: '/base/ajax/image/delete',
            type: 'post',
            data: {'images':img_id},
            dataType: 'json',
            success: function(rs) {
            	if (rs.code == 0) {
                    Sizzle('#li_img_' + img_id)[0].parentNode.removeChild(Sizzle('#li_img_' + img_id)[0]);
                    if (typeof(VeryCD.__comment_widget_id) != 'undefined' && VeryCD.__comment_widget_id == img_id) {
                        VeryCD.__comment_widget_id = 0;
                        VeryCD.__comment_widget_type = null;
                    }
                	VeryCD.Msg('图片删除成功！');
                } else {
                	VeryCD.error(rs.msg, 300);
                }
    		}
    	});
    });
}
function up_file() {
	if (VeryCD.__is_uploading_image == true) {
	    return false;
	}
    if (Sizzle('#imgfile')[0].value == ''){
        VeryCD.alert('请先选择上传文件！');
        return false;
    }
    VeryCD.__is_uploading_image = true;
    VeryCD.show_loading();
    Sizzle('#imgfile_submit')[0].style.display = 'none';
    Sizzle('#imgtxt_submit')[0].style.display = 'none';
    return true;
}
function up_url() {
	if (VeryCD.__is_uploading_image == true) {
	    return false;
	}
    if (Sizzle('#imgtxt')[0].value == ''){
        VeryCD.alert('请输入网址！');
        return false;
    }
    VeryCD.__is_uploading_image = true;
    VeryCD.show_loading();
    Sizzle('#imgfile_submit')[0].style.display = 'none';
    Sizzle('#imgtxt_submit')[0].style.display = 'none';
    return true;
}
function up_success(img_li) {
	VeryCD.__is_uploading_image = false;
    VeryCD.hidden_loading();
    if (img_li) {
        add_image_to_ul(img_li);
    }
}
function add_image_to_ul(img_li) {
    _li = document.createElement("li");
    _li.setAttribute('id', 'li_img_' + img_li.id);
    var html_li = '<span class="top_block">';
    html_li += '<a target="_blank" title="点击查看大图" class="img_link" href="' + img_li.url + '"><img width="70" alt="' + img_li.fileName + '" height="70" src="http://i-'+img_li.archived+'.vcimg.com/'+img_li.fileId+'(70x70)/thumb.jpg"></a>';
    html_li += '<a class="close" href="#" onclick="del_entry_img(' + img_li.id + ');return false; "></a>';
    html_li += '</span><br><a title="点击取消选取" class="title_link" href="#" onclick="widget_select_image_item(' + img_li.id + ',this);return false;" id="img_link_id_' + img_li.id + '">选取</a>';
    _li.innerHTML = html_li;
    var old_li = Sizzle('li', Sizzle('#ul_upload_img')[0])[0];
    if (old_li != undefined) {
        Sizzle('#ul_upload_img')[0].insertBefore(_li, old_li);
    } else {
        Sizzle('#image_upload_tips')[0].style.display = 'none';
        Sizzle('#ul_upload_img')[0].appendChild(_li);
    }
    init_clear_input();
    var img_link = Sizzle('#img_link_id_' + img_li.id)[0];
    img_link.click = img_link.onclick;
    img_link.click();
    VeryCD.Msg('图片添加成功！');
}
function load_images() {
    var ul = Sizzle('#ul_upload_img')[0];
    var imgs = Sizzle('li img[NAME=lazyload]', ul);
    if(imgs.length > 0) {
        var img_nums = Math.ceil(ul.scrollLeft/70);
    	if (img_nums > VeryCD.__tmp_show_images) {
            for (var _i=0; _i < 8; _i++) {
                display_image(imgs[_i]);
            }
            VeryCD.__tmp_show_images += 8;
            if (ul.scrollLeft/imgs[0].scrollWidth > VeryCD.__tmp_show_images) {
            	load_images();
            }
        }
    }
}
function display_image(obj) {
    if (obj == undefined || obj.tagName != 'IMG' || obj.name != 'lazyload') {
        return false;
    }
    var __src = obj.getAttribute('__src');
    if (__src != undefined && obj.src == '') {
        obj.setAttribute('src', __src);
        obj.setAttribute('name', '');
        obj.removeAttribute('__src');
    }
}
function init_images() {
    var ul = Sizzle('#ul_upload_img')[0];
    ul.scrollLeft = 0;
    ul.style.overflowX = 'scroll';
    var imgs = Sizzle('li img[NAME=lazyload]', ul);
    for (var _i=0; _i < 16; _i++) {
        display_image(imgs[_i]);
    }
}
