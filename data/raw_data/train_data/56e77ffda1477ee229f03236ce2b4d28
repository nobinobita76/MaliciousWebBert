      <script type="text/javascript">
VeryCD.__is_uploading_video = false;
function up_video_url() {
    if (VeryCD.__is_uploading_video == true ) {
        return false;
    }
    var video_url = Sizzle('#video_url')[0].value;
    if (video_url == '' || video_url == '在这里输入你要添加的视频的URL地址') {
        VeryCD.alert('输入你要添加的视频的URL地址！');
        return false;
    }
    if (Sizzle('#video_type')[0].selectedIndex == 0) {
        VeryCD.alert('请选择视频类型！');
        return false;
    }
    VeryCD.__is_uploading_video = true;

    $.ajax({
        url: '/entries/744569/video/save',
        type: 'post',
        data: $('#up_video').serialize(),
        success: function(rs) {
        	VeryCD.hidden_loading();
            VeryCD.__is_uploading_video = false;
            if (rs.substr(0,4)=='err='){
                VeryCD.error(rs.substr(4),400);
                return false;
            }else if (rs.substr(0,5)=='info='){
                VeryCD.alert(rs.substr(5),400);
                return false;
            }else{
                try{
                    var rs = eval('('+rs+')');
                }catch(e){
                    VeryCD.error('返回数据错误，请重试！',400);
                    return false;
                }
                if (rs['status']=='ok'){
                    add_video_to_ul(rs);
                }
            }
		},
      	beforeSend: function(){
      		VeryCD.show_loading();
      	},
      	error: function() {
      		VeryCD.hidden_loading();
            VeryCD.__is_uploading_video = false;
            VeryCD.error('网络错误，请重试！',400);
      	}
	});
}
VeryCD.__tmp_show_videos = null;
var widget_show_videos = function(entry_id, type) {
    if (!VeryCD.Member.Id) {
        VeryCD.login();
        return false;
    }
    $.ajax({
        url: '/base/ajax/entry/get_videos',
        type: 'post',
        data: {'entry_id':entry_id, 'type':type},
        dataType: 'json',
        success: function(rs) {
        	var video_ul = Sizzle('#ul_upload_video')[0];
            if (rs.code == 0){
                Sizzle('#video_upload_tips')[0].style.display = 'none';
                video_ul.innerHTML = rs.msg;
                init_videos();
                VeryCD.__tmp_show_videos = 5;
            } else if (rs.code == -2) {
                Sizzle('#video_upload_tips')[0].style.display = 'block';
            } else {
                VeryCD.error(rs.msg);
            }
		}
	});
}
function add_video_to_ul(video_li) {
    _li = document.createElement("li");
    _li.setAttribute('id', 'li_video_' + video_li.id);
    _li.className = 'on';
    var html_li = '<span class="top_block">';
    html_li += '<a class="video_link" title="点击观看视频" target="_blank" swf="' + video_li['uri'] + '" href="http://www.verycd.com/entries/744569/video/view/' + video_li['id'] + '/"><img width="100" height="75" name="lazyload" src="' + video_li['imgUrl'] + '" alt="' + video_li['fileName'] + '">';
    html_li += '<span class="play_btn"><span class="bg"></span></span><span class="black_title">' + video_li['fileName'] + '</span></a>';
    html_li += '<a class="close" href="#" onclick="del_entry_video(' + video_li['id'] + ');return false;"></a>';
    html_li += '</span><br><a title="点击取消选取" class="title_link" href="#" onclick="widget_select_video_item(' + video_li['id'] + ',this);return false;" id="video_link_id_' + video_li['id'] + '">选取</a>';
    _li.innerHTML = html_li;
    var ul_upload_video = Sizzle('#ul_upload_video')[0];
    var old_li = Sizzle('li', ul_upload_video)[0];
    if (old_li != undefined) {
        ul_upload_video.insertBefore(_li, old_li);
    } else {
        Sizzle('#video_upload_tips')[0].style.display = 'none';
        ul_upload_video.appendChild(_li);
    }
    init_clear_video_input();
    var video_link = Sizzle('#video_link_id_' + video_li.id)[0];
    video_link.click = video_link.onclick;
    video_link.click();
    VeryCD.Msg('视频添加成功！');
}
function del_entry_video(video_id) {
	var confirm_txt = 0 == video_id ? '当前视频是<font style="color:#c00">预告片</font> !<br />您确定要删除此视频?' : '您确定要删除此视频？';
    VeryCD.confirm(confirm_txt,350,null,'确认删除',function(el){
    if (el!='ok')return false;
        $.ajax({
            url: '/base/ajax/video/delete',
            type: 'post',
            data: {'videos':video_id, 'is_only':1},
            success: function(rs) {
            	if (rs == 'ok') {
                    var ul = Sizzle('#ul_upload_video')[0];
                    ul.removeChild(Sizzle('#li_video_' + video_id)[0]);
                    if(typeof(VeryCD.__comment_widget_id) != 'undefined' && VeryCD.__comment_widget_id == video_id) {
                        VeryCD.__comment_widget_id = 0;
                        VeryCD.__comment_widget_type = null;
                    }
                    var item = Sizzle('li', ul)[0];
                    if(item == undefined) Sizzle('#video_upload_tips')[0].style.display = 'block';
                    VeryCD.Msg('该视频删除成功！');
                } else {
                    VeryCD.error(rs.substr(4),300);
                }
    		}
    	});
    });
}
function load_videos() {
    var ul = Sizzle('#ul_upload_video')[0];
    var imgs = Sizzle('li img[NAME=lazyload]', ul);
    if(imgs.length > 0) {
        var img_nums = Math.ceil(ul.scrollLeft/100);
        if (img_nums > VeryCD.__tmp_show_videos) {
            for (var _i=0; _i < 5; _i++) {
                display_video(imgs[_i]);
            }
            VeryCD.__tmp_show_videos += 5;
            if (ul.scrollLeft/imgs[0].scrollWidth > VeryCD.__tmp_show_videos) {
                load_videos();
            }
        }
    }
}
function display_video(obj) {
    if (obj == undefined || obj.tagName != 'IMG' || obj.name != 'lazyload') {
        return false;
    }
    var __src = obj.getAttribute('__src');
    if (__src != undefined && obj.src == '') {
        obj.setAttribute('src', __src);
        obj.setAttribute('name', '');
        obj.removeAttribute('__src');
    }
}
function init_videos() {
    var ul = Sizzle('#ul_upload_video')[0];
    ul.scrollLeft = 0;
    ul.style.overflowX = 'scroll';
    var imgs = Sizzle('li img[NAME=lazyload]', ul);
    for (var _i=0; _i < 10; _i++) {
        display_video(imgs[_i]);
    }
}
</script> 
      <script type="text/javascript">
VeryCD.__video_widget_block_id = -1;
var show_video_add = function(widget_index) {
    if(!VeryCD.Member.Id){
        VeryCD.login();
        return false;
    }
	if(typeof(window.hide_image_add) == 'function') {
		hide_image_add();
    }
	hide_video_add();

	Sizzle('#comment_widget_content_' + widget_index)[0].innerHTML = Sizzle('#widget_video_container')[0].innerHTML;
    Sizzle('#widget_video_container')[0].innerHTML = '';
	VeryCD.iniHtml(Sizzle('#comment_widget_content_' + widget_index)[0]);
	VeryCD.iniHtml(Sizzle('#widget_video_container')[0]);

    VeryCD.__video_widget_block_id = widget_index;
    if (Sizzle('#ul_upload_video')[0].innerHTML != '') {
        VeryCD.__tmp_show_videos = VeryCD.__tmp_show_videos || 5;
    } else {
        widget_show_videos(744569, 'comment');
    }

    Sizzle('#comment_widget_content_' + widget_index)[0].style.display = 'block';
    Sizzle('#widget_block_' + widget_index)[0].style.display = 'block';

    if (VeryCD.is_ie) {
        Sizzle('#ul_upload_video')[0].attachEvent("onscroll", load_videos);
    } else {
        Sizzle('#ul_upload_video')[0].addEventListener("scroll", load_videos, false);
    }

    // IE8 小贴士 bugfix
    if (VeryCD.ie == 8 && Sizzle('#comment_tips')[0]) {
        var tips = Sizzle('#comment_tips')[0];
        tips.style.display = 'none';
        tips.style.display = '';
    }

    VeryCD.TrackEvent("entry", "流口水", "添加视频");
}
var hide_video_add = function() {
	if (VeryCD.__video_widget_block_id != -1) {
    	Sizzle('#widget_video_container')[0].innerHTML = Sizzle('#comment_widget_content_' + VeryCD.__video_widget_block_id)[0].innerHTML;
        Sizzle('#comment_widget_content_' + VeryCD.__video_widget_block_id)[0].innerHTML = '';
        VeryCD.iniHtml(Sizzle('#widget_video_container')[0]);
    	VeryCD.iniHtml(Sizzle('#comment_widget_content_' + VeryCD.__video_widget_block_id)[0]);
    	Sizzle('#comment_widget_content_' + VeryCD.__video_widget_block_id)[0].style.display = 'none';
        Sizzle('#widget_block_' + VeryCD.__video_widget_block_id)[0].style.display = 'none';
        VeryCD.__video_widget_block_id = -1;
	}
}

function init_clear_video_input() {
    if (typeof(clean_select) == 'function') clean_select();
    if(Sizzle('#video_url')[0]) Sizzle('#video_url')[0].value = '在这里输入你要添加的视频的URL地址';
}
init_clear_video_input();
