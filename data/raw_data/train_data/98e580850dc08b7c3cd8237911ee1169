   <script src="js/Validform_v5.3.2_min.js"></script> 
   <link rel="stylesheet" type="text/css" href="/css/validform.css" media="screen" /> 
   <script language="javascript">
			var t
			$().ready(function(){
				bannerrun(1,1)
			})
			function bannerrun(mode,type){
				if(mode!=1){
					var num=$('.imgbg img').length
					var i=$('.imgbg .act').index()
					if(type==1){
						if(i==num-1){
							i=0
						}else{
							i++
						}
					}else{
						if(i==0){
							i=num-1
						}else{
							i--
						}
					}
					$('.imgbg img').removeClass('act')
					$('.imgbg img').eq(i).addClass('act')
					bannerchangeto(i)
				}
				clearTimeout(t)
				t=setTimeout("bannerrun()",5000)
			}
			function bannerchangeto(i){
				$('.imgbg img').stop().fadeTo("slow",0).eq(i).stop().fadeTo("slow",1);
			}
		</script>  
  </div>
 </body>
</html>