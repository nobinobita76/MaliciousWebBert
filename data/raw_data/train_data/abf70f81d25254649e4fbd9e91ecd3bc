  <script src="/templets/www/news/extend/js/ie10-viewport-bug-workaround.js"></script>   
  <script type="text/javascript">

  function tj_comment()
  {
  	$('#comment_info').val('');
  	 $('#input_comments').show();
  }


  function colse_pl()
  {
  	$('#input_comments').hide();
  }

  function fb_comment(id)
  {
  		

  		if(!id)
  		{
  			alert('发表评论失败');
  			return;
  		}

  		var info=$('#comment_info').val();
  		
  		if(!info)
  		{
  			alert('评论内容不能为空');
  			return;
  		}

  		var conent_en=encodeURI(info);
  		//$('#input_comments').css('display','none');
  		//$('.modal-backdrop.in').remove();
  		$.ajax({
            
                      url:"http://www.changdiwang.com/member/ajax_comment_pl.php",
                      data:"pid="+id+"&content="+conent_en+"&dotype=comments&random="+Math.random(),
                      async:true,
                      type: 'POST',
                      success:function(data)
                      {  
                      	colse_pl();
                      	$('#pl_tag').attr('href','javascript:void(0);');
                      	$('#pl_tag').css({'color':'#000','background':'#ccc'});
                      	$('#pl_tag').html('已评论');
                        $("#pl_list").html(data);

                 }});



  }

    function fun_plpage(page,hid)
  {

  		$.ajax({
            
                      url:"http://www.changdiwang.com/member/ajax_comment_pl.php",
                      data:"page="+page+"&hid="+hid+"&dotype=pagezx&random="+Math.random(),
                      async:true,
                      type: 'POST',
                      success:function(data)
                      {  
                      	colse_pl();
                        $("#pl_list").html(data);

                 }});

  }
</script>
