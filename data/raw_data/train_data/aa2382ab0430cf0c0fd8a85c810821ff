<script>
	var box =$("#scroll_div ul");
	var len= $("#scroll_div ul li").width();
	var num = $("#scroll_div ul li").length;
	box.css('width',len*num);
	var index=0;
	function play(i){
		box.css("left",-i*len);
	}

	$(".scroll-l").click(function(){
		if(index<=0){
			return false;
		}
		index = index-1;
		play(index);
	})
	$(".scroll-r").click(function(){
		if(index>=num-1){
			return false;
		}
		index=index+1;
		play(index);
	})


</script>

