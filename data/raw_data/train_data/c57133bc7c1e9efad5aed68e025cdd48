<!--记住用户名开始-->
<script type="text/javascript" src="https://img1.hengyirong.com/assets/blue/newjs/sha1.js"></script>
<script type="text/javascript">
	$(".btn").click(function (){
		if($("#remember").attr('checked')){
			var cookusername = $("#LoginForm_username").val();
			SetCookie('cookusername',cookusername);
		}else{
			delCookie('cookusername');
		}
	});

function SetCookie(name,value){
	var Days = 7; //此 cookie 将被保存 30 天
	var exp = new Date();
	exp.setTime(exp.getTime() + Days*24*60*60*1000);
	document.cookie = name + "="+ escape (value) + ";expires=" + exp.toGMTString();
}
function getCookie(name){
	var arr = document.cookie.match(new RegExp("(^| )"+name+"=([^;]*)(;|$)"));
	if(arr != null)
	return unescape(arr[2]);
	return null;
}
function delCookie(name){
	var exp = new Date();
	exp.setTime(exp.getTime() - 1);
	var cval=getCookie(name);
	if(cval!=null) document.cookie= name + "="+cval+";expires="+exp.toGMTString();
}
var u = getCookie('cookusername');
if(u){
	$(".input_placeholder").html('');
	$("#LoginForm_username").val(u);
}
if($("#LoginForm_username").val()!=''){
	$(".input_placeholder").html('');
}
</script>
<!--记住用户名结束-->
<script type="text/javascript">

jQuery(document).ready(function($){
	setTimeout(yzmAgain,100);
	function yzmAgain(){
		var img = new Image;
		img.onload=function(){
			jQuery('#yw0').trigger('click');
		}
		img.src = $('#yw0').attr('src');
		$('#yzm_check').show();
	}
});

$("#LoginForm_username").blur(function(){
	var username = $("#LoginForm_username").val();
	if(username==''){
		//$("#LoginForm_username").addClass('input_f00');
		//$("#username_icon").removeClass('icon_ok');
		//$("#username_icon").addClass('icon_no');
	}else{
		//$("#LoginForm_username").removeClass('input_f00');
		$("#username_icon").addClass('icon_ok');
		$("#username_icon").removeClass('icon_no');
		$("#LoginForm_username").parent().addClass("success");

	}
});
$("#LoginForm_password").blur(function(){
	var password = $("#LoginForm_password").val();
	if(password==''){
		//$("#LoginForm_password").addClass('input_f00');
		$("#password_icon").removeClass('icon_ok');
		$("#password_icon").addClass('icon_no');
	}else{
		//$("#LoginForm_password").removeClass('input_f00');
		$("#password_icon").addClass('icon_ok');
		$("#password_icon").removeClass('icon_no');
	}
});
$("#LoginForm_verifyCode").blur(function(){
	var yzm = $("#LoginForm_verifyCode").val();
	setTimeout(function(){
		$(".clearfix").removeClass("success");
		},1000);
	
	if(yzm==''){
		//$("#LoginForm_verifyCode").addClass('input_f00');

	}else{
		//$("#LoginForm_verifyCode").removeClass('input_f00');
	}
});
$(".btn").click(function(){
	$(".clearfix").removeClass("success");
});

var checkInputValTimeout = null;
function checkInputVal() {
	clearTimeout(checkInputValTimeout);
	if($('#LoginForm_username').val()) {
		$('#username_placeholder').html('');
	} else {
		$('#username_placeholder').html('用户名/手机号码/邮箱');
	}
	if($('#LoginForm_password').val()) {
		$('#password_placeholder').html('');
	} else {
		$('#password_placeholder').html('密码');
	}
	//if(console) console.log(1);
	checkInputValTimeout = setTimeout(checkInputVal, 500);
}

$(function() {
	checkInputVal();
	setTimeout(function(){
		$('#LoginForm_username').val($('#LoginForm_username').val());
		$('#LoginForm_username').click();
	}, 1000);
});
</script>
