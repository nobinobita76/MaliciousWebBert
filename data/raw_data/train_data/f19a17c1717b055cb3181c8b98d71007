  <script type="text/javascript">
var p = 1;
var load = false;
$(".click_more").click(function(){
	startAjax();
});

function startAjax()
{
	if(load == false && p < 50){
		totalheight = parseFloat($(window).height()) + parseFloat($(window).scrollTop());
		if ($(document).height() <= totalheight+100){
			load = true;
			ajaxArticle(p++);
		}
	}
}

function ajaxArticle(p) {
	var tmp_html = '';
	$(".click_more a").html("加载中……");
	$.get('/articlelist/ajaxArticle/?p='+p+'&fl=qt&flx=',function(data){
		if(data!='') {
			$(".click_more").after('<div class="apicent_'+p+'">'+data+'</div>');
			$(".click_more").eq(0).remove();
			$(".apicent_"+p+" .lazy").one("mouseover",function(){$(this).attr("src",$(this).attr("data-original"))}).lazyload();
			$(".click_more").click(function(){
				startAjax();
			});
			load = false;
		}
		else
		{
			$(".click_more a").html("没有了...");
		}
	});
}
</script>
