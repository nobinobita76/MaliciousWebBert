  <script>
$(".login_pupop").click(function(){
	popWin("bt-name0");
	$("#maskLayer").show();
	$("#maskLayer").click(function(){$("#bt-name0,#maskLayer").hide();});
});

$(".menu").click(function() {
    if ($(this).hasClass("cura")) {
        $(this).children(".new-sub").hide(); //当前菜单下的二级菜单隐藏
        $(".menu").removeClass("cura"); //同一级的菜单项
    } else {
        $(".menu").removeClass("cura"); //移除所有的样式
        $(this).addClass("cura"); //给当前菜单添加特定样式
        $(".menu").children(".new-sub").slideUp("fast"); //隐藏所有的二级菜单
        $(this).children(".new-sub").slideDown("fast"); //展示当前的二级菜单
    }
});

function player_tucao_ad(id, index){
	var tucaoId = $("#"+id);

	if (index == null)
		index = tucaoId.attr("data-index");
	
	var imgs = tucaoId.find(".rit img");
	imgs.removeClass("on");
	var imgObj = tucaoId.find(".rit img").eq(index);
	imgObj.addClass("on");
	tucaoId.find(".a_img,.a_title").attr("href", imgObj.attr("data-url"));
	tucaoId.find(".a_img img").attr("src",imgObj.attr("src"));
	tucaoId.find(".a_title").html(imgObj.attr("alt"));
	tucaoId.find(".price").html("<em>￥</em>"+imgObj.attr("data-price"));
	if (index >= imgs.length-1)
	{
		tucaoId.attr("data-index", "0");
	}
	else
	{
		tucaoId.attr("data-index", ++index);
	}
}

function wxpophide(){
	$("#wxpop_filter_layer").hide();
	$("#wxhbpop_box").hide();
}
function wxpopshow(){
	$("#wxpop_filter_layer").show();
	$("#wxhbpop_box").show();
}
</script> 
