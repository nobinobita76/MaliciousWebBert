initEMUI5WapLayout();



document.body.addEventListener('touchstart',function(){},false);
	function register() {
		window.top.location.href = localInfo.register;
	}
	
	function gotoresetpwd()
	{
		window.top.location.href = localInfo.findPwd;
	}
	
	$("#password,#username").keyup(function(){
	
		checkLoginInput();
	})
	
	
	$(document).ready(function() {
		
		if($(".thirdAccountPicture img").length<1)
		{
		 $(".space-line-div").remove(); 
		}	
		
		if(localInfo.countryCode == "us") {
			//$("#useraccount_desc").html(rss.common_useraccount_desc_us_honor);
			
		}else if(currentSiteID == "8") {
			$("#useraccount_desc").html(rss.common_useraccount_desc_other);
		}else if(currentSiteID == "7") {
			$("#useraccount_desc").html(rss.common_useraccount_desc_europe);
		}else if(currentSiteID == "3") {
			$("#useraccount_desc").html(rss.common_useraccount_desc_other);
		}else if(currentSiteID == "1") {
			$("#useraccount_desc").html(rss.common_useraccount_desc_china);
		}else if(currentSiteID == "6" || currentSiteID == "5"){
			$("#useraccount_desc").html(rss.common_useraccount_desc_other);
		}
		
		//  初始化登陆部分的相关功能
		if(currentSiteID == "9" || (localInfo.currentSiteID==7 && localInfo.countryCode=="us")) {
			$("#username").attr("placeholder",rss.hwaccount_America);
		}
		
		//读取session,看是否之前有过记住账号的操作
		var rememberAccountCookie = localInfo.rememberAccount;
		if(rememberAccountCookie){
			rememberAccountCookie = rememberAccountCookie.replace(/\"/g, "");
	        $("#username").val(rememberAccountCookie);
	        $("#remember_name").attr("src", localInfo.tickOnPng);
	        $("#remember_name").attr("checked",true);
		}
		
		// 如果存在加密的帐号信息的话
		if(localInfo.extInfo)
		{
			$("#username").val(localInfo.extInfo);
		}
		
		$("#passwdEye").click(function(){
			var type = document.getElementById("password").type;
			if (type == "password")
			{
			document.getElementById("password").type = "text";
			$(this).attr("src",localInfo.eyeon); 
			}
			else
			{
			document.getElementById("password").type = "password";
			$(this).attr("src",localInfo.eyeoff);   
			}
			
		});
		$(".thirdAccountPicture img").each(function(){
		  var $this = $(this);
		  $this.attr("src",localInfo[$this.attr("data-src")]);
		  this.addEventListener("touchstart",function(){
			  $(this).css("opacity","0.5");
		  })
		  this.addEventListener("touchend",function(){
			  $(this).css("opacity","1.0");
		  })
		  
		})
		
		$("#btnLogin").bind("touchstart",function(){
			$(this).addClass("btn-EMUI5-active");
		}).bind("touchend",function(){
			$(this).removeClass("btn-EMUI5-active");
		})
		$(document).bind("touchend",function(){
			$("#btnLogin").removeClass("btn-EMUI5-active");
			
		})
		
	});

	

