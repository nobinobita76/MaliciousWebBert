<script src="/res/pc/template/share/shareCommon.js" type="text/javascript"></script>
<script type="text/javascript">
$(function(){
	var ua = navigator.userAgent.toLowerCase();
	if(ua!=null && ua!="" && ua.indexOf("chaoxingstudy")!=-1){
		$(".tishi").hide();
		$(".onload_pos").hide();
		
		var prevKnowledgeName = '' || '';
		if(prevKnowledgeName != ''){
			prevKnowledgeName = prevKnowledgeName.replace(/\'/g,"\\\'").replace(/\"/g,"“");
		}
		var nextKnowledgeName = '' || '';
		if(nextKnowledgeName != ''){
			nextKnowledgeName = nextKnowledgeName.replace(/\'/g,"\\\'").replace(/\"/g,"“");
		}
		var prevKnowledgeUrl = '' || '';
		var nextKnowledgeUrl = '' || '';
		
		if(prevKnowledgeUrl != '' || nextKnowledgeUrl != ''){
			if(prevKnowledgeUrl != ''){
				$("#prevChapter").html("上一章").click(function(){
					GroupTopicAppUtils.openUrl({
						loadType: 0,
						title:prevKnowledgeName,
						webUrl:prevKnowledgeUrl+'#INNER'
					});
				});
			}
			if(nextKnowledgeUrl != ''){
				$("#nextChapter").html("下一章").click(function(){
					GroupTopicAppUtils.openUrl({
						loadType: 0,
						title:nextKnowledgeName,
						webUrl:nextKnowledgeUrl+'#INNER'
					});
				});
			}
		}
		
	}
	$(".close").click(function(){
		$(".onloadBox").fadeOut(500);
	});
	var topicId = '17757501' || 0;
	if(topicId == 0) return;
	var url = '/share/topic/'+topicId+'/getTopicInfo';
	$.getJSON(url,function(data){
		$(".linkBox").show();
		if(undefined ==  data || data == '') return;
		var status = data.status;
		if(!status) {
			alert("话题不存在！");
			return;
		}
		var topicObj = data.datas;
		if(undefined == topicObj) return;
		var imgs = topicObj.img_data;
		var content = topicObj.text_content || '';
		var topicTitle = topicObj.title || "";
		var createName = topicObj.createrName || "";
		if(content != ''){
			//内容换行空格处理
			content = content.replace(/\n|\t|\r/g, "<br/>");
			content = content.replace(/\s/g,"&nbsp;");
		}
		var imgContent = '';
		if(undefined != imgs && imgs.length > 0) {
			for(var i=0; i<imgs.length;i++){
				var imgurl = imgs[i].imgUrl;
				var imgWidth = parseInt(imgurl.substring(imgurl.indexOf("rw=")+3,imgurl.lastIndexOf("&")));
				var imgHeigth = parseInt(imgurl.substring(imgurl.indexOf("rh=") + 3,imgurl.length));
				var winWidth = 1000;
				if(imgurl.indexOf("origin") != -1){
					imgurl = imgurl.replace("origin",winWidth+"_"+parseInt((winWidth/(imgWidth/imgHeigth)))+"c");
				}
				imgContent += "<img src='"+imgurl+"'>";
			}
		}
		$(".shareTit").html(topicTitle);
		$(".creator").html(createName);
		$(".shareCon").html(content+imgContent);
	});
	 var getIOSVersion = function(){
		 var ua = navigator.userAgent.toLowerCase();
			if(ua.match(/(iphone|ipod);?/i)){
				return ua.match(/iphone os ([0-9]+)_/)[1];
			}else if(ua.match(/(ipad);?/i)){
				return (ua.match(/cpu os ([0-9]+)_/))[1];
			}
	 }
	$(".openApp").click(function(){
	    var appUrl = "chaoxingshareback://groupId=443297&topicId="+topicId+"&sharebacktype=2";
	    var tipUrl = "http://"+location.host+"/share/topic/tips?apptag=0&appScheme=" + encodeURIComponent(appUrl);
	    //如果是ios
	 	   var ua = navigator.userAgent.toLowerCase();
	 	   if(ua.match(/(iphone|ipod|ipad);?/i)){
	   		   //如果版本大于等于IOS9
	   		   var iosVersion = getIOSVersion();
	   		   if(iosVersion >= 9){
	   				tipUrl = 'http://share1.chaoxing.com/share/topic/'+topicId+'/getTopic?sharebacktype=2&apptag=0&appScheme='+encodeURIComponent(appUrl)+'&groupId=443297&topicId='+topicId; 
	   		   }
	   	   }
		   document.location.href = tipUrl;
   });
});

var appurl=document.location.href;//章节地址
var chapterName="";//章节名称
var chapterId="";//章节id
var author="";//专题署名
var courseId="" || "";//课程id
var courseName="";//专题名称
var cover="";//专题封面
var courseCreateName="";//专题创建者
var courseLevel="";//专题level

var appid =  $.md5(appurl);
var otherConfig = {
	author:author,//专题作者
	id:"mooc_"+courseId//专题的id
};
var specialUrl="http://zhuanti.chaoxing.com/mobile/mooc/tocourse/"+courseId;
var content = {
	cataid: "100000001",
	aid:"mooc_"+courseId,//章节id
	appid: appid,//当前的章节的链接的md5
	appname: courseName, //专题名称
	appurl: appurl, //章节的地址
	logopath: cover, //专题封面
	otherConfig:JSON.stringify(otherConfig),
	available: 1, 
	bind:1,			
	isWebapp: 1, 
	useClientTool: 2, 
	needLogin: 0, 
	needRegist: 0, 
	norder: 0, 
	loginUrl: '', 
	properties: '', 
	description: '', 
	usable: '', 
	logoshowtype: 1, 
	rights: 1, 
	loginkey: '',
	level:courseLevel//章节的level
};
content.sourceConfig = {
		cataid:"100000001",
		author:courseCreateName,
		magname:"《"+courseName+"》"
};

var _aname = chapterName;
var aName = _aname.replace(/\'/g,"\\\'").replace(/\"/g,"“");
var transferContent="";
if(transferContent.length>50){
	transferContent=transferContent.substring(0,50);
}
var quoteInfo = {
	transferLogo:cover,
	transferLink:specialUrl,
	transferTitle:courseName,
	transferDescription:aName,//章节的名称
	transferDescriptionLink:appurl,//章节地址
	transferContent:transferContent,//章节的部分内容
	transferType:1,
	transferTypeTitle:"专题章节",
	tabBarShowFlag:1,
	type:3,
	transferKey:"300000001_"+courseId+"-"+chapterId
};
window.cardObj = {
	content:content,
	quoteInfo:quoteInfo,
	courseId:courseId,
	chapterId:chapterId
};

var operLoad = true;
function addOrDeleteBookmarks(THIS){
	$("#menu").hide();
	if(!operLoad){
		GroupTopicAppUtils.clientMessageDisplay("处理中，请稍候...");
	}
	operLoad = false;
	var att = parseInt($(THIS).attr("att"));
	var url = "";
	if(att == 1){
		url += "/share/topic/chapterBookMarks//"+courseId+"/"+chapterId+"/2";
	}else if(att == 2){
		url += "/share/topic/chapterBookMarks//"+courseId+"/"+chapterId+"/1";
	}
	$.getJSON(url,function(data){
		operLoad = true;
		var status = data.status;
		GroupTopicAppUtils.clientMessageDisplay(data.msg);
		if(!status) {
			return;
		}
		if(att == 1){
			$(THIS).attr("att",2).html("添加书签");
		}else if(att == 2){
			$(THIS).attr("att",1).html("删除书签");
		}
	});
}

</script>
