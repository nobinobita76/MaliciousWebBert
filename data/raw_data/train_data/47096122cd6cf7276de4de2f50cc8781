<script type="text/javascript">

function replaceImg(imgId,logo){
	if($.trim(logo) == "" || $.trim(imgId) == "") {
		return;
	}
// 	var reg = /[{A-Z}]_+[{A-Z}+c]g/;
	var width_height = '{WIDTH}_{HEIGHT}';
	logo = logo.replace(width_height,"60_60");
	$("#"+imgId).attr("width","60px");
	$("#"+imgId).attr("height","60px");
	$("#"+imgId).attr("src",logo);
}
</script>
