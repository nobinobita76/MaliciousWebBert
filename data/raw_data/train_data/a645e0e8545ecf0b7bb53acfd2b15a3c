    <script type="text/javascript">
	$(document.body).append(["<div class=\"modal\" id=\"aj-sign-panel\">",
	                         "    <div class=\"modal-dialog\">",
	                         "        <div class=\"modal-content\">",
	                         "            <div class=\"modal-header\">",
