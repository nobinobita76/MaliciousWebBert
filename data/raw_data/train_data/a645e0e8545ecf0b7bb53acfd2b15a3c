     <span ng-repeat="item in items"> <a ng-if="item.link" href="{{item.link}}" class="aitem" ng-class="item.class"> <span class="icon" ng-class="item.icon"></span> <h4 class="title" ng-bind="item.title"></h4> </a> <a ng-if="!item.link" href="javascript:;" class="aitem" ng-click="dealATagWithoutHref(item)" ng-class="item.class"> <span class="icon" ng-class="item.icon"></span> <h4 class="title" ng-bind="item.title"></h4> </a> </span> 
