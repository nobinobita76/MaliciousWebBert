<script>
	//var movieid =57011;//电视剧65298 //动漫18228 //纪录片64882 //电影61414 //综艺44133
	if(typeof movieReview_id == "undefined"){
		var movieReview_id = "movie_comment";
	}
	
	function isEmptyObject( obj ) { 
		for ( var name in obj ) { 
			return true; 
		} 
		return false; 
	} 
	

	var reqUrl = 'http://api.movie.kankan.com/vodjs/moviedata/'+Math.floor(movieid/1000)+'\/'+movieid+'.js?'+Math.random();
	try{
		KKSite.JsLoader.load(reqUrl ,"gbk", onMovieinfoComplete);
	}catch(e){
	}
	function onMovieinfoComplete(){
		(function(index){
			try{
				var movieinfo = eval('moviedata_'+index);
			}catch(e){
				if(window.console){console.log("Error in eval movieinfo!");}
			}
			var strHTML = '';
			strHTML +='<ul class="topList"><li class="return"><b class="icon"></b><a href="movie?id='+movieid+'" title="影片详情">返回影片详情页</a></li>';
			if(movieReview_id != "movie_comments"){
				strHTML +='<li class="findAll"><b class="icon"></b><a href="movie_comments?id='+movieid+'">查看所有评论</a>('+count+'条)</li>';	
			}
			if(movieReview_id != "movie_commentpost"){
				strHTML +='<li class="sComment"><b class="icon"></b><a href="movie_commentpost?id='+movieid+'" target="_blank">我来写评论</a></li>';
			}
			strHTML +='</ul>';
			if(isEmptyObject(movieinfo)){
				if(typeof movieinfo.rating_num == "undefined"){//没有rating_num属性
					movieinfo.rating_num = 0;
				}
				var playurl = 'http://vod.kankan.com/v/'+Math.floor(index/1000)+'\/'+index+'.shtml';
				strHTML +='<h3><a href="'+playurl+'" title="'+movieinfo.title+'" target="_blank">'+movieinfo.title+'</a></h3><a href="'+playurl+'" title="'+movieinfo.title+'" class="pic" target="_blank"><img src="'+movieinfo.poster+'" width="100" height="140" alt="'+movieinfo.title+'" /></a>';
				strHTML +='<div class="scorebox"><div class="starbox"><span class="gold_star" style="width:70%;"></span></div><span class="score"><em>'+movieinfo.rating+'</em></span><span class="num">('+movieinfo.rating_num+'人评价)</span></div>';
				var type = movieinfo.type;
				var zhuyan = '';
				var daoyan = '';
				var leixing = '';
				var area = '';
				var year = '';
				if(typeof movieinfo.genre !="undefined"){
					leixing +=lxShow(movieinfo.genre);
				}
				if(typeof movieinfo.area !="undefined"){
					area +=ayShow(movieinfo.area,'地区');
				}
				if(typeof movieinfo.year !="undefined"){
					year +=ayShow(movieinfo.year,'年份');
				}
				switch (type){
					case "anime":{
						zhuyan +='<li><em>作者:</em><a href="'+movieinfo.director.url+'" target="_blank">'+movieinfo.director.name+'</a></li>';
						daoyan +=strShow(movieinfo.actor,'配音');
					}
					break;
					case "teleplay":{
						zhuyan +=strShow(movieinfo.actor,'主演');
						daoyan +='<li><em>导演:</em><a href="'+movieinfo.director.url+'" target="_blank">'+movieinfo.director.name+'</a></li>';
					}
					break;
					case "movie":{
						zhuyan +=strShow(movieinfo.actor,'主演');
						daoyan +='<li><em>导演:</em><a href="'+movieinfo.director.url+'" target="_blank">'+movieinfo.director.name+'</a></li>';
					}
					break;
					case "tv":{
						zhuyan +='<li><em>主持:</em><a href="'+movieinfo.director.url+'" target="_blank">'+movieinfo.director.name+'</a></li>';
						daoyan +=strShow(movieinfo.actor,'嘉宾');
					}
					break;
					case "documentary":;
					break;
					default:;
					break;
				}

				if(typeof(movieinfo.actor) != "undefined"){
					var actor = movieinfo.actor;
				}
				strHTML +='<ul class="movieDetail">'+zhuyan+daoyan+leixing+area+year+'</ul>';
				strHTML +='<p><a class="btn tosee" title="去看看观看" href="'+playurl+'" target="_blank">去迅雷看看观看<b class="icon"></b></a></p>';
			}
			$("filmPartSide").innerHTML =strHTML;
		})(movieid);
	}
	function strShow(actor,node){
		var arr = actor;
		var str = '';
		var lLength = arr.length;
		if(lLength>0){
			str += '<li><em>'+node+':</em>';
			for(var i = 0;i<lLength&&i<4;i++){
				var actorObj = arr[i];
				str +='<a href="'+actorObj.url+'" target="_blank">'+actorObj.name+'</a>';
			}
			str +='</li>';
		}
		return str;
	}
	function lxShow(genre){
		var arr = genre;
		var str = '';
		var lLength = arr.length;
		if(lLength>0){
			str += '<li><em>类型:</em>';
			for(var i = 0;i<lLength&&i<2;i++){
				var genreObj = arr[i];
				str +='<a href="'+genreObj.url+'" target="_blank">'+genreObj.name+'</a>';
			}
			str +='</li>';
		}
		return str;
	}
	function ayShow(obj,node){
		var arr = obj;
		var str = '';
		if(typeof arr.name !="undefined"){
			str += '<li><em>'+node+':</em><a href="'+arr.url+'" target="_blank">'+arr.name+'</a></li>';
		}
		return str;
	}
