            var initedReposterContent = false;
            function initReposterContent(){
                if(initedReposterContent)return;
                if($('reposter_content')==null)return;
                var reposterCover = new textAreaPlus($('reposter_content'));
                EventUtil.addEventHandler(reposterCover,'keyup',function(){
