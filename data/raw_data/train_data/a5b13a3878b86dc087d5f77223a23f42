	$(".tab").hide();
	$(".tab:first").show();
	$(".qtab:first").addClass("full_tit_btn");
	$(".qtab").bind("mouseover", function(){
		$(".qtab").removeClass("full_tit_btn")
	    $(this).addClass("full_tit_btn");
		var index = $(".qtab").index( $(this) );
		$(".tab").eq(index).siblings(".tab").hide().end().show();
   });
});
