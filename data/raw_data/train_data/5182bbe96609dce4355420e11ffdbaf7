function htmlDecode(str){
     return str
           .replace(/&#39;/g, '\'')
           .replace(/<br\s*(\/)?\s*>/g, '\n')
           .replace(/&nbsp;/g, ' ')
           .replace(/&amp;nbsp;/g,' ')
           .replace(/&lt;/g, '<')
           .replace(/&gt;/g, '>')
           .replace(/&quot;/g, '"')
           .replace(/&amp;/g, '&');
 }

//服务号appId 分享图片 分享内容 分享标题
var headimg = "static2/user/256959/article/8a299a2954d2ac2a0154dd89df341e49/1464005681289.jpg@!square-96";
var imgUrl = "";
var summary = htmlDecode("前几个月曝出刘强东花4亿元买私人飞机，博奶茶一笑。那么很多**科技的同学就问了，京东财报连年亏损，为什么刘强");
var title = htmlDecode("什么叫现金流？看完你就明白云联惠了");

if(headimg=="" || headimg.indexOf("add_box.jpg")!=-1 || headimg.indexOf(".gif")!=-1){
	imgUrl="http://oss.tieqq.com/resource/namecard/article/images/defaultPic.jpg";
}else if(summary==""){
	if(headimg=="" || headimg.indexOf("add_box.jpg")!=-1 || headimg.indexOf(".gif")!=-1){
		imgUrl ="http://oss.tieqq.com/resource/namecard/article/images/defaultPic.jpg";
	}else{
		imgUrl = "http://oss.tieqq.com/static2/user/256959/article/8a299a2954d2ac2a0154dd89df341e49/1464005681289.jpg@!square-96";
	}
	summary = title;
}else{
	imgUrl = "http://oss.tieqq.com/static2/user/256959/article/8a299a2954d2ac2a0154dd89df341e49/1464005681289.jpg@!square-96";
}

 
