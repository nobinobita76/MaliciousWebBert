<!--初始化-->
<script type="text/javascript">

    $('.changeplatform').on( 'click' , function () {
        var liveplatform = $(this).html();
        downHostInform( liveplatform);
    })

	function downHostInform( liveplatform) {
		//提交表单
		$.ajax({
			url: "/co/starhost/indexhost",
			type: "get",
			dataType: "json",
            data:{'liveplatform' : liveplatform},
			success: function (data) {
				$("#data").empty();
				for( var i = 0 ; i < data.length ; i++  ){
					var host = data[i];
                    $("#data").append('<li></li>');
                    $("#data li:last").append(
                            '<a href="'+host.liveaddress+'" target="_blank">'+
                            '<img src="http://images.event.wanmei.com'+ host.perimg + '"  alt="" />'+
                            /*'<p class="atime">直播时间：每天'+ host.starttime + '-' +host.endtime +'</p>'+*/
                            '<div class="lightborder">'+
                            '<p>进入直播间</p>'+
                            '</div>'+
                            '</a>'
                    );
				}
				$(".lbprimary").slide({titCell:".hd ul",mainCell:".bd ul",prevCell:".leftbtn",nextCell:".rightbtn",effect:"leftLoop"});
			}
		});
	}


	$(function(){
		loginAndLogout();
		downHostInform('斗鱼');
	})
	function loginAndLogout() {
		var username = "";
		if( !isCorrectVal(username)){
			$("#login_btn").show();
			$("#logout_btn").hide();
			$(".login").click(function () {
				login();
			})
		}else{
			$("#username").html(username);
			$("#logout_btn").show();
			$("#login_btn").hide();
			$(".logout").click(function () {
				logout();
			})
		}
	}
	function login(){
		wanmei.passport.islogin({session:'USER',_false:function(){
			wanmei.passport.login({session:'USER',hdid:'co_starhost_status'});
		}});
	}
	function logout(){
		wanmei.passport.logout({session:'USER'});
	}
	//判断一个字符串为空
	function isCorrectVal(value) {
		if( value === null || value === undefined || value.trim().length === 0) {
			return false;
		}
		return true;
	}
</script>
<script type="text/javascript">
	$(function(){
		$(".lbprimary").slide({titCell:".hd ul",mainCell:".bd ul",prevCell:".leftbtn",nextCell:".rightbtn",autoPage:true,effect:"leftLoop",autoPlay:true});
		//
		$('.gotop').click(function(){
			$('html,body').animate({scrollTop:0}, 500)
		});
		$('.slinks a').click(function(){
			var num = $(this).attr('tip');
			$('html,body').animate({scrollTop:num},500);
		});
		//share
		$('.sharebtn').click(function(){
			wmShare.sinaT('', '一直都很羡慕月入过万的网红主播，这次我也有机会当网红了，你们会来《创世战车》支持我吗？和我直播的还有“霹雳爷们儿”“mike隋”等各种直播红人哦。http://t.cn/RIVqGPo', '/co/starhost/index');
		});

	});
</script>


