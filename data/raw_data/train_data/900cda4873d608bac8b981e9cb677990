$.get('/?m=user&a=get_roleer', function(obj){
if( typeof obj == 'object' ){
var user, tpl = $("#reputation_expert_tpl").html(), html;
for(var i in obj){
user = obj[i];
html = tpl;
html = html.replace(/\[uid\]/g, user.uid);
html = html.replace(/\[userimg\]/g, '<img src="'+user.userimg+'"/>');
html = html.replace(/\[username\]/g, user.username);
html = html.replace(/\[desc\]/g, user.desc);
$("#reputation_expert_tpl").after(html);
}
}
},'json');

