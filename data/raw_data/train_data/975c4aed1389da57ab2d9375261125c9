  <script type="text/javascript">
var vtip_arrow_path = "/Public/images3/vtip_arrow.png";
var jsLogonUid=parseInt(0);
var refershUrl="http://www.fawuzaixian.com/usersysmessage/ajax_getUserNum";
var getChatUserUrl="http://www.fawuzaixian.com/pcenter/ajax_get_user_chat_message";
var removeSoundNoticeUrl="http://www.fawuzaixian.com/pcenter/remove_sound_notice";
var allflickeri =10;
var userNumTimerId;
var is_notice=false;
var star=true;
$(document).ready(function(){
	if(jsLogonUid>0){
		refershUserNum();
		userNumTimerId=setInterval(refershUserNum,allflickeri*1000);
	}
	$("#new_message_sound").jPlayer({
        ready: function(event) {
        	$("#new_message_sound").jPlayer("setMedia", {
                mp3: "/Public/sound/new_im_msg.mp3"
            });
        },
        swfPath: "/Public/js3/jQuery.jPlayer.2.4.0",
        supplied: "mp3"
    });
});
function refershUserNum() {
	if(jsLogonUid>0){
		$.getJSON(refershUrl+"?u="+Math.random(20)+"&uid=0&type=0&jsonpCallback=?",function(data){
			if(data.status==1){
				if(data.num>0){
					flicker(data.chatNum,data.noticeNum,data.soundUser,data.isShop);
				}else{
					$("#mall_num_all").html("(0)");
					$("#new_liao_num").hide();
				}
			}else{
				jsLogonUid=0;
				$("#mall_num_all").html("(0)");
				$("#new_liao_num").hide();
			}
		});
	}
}
function flicker (chatNum,noticeNum,soundUser,isShop) {
	if(noticeNum>0){
		$("#mall_num_all").html("（"+noticeNum+"）")
	}
	if(chatNum>0){
		getChatUser(soundUser,isShop);
	}else{
		$("#new_liao_num").hide();
	}
}

function getChatUser(soundUser,isShop){
	$.getJSON(getChatUserUrl+"?u="+Math.random(20)+"&jsonpCallback=?",function(response){
		var imLength=response.length;
		$.each(response, function (i, e) {
			if(i==0){
				var imfrom="";
				if(isShop==1){
					imfrom="invite";
				}
				$("#im_href").attr("href","http://www.fawuzaixian.com/im/c?uid="+e.to_uid+"&type="+e.type+"&pid="+e.products_id+"&imfrom="+imfrom);
			}
			if(is_notice==false && (soundUser.indexOf(','+e.to_uid+',')>=0)){
				is_notice=true;
			}
        });
		if(is_notice==true){
			$("#new_message_sound").jPlayer("play");
			$.getJSON(removeSoundNoticeUrl+"?u="+Math.random(20)+"&jsonpCallback=?",function(soundResponse){});
			is_notice=false;
		}
		if(imLength>0){
			$("#new_liao_num").html("+"+imLength);
			$("#new_liao_num").show();
		}else{
			$("#new_liao_num").hide();
		}
	});
}
</script> 
