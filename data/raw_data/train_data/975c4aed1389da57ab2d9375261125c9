  <script type="text/javascript">
var ShowPre1 = new ShowPre({box:"focus-ul",Pre:"btnPre",Next:"btnNext",numIco:"focus-num",loop:1,auto:1});
$(document).ready(function(){
	$('#consult-title').bind('keyup', countTitle);
	$('#consult-title').bind('mouseup', countTitle);
	
	$('#consult-title').blur(function(){
		if ($('#consult-title').val().length==0) {
			$('#title-wordtip').hide();
		}
	});
});
function countTitle() {
	if ($('#consult-title').val().length>0) {
		$('#title-wordtip').show();
	} else {
		$('#title-wordtip').hide();
	}

	$('#title-wordcount').html(140 - $('#consult-title').val().length);
}
//评论
function beforeSubmit(){
	var uid="";
	var content=$('#consult-title').val();
	if(content==''||content=="请先登录，再发表评论"){
		jQuery.dialog({content:'请填写评论内容！',lock:true});
		return false;
	}
	if(jsLogonUid<=0){
		jQuery.dialog({content: "你暂未登录，登录后自动提交！",lock: true});
	}
}

$(function(){
	addHitCountRedis('13837','id','view_count','t_posts',1,"/");
});
