	$(window).scroll(function(){
		var $this = $(this);
		var targetTop = $(this).scrollTop();
		
		if (targetTop >= 90){
			$("#nav").removeClass("nav");
			$("#nav").addClass("navtop");
			//$(".empty-placeholder").removeClass("hidden");
		}else{
			$("#nav").removeClass("navtop");
			$("#nav").addClass("nav");
			//$(".empty-placeholder").addClass("hidden");
		}
	})
</script> 
