    <script>
        var grade = -1;
        var UserGrade = -2; //年级
        var region = -1; //用户权限 0:student ;1:teacher; 2:school;
        var isLogin = 0; //是否登录
        var isshiyanqu = 2; //是否是实验区 1:实验区，2：非实验区
        var step1 = 0, step2 = 0;
        var prvCode = -1;
        var cityId = -1;
        var countryId = -1;
        var comefrom = -1;
        var ipArea = "";
        var cityname = "";
        var classroom = -1;
        var schoolid = -1;
        var recordSort = 1;
        var truename = ""; //姓名
        var SchoolProperty = 0;
        var LengthOfSchooling = 0;
        var comefromcss = "http://file.safetree.com.cn/special/90/push.css"; //微信单独样式
        $(function () {
            WebServes.checkUserLoginNoLayer(function (json) {
                //已登录
                if (json != null && json.userid > -1) {
                    comefrom = json.comefrom;
                    prvCode = json.prvid;
                    cityId = json.cityid;
                    countryId = json.coutryid;
                    grade = json.grade;
                    schoolid = json.schoolid;
                    classroom = json.classroom;
                    truename = json.truename;
                    region = json.region;
                    SchoolProperty = json.SchoolProperty;
                    LengthOfSchooling = json.LengthOfSchooling;
                    switch (json.region) {//获取用户权限
                        case 0:
                            //student
                            region = 0;
                            $("#work2").html("<img src='http://file.safetree.com.cn/special/2016FirstClass/Styles/images/2016FirstClass/nav_nwc.png'>");
                            $("#btn1").show();
                            $("#btn2").show();
                            break;
                        case 9:
                        case 10:
                            //teacher
                            region = 1;
                            $("#work1").html("<img src='http://file.safetree.com.cn/special/2016FirstClass/Styles/images/2016FirstClass/nav_nwc.png'>");
                            break;
                        case 20:
                        case 21:
                            //school
                            region = 2;
                            $("#work1").html("<img src='http://file.safetree.com.cn/special/2016FirstClass/Styles/images/2016FirstClass/nav_nwc.png'>");
                            break;
                        default:
                            //others
                            region = 3;
                            break;
                    }
                    isLogin = 1;
                    ShowDCWJ(1, json.truename, cityId, json.region, json.SchoolProperty, json.LengthOfSchooling, grade);
                    var RegisterUrl = getCookie("ServerSide"); //所属站点
                    //非实验区 没有获取到cookies,调用方法去主库获取
                    if (RegisterUrl == "-1" || RegisterUrl == null) {
                        isshiyanqu = 2;
                        if (region == 0) {  //非实验区  学生用户
                            //给用户设置唯一标示的cookies
                            if (getCookie(getCookie("UserID") + "_2016fc1") == null || getCookie(getCookie("UserID") + "_2016fc2") == null) {
                                //调用《非实验区完成状态接口》
                                $.getJSON(Asmx + "/GetFinishStatus?jsoncallback=?", { r: Math.random() }, function (fres) {
                                    if (fres.Status == "True") {
                                        if (fres.StepOne == "True") {
                                            step1 = 1;
                                            var cookName1 = getCookie("UserID") + "_2016fc1";
                                            var zkcookName1 = getCookie("UserID") + "_zk2016fc1";
                                            setCookie(cookName1, 1, 365);
                                            setCookie(zkcookName1, 1, 365);
                                        } else {
                                            if (getCookie("clickone") == 1) {
                                                delCookie("clickone");
                                                tijiao(0);
                                            }
                                        }

                                        if (fres.StepTwo == "True") {
                                            step2 = 1;
                                            var cookName2 = getCookie("UserID") + "_2016fc2";
                                            var zkcookName2 = getCookie("UserID") + "_zk2016fc2";
                                            setCookie(cookName2, 1, 365);
                                            setCookie(zkcookName2, 1, 365);
                                        }
                                        finishStatus();
                                    } else {
                                        if (getCookie("clickone") == 1) {
                                            delCookie("clickone");
                                            tijiao(0);
                                        }
                                    }
                                });
                            }
                            else {
                                step1 = step2 = 1;
                                finishStatus();
                            }
                        } else {   //非实验区 非学生用户
                            //给用户设置唯一标示的cookies
                            if (getCookie(getCookie("UserID") + "_zk2016fc1") == null) {
                                //调用《非实验区完成状态接口》
                                $.getJSON(Asmx + "/GetFinishStatus?jsoncallback=?", { r: Math.random() }, function (fres) {
                                    if (fres.Status == "True") {
                                        if (fres.StepOne == "True") {
                                            var zkcookName1 = getCookie("UserID") + "_zk2016fc1";
                                            setCookie(zkcookName1, 1, 365);
                                            $("#work1").html("<img src='http://file.safetree.com.cn/special/2016FirstClass/Styles/images/2016FirstClass/nav_wc.png' />");
                                        }
                                    }
                                });
                            }
                            else {
                                var zkcookName1 = getCookie("UserID") + "_zk2016fc1";
                                setCookie(zkcookName1, 1, 365);
                                $("#work1").html("<img src='http://file.safetree.com.cn/special/2016FirstClass/Styles/images/2016FirstClass/nav_wc.png' />");
                            }
                        }
                    }
                    else //实验区
                    {
                        isshiyanqu = 1;
                        if (region == 0) {
                            if (getCookie(getCookie("UserID") + "_2016fc1") != null && getCookie(getCookie("UserID") + "_2016fns2") != null) {
                                step1 = step2 = 1;
                                finishStatus();
                            }
                            else {
                                GetFinishStatus(function (res) {
                                    if (res.Status == "True") {
                                        if (res.StepOne == "True") {
                                            var cookName1 = getCookie("UserID") + "_2016fc1";
                                            setCookie(cookName1, 1, 365);
                                            step1 = 1;
                                        } else {
                                            if (getCookie("clickone") == 1) {
                                                delCookie("clickone");
                                                tijiao(0);
                                            }
                                        }

                                        if (res.StepTwo == "True") {
                                            var cookName2 = getCookie("UserID") + "_2016fc2";
                                            setCookie(cookName2, 1, 365);
                                            step2 = 1;
                                        }
                                        finishStatus();

                                    } else {
                                        if (getCookie("clickone") == 1) {
                                            delCookie("clickone");
                                            tijiao(0);
                                        }
                                    }
                                });
                            }

                        }
                        //实验区 教师、校级权限 样式 
                        else {
                            if (getCookie(getCookie("UserID") + "_zk2016fc1") != null && getCookie(getCookie("UserID") + "_zk2016fc1") != "") {
                                $("#work1").html("<img src='http://file.safetree.com.cn/special/2016FirstClass/Styles/images/2016FirstClass/nav_wc.png' />");
                            } else {
                                GetFinishStatus(function (res) {
                                    if (res.Status == "True") {
                                        if (res.StepOne == "True") {
                                            var zkcookName = getCookie("UserID") + "_zk2016fc1";
                                            setCookie(zkcookName, 1, 365);
                                            $("#work1").html("<img src='http://file.safetree.com.cn/special/2016FirstClass/Styles/images/2016FirstClass/nav_wc.png' />");
                                        }
                                    }
                                });
                            }
                        }
                    }
                } else {
                    $("#step1").attr("onclick", "special.showLogin(31)");
                    finishStatus();
                }
                weixin(comefrom, function (a, b, c) {
                    comefrom = a, cityname = b, ipArea = c;
                    $("#weixin_cityname").append("教育百师通" + cityname);
                    if (comefrom >= 0) {
                        $("#wxbox-img1").attr("src", 'http://file.safetree.com.cn/angel/push/pushweixin.html?location=100007&siteid=' + comefrom + '&test=1&css=' + comefromcss).attr("onload", "javascript:getTitle();");
                        $("#wxbox-img2").attr("src", 'http://file.safetree.com.cn/angel/push/pushweixin.html?location=100007&siteid=' + comefrom + '&test=1&css=' + comefromcss).attr("onload", "javascript:getTitle();");
                        $("#wxbox-img4").attr("src", 'http://file.safetree.com.cn/angel/push/pushweixin.html?location=100007&siteid=' + comefrom + '&test=1&css=' + comefromcss).attr("onload", "javascript:getTitle();")
                    }
                });

                $(".message-ul").each(function () {
                    var _this = this;
                    var t2 = 0;
                    t2 = setInterval(function () {
                        var b1 = $(_this).find('li:first');
                        var b2 = $(_this).find('li:last');
                        $(b1).insertAfter($(b2));
                    }, 3000);
                });
            });

            //点击完成情况按钮按钮
            $("#FinishSituation").click(function () {
                if (region > 0) {
                    window.location.href = "/2016FirstClass_Execution_school.html";
                } else {
                    window.location.href = "/2016FirstClass_Execution_family.html";
                }
            });
        });



        //签名
        //isFinish  =>0,未完成    1,已完成
        function tijiao(isFinish) {
            //判断用户是否登录 isLogin=>0:未登录;1:已登入
            if (isLogin == 0) {
                //弹登录框 提示登录
                special.showLogin(2);
            }
            else {
                // 学生
                if (region == 0) {
                    //获取完成状态 
                    try {
                        $("#step1").hide();
                        $("#qming").show();
                        //实验区
                        if (isshiyanqu == 1) {
                            //平台写入数据
                            SpecialSign(function (res2) {
                                if (res2 != null) {
                                    if (res2.Status == "True") {
                                        var cookName1 = getCookie("UserID") + "_2016fc1";
                                        setCookie(cookName1, 1, 365);
                                        //调用主库
                                        $.getJSON(Asmx + "/SpecialSign?jsoncallback=?", { r: Math.random(), Prv: prvCode, City: cityId, County: countryId, School: schoolid, Grade: grade, Class: classroom, UserType: region, Comefrom: comefrom }, function (res3) {
                                            if (res3 != null) {
                                                if (res3.Status == "True") {
                                                    step1 = 1;
                                                    //设cookies 
                                                    var zkcookName = getCookie("UserID") + "_zk2016fc1";
                                                    setCookie(zkcookName, 1, 365);
                                                    finishStatus();
                                                    //showadDialog(recordSort);
                                                } else if (res3.Msg.length > 0) {
                                                    finishStatus();
                                                    alert(res3.Msg);
                                                }
                                            }
                                            else {
                                                finishStatus();
                                            }
                                        });
                                        ShowDCWJ(2, truename, cityId, region, SchoolProperty, LengthOfSchooling, grade);
                                    }
                                    else if (res2.Msg.length > 0) {

                                        finishStatus();
                                        alert(res2.Msg);
                                    }
                                }
                                else {
                                    ShowDCWJ(2, truename, cityId, region, SchoolProperty, LengthOfSchooling, grade);
                                    finishStatus();
                                }
                            });
                            ShowDCWJ(2, truename, cityId, region, SchoolProperty, LengthOfSchooling, grade);
                        }
                        //非实验区
                        else {
                            $("#step1").hide();
                            $("#qming").show();
                            $.getJSON(Asmx + "/SpecialSign?jsoncallback=?", { r: Math.random(), Prv: prvCode, City: cityId, County: countryId, School: schoolid, Grade: grade, Class: classroom, UserType: region, Comefrom: comefrom }, function (res4) {
                                if (res4 != null && res4.Status == "True") {
                                    step1 = 1;
                                    //设置Cookie 
                                    var zkcookName = getCookie("UserID") + "_zk2016fc1";
                                    var cookName1 = getCookie("UserID") + "_2016fc1";
                                    setCookie(cookName1, 1, 365);
                                    setCookie(zkcookName, 1, 365);
                                    finishStatus();
                                    //showadDialog(recordSort);
                                }
                                else if (res4.Msg.length > 0) {
                                    alert(res4.Msg);
                                    finishStatus();
                                }
                            });
                            ShowDCWJ(2, truename, cityId, region, SchoolProperty, LengthOfSchooling, grade);
                        }
                    }
                    catch (e) {
                        finishStatus(0);
                        alert("网络异常！请稍后尝试");
                    }

                }
                //教师、校级
                else {
                    //显示无权限
                    alert("无法进行操作，您没有此权限");
                }
            }
        }
        function finishStatus() {//0未完成；1已完成
            if (step1 == 1) {
                $("#step1").html("已完成");
                $("#step1").show();
                $("#qming").hide();
                $("#btn1").attr("class", "y-wc");
            }
            if (step2 == 1) {
                $("#step2").html("已完成");
                $("#btn2").attr("class", "y-wc");
            }
            if (step1 == 0) {
                $("#step1").show();
                $("#qming").hide();
            }
            if (step1 == 1 && step2 == 1) {
                $("#work2").html("<img src='http://file.safetree.com.cn/special/2016FirstClass/Styles/images/2016FirstClass/nav_wc.png' />");
            }

        }

        function vodiePlay() {
            $('#video').html('<video width="100%" style="width:100%" controls="controls" autoplay="autoplay" loop="loop">	<source src="http://safetree.cbern.com.cn/2016aqjtb.mp4" type="video/mp4"><object classid="clsid:D27CDB6E-AE6D-11cf-96B8-444553540000"codebase="http://download.macromedia.com/pub/shockwave/cabs/flash/swflash.cab#version=6,0,29,0" width="670" height="550"><param name="movie" value="http://safetree.cbern.com.cn/flvplayer.swf"><param name="quality" value="high"><param name="allowFullScreen" value="true" /><param name="FlashVars" value="vcastr_file=http://safetree.cbern.com.cn/2016aqjtb.flv&IsAutoPlay=1"/><embed src="http://safetree.cbern.com.cn/flvplayer.swf" allowFullScreen="true" FlashVars="vcastr_file=http://safetree.cbern.com.cn/2016aqjtb.flv&IsAutoPlay=1" quality="high" pluginspage="http://www.macromedia.com/go/getflashplayer"type="application/x-shockwave-flash" width="670" height="550"></embed></object></video>');

            $('#video').show();
            _czc.push(['_trackEvent', '2016安全第一课', "家庭版视频播放", cityname + comefrom.toString(), '1', 'look-btn']);
        }


        //垂直推广弹层
        function showChuiZhi1qq() {
            if (prvCode == 15 || prvCode == 16 || prvCode == 28 || prvCode == 39) {
                var day = new Date();
                var today = new Array('星期日', '星期一', '星期二', '星期三', '星期四', '星期五', '星期六');
                var week = today[day.getDay()];
                var hour = day.getHours();
                if (week == "星期日" || week == "星期六") {
                    show("wx-sjb_7");
                    _czc.push(['_trackEvent', '2016年秋季安全第一课手机报推广', '显示弹层', cityname + comefrom.toString(), '', '"wx-sjb_7']);
                } else {
                    if (hour < 7 || hour > 16) {
                        show("wx-sjb_7");
                        _czc.push(['_trackEvent', '2016年秋季安全第一课手机报推广', '显示弹层', cityname + comefrom.toString(), '', '"wx-sjb_7']);
                    }
                }
            } else {
                var gradeStr = "";
                if (comefrom == 20096) {
                    if (grade == 0 || grade == 13 || grade == 14) {
                        gradeStr = "幼儿段";
                        show('wx-czh1');
                    } else if (grade >= 1 && grade <= 3) {
                        gradeStr = "小学段（1-3）";
                        show('wx-czh2');
                    } else if (grade >= 4 && grade <= 5) {
                        gradeStr = "小学段（4-5）";
                        show('wx-czh3');
                    } else if (grade >= 6 && grade <= 9) {
                        gradeStr = "中学段";
                        show('wx-czh4');
                    } else if (grade >= 10 && grade <= 12) {
                        gradeStr = "高中段";
                        show('wx-czh5');
                    }

                } else {
                    if (grade == 0 || grade == 13 || grade == 14) {
                        gradeStr = "幼儿段";
                        show('wx-czh1');
                    } else if (grade >= 1 && grade <= 3) {
                        gradeStr = "小学段（1-3）";
                        show('wx-czh2');
                    } else if (grade >= 4 && grade <= 6) {
                        gradeStr = "小学段（4-6）";
                        show('wx-czh3');
                    } else if (grade >= 7 && grade <= 9) {
                        gradeStr = "中学段";
                        show('wx-czh4');
                    } else if (grade >= 10 && grade <= 12) {
                        gradeStr = "高中段";
                        show('wx-czh5');
                    }
                }
                _czc.push(['_trackEvent', '2016年秋季安全第一课垂直号推广：' + gradeStr, '显示弹层', cityname + comefrom.toString(), '年级：' + grade, 'wx-czh']);
            }
        }

        //开学调查问卷弹层
        function ShowDCWJjjj(obj, TrueName, CityID, Region, SchoolProperty, LengthOfSchool, Grade) {
            try {
                var DCWJCityAry = [370100, 370200, 320100, 440001, 150010, 20004, 330100, 510100, 120023, 440300]; //活动城市
                var NowDate = new Date(); //当前时间
                var EndDate = new Date('2016/09/28 23:59:59'); //结束时间
                var FinishStatus = getCookie("DCWJ2016") == getCookie("UserID"); //为True则表示肯定已经参与过了  False表示可能参与过也可能没参与过
                if (obj == 1) {
                    if (NowDate < EndDate && Region <= 10 && SchoolProperty == 1 && $.inArray(parseInt(CityID), DCWJCityAry) > -1 && !FinishStatus) {
                        if ((Region == 0 && ((LengthOfSchool == 2 && (Grade == 6 || Grade == 7)) || (LengthOfSchool != 2 && (Grade == 7 || Grade == 8)) || Grade == 1)) || (Region == 10 && Grade >= 1 && Grade <= 9)) {
                            $.getJSON("http://dcwj.safetree.com.cn/Questionnaire.asmx/QuestionnaireStatus?jsoncallback=?", { r: Math.random() }, function (res) {
                                if (res != null && res != "" && res.Status == "False") {
                                    $("#DCWJName").html(TrueName);
                                    show("survey-modal");
                                }
                            });
                        }
                    }
                } else {
                    if (NowDate < EndDate && Region <= 10 && SchoolProperty == 1 && $.inArray(parseInt(CityID), DCWJCityAry) > -1 && !FinishStatus) {
                        if ((Region == 0 && ((LengthOfSchool == 2 && (Grade == 6 || Grade == 7)) || (LengthOfSchool != 2 && (Grade == 7 || Grade == 8)) || Grade == 1)) || (Region == 10 && Grade >= 1 && Grade <= 9)) {
                            $.getJSON("http://dcwj.safetree.com.cn/Questionnaire.asmx/QuestionnaireStatus?jsoncallback=?", { r: Math.random() }, function (res) {
                                if (res != null && res != "" && res.Status == "False") {
                                    $("#DCWJName").html(TrueName);
                                    show("survey-modal");
                                } else {
                                    //showChuiZhi();
                                }
                            });
                        } else {
                            //showChuiZhi();
                        }
                    } else {
                        //showChuiZhi();
                    }
                }
            } catch (e) {
                alert(e);
            }
        }
    </script>


</body></html>