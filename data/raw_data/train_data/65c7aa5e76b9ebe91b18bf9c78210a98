                        $("#op").remove();
                        $("#report_tip").removeClass("d_b").addClass("d_n");
                        $(".report").removeClass("report").addClass('didreport');
                        $(".reporeted").html(json.errstr);
                        $(".reporeted").css({"display":"block"}).delay(1000).fadeOut(500);
