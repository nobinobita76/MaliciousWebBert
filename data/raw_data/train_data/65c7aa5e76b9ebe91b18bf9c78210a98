            $.post("?m=thread&a=report",
                {fid:json.fid, tid:json.tid, url:json.url, msg:msg, type:type},
                function(data) {
                    var json = $.parseJSON(data);
                    if(json.errno) {
                        $(".reporeted").html(json.errstr);
                        $(".reporeted").css({"display":"block"}).delay(1000).fadeOut(500);
                        return false;
