	function androidReportEvent(str){
		if(typeof TTAndroidObject == "object"){
			TTAndroidObject.reportLocalEvent(str);
			return true
		}else{
			console.log(str);
			return false;
		}				
	};
	
    function androidLogEvent(tag, label, value, ext_value){
		androidReportEvent("bytedance://log_event?category=umeng&tag="+tag+"&label="+label+"&value="+value+"&ext_value="+ext_value);
	};
	
	
	var downloadBtn = document.querySelector(".download_btn"); 
	var id   = downloadBtn.getAttribute('ad_id');
			
	androidLogEvent("embeded_ad","detail_show",id,0);
	androidReportEvent('bytedance://disable_swipe');
	
	downloadBtn.addEventListener("click",function(e){
		var name = this.getAttribute("app_name"), url = encodeURIComponent(this.href);
		androidLogEvent("embeded_ad","detail_download",id,0);
		androidReportEvent("bytedance://download_app?app_name="+name+"&download_url="+url);
		var is_supported = (typeof TTAndroidObject == "object");
		is_supported ? e.preventDefault() : "";
	});
	
	var app_imgs = document.querySelectorAll("#carousel img");
	for(var i=0;i<app_imgs.length;i++){
