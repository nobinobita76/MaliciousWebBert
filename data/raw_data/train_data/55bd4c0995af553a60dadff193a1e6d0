      <script type="text/javascript"> 
                        $(function(){

                            $('.A_usrig span').on('click',function(){
                                if($(this).hasClass('ns')){
                                    $(this).removeClass('ns').text('展开')
                                    $(this).prev().css({'height':'37px'})
                                }else{
                                    $(this).addClass('ns').text('收起')
                                    $(this).prev().css({'height':'auto'})
                                }
                            })


                            $('#comment_list').on('click','.A_dm',function(){
                                if($(this).hasClass('vs')){
                                    $(this).removeClass('vs').parent().next().hide()
                                }else{
                                    $(this).addClass('vs').parent().next().show()
                                }
                            })


                            $('.A_share').on('click','span',function(){
                                if($(this).hasClass('nyes')){
                                    $(this).removeClass('nyes');
                                    $("#sub_weibo").val('0');
                                }else{
                                    $(this).addClass('nyes');
                                    $("#sub_weibo").val('1');
                                }
                            })


                            $('.A_tjlist').on('click','li',function(){
                                $(this).addClass('ynb').siblings().removeClass('ynb');
                                var type = $(this).attr("data");
                                $.post('/ajax_new/ajax_action.php?action=advise&id=75000&type='+type+"&t="+new Date().getTime(),function(res){
                                    console.log(res);
                                    if(res.is_error == '0'){
                                        $("#suggest").html("");
                                        $("#suggest").html(res.data);
                                        $(".A_tmore").attr("id","A_more");
                                        $(".A_tmore").attr("type",res.type);
                                        $(".A_tmore").html("查看更多资讯");
                                        window._bd_share_main.init();
                                        document.getElementById("click_me").click();
                                        
                                    }else{
                                        $("#suggest").html("");
                                        window._bd_share_main.init();
                                    }
                                },'json');
                            })


                            $('#comment_list').on('click','.A_pm',function(){
                                var num = $(this).find('em').text();
                                num = num ? num : 0;
                                num = num ? num : 0;
                                var obj = $(this);
                                var id = $(this).attr("data");
                                $.post('/ajax_new/ajax_action.php?action=like&obj_type=comment&obj_id='+id,function(res){
                                    console.log(res);
                                    if(res.is_error === 0){
                                        obj.addClass('A_pm2').find('em').text(++num);
                                        obj.removeClass("A_pm");
                                    }
                                },'json');
                                
                            })

                        })
                    </script> 
