     <script>
                        //全局变量，动态的文章ID
                        var ShareId = "";
                        var ShareTitle = "";
                        //绑定所有分享按钮所在A标签的鼠标移入事件，从而获取动态ID
                        $(function () {
                            $("#suggest,.A_actext").on('mouseover','.bdsharebuttonbox a',function () {
                                ShareId = $(this).attr("data-id");
                                ShareTitle = $(this).attr("data-title");
                            });

                            $("#ew a").mouseover(function () {
                                ShareId = $(this).attr("data-id");
                            });
                        });

                        /*
                         * 动态设置百度分享URL的函数,具体参数
                         * cmd为分享目标id,此id指的是插件中分析按钮的ID
                         *，我们自己的文章ID要通过全局变量获取
                         * config为当前设置，返回值为更新后的设置。
                         */
                        function SetShareUrl(cmd, config) {
                            if (ShareId) {
                                config.bdUrl = "http://www.ctoutiao.com/" + ShareId + ".html";
                            }
                            if (ShareTitle) {
                                config.bdText = ShareTitle;
                                config.bdDesc = ShareTitle;
                            }
                            return config;
                        }

                        //统计分享次数
                        function countClick(cmd){
                            $.ajax({
                                url:'/ajax_new/ajax_action.php?action=count_click&id='+ShareId+'&share_id='+cmd,
                                type:'get',
                                //dataType:'json',
                                async:'false',
                                success:function(res){
                                },
                                error:function(){

                                }
                            });
                        }

                        window._bd_share_config={
                            "common":{
                                "bdSnsKey":{},
                                "bdText":"",
                                "bdDesc":"",
                                "bdPic":"",
                                "onBeforeClick":SetShareUrl,
                                "onAfterClick":countClick,
                                "bdMini":"2",
                                "bdMiniList":false,
                                "bdStyle":"0",
                                "bdSize":"32"},
                                "share":{}
                            };
                        with(document)0[(getElementsByTagName('head')[0]||body).appendChild(createElement('script')).src='http://bdimg.share.baidu.com/static/api/js/share.js?v=89860593.js?cdnversion='+~(-new Date()/36e5)];
                    </script> 
     <a href="javascript:;" id="A_more" class="A_tmore ttp" page="2" data-id="75000" type="start">+加载更多资讯</a> 
     <script type="text/javascript">
                    $(".A_conpsg").on('click','#A_more',function(){
                        var id = $(this).attr("data-id");
                        var p = $(this).attr("page");
                        var type = $(this).attr("type");
                        var obj = $(this);
                        $.ajax({
                            url:'/ajax_new/ajax_action.php?action=more_sug&id='+id+"&p="+p+"&type="+type,
                            type:'get',
                            dataType:'json',
                            async:'false',
                            success:function(res){
                                console.log(res);
                                if(res.is_error == 0){
                                    $("#suggest").append(res.data);
                                    obj.attr("page",parseInt(p)+1);
                                }else{
                                    obj.attr("page",'2');
                                    obj.html("没有更多资讯了");
                                    obj.attr("id","");
                                }
                            },
                            error:function(){

                            }
                        });
                    });
                </script> 
