$(function(){
    $('#regLogDialog .D_title').on('click','span',function(){
    	if($(this).hasClass('D_noline')){
	        $(this).removeClass('D_noline').siblings().addClass('D_noline');
	        $('.D_dnoop').removeClass('D_dnoop').siblings().addClass('D_dnoop');
	        if($(this).hasClass('J_regist')){
	        	$('#J_logon_title').text('无需注册，即可登录');
	        }else{
	        	$('#J_logon_title').text('第三方账号登录');
	        }
    	}
    });
    var obj = new WxLogin({
        id:"weixin_login_container",
        appid: "wx613e0fa3382cd500",
        scope: "snsapi_login",
        redirect_uri: "http://www.ctoutiao.com/connect/weixin/",
