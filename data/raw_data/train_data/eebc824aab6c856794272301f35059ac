  <script>
    (function(){
        var appInfo = false;
        var news_setting_str = '{"news_id":"69622","is_collection":0,"comments_url":"http:\/\/jjcbw.com\/News\/comment\/id\/69622.html","comment_api":"http:\/\/jjcbw.com\/News\/postcomment\/id\/69622.html","allow_comment":"1","comment_count":"12","share":{"title":"\u745e\u660c\u4e00\u6751\u6c11\u8bef\u4fe1\u7535\u89c6\u8d2d\u7269\u88ab\u9a97\uff0c\u5343\u5143\u4e70\u56de\u7684\u7535\u8111\u3001\u624b\u673a\u3001\u7535\u8bdd\u5361\u5747\u662f\u5047\u8d27","url":"http:\/\/jjcbw.com\/News\/news\/id\/69622.html","img":"http:\/\/appimage.jjcbw.com\/upload\/2016-12-02\/082057_000275eb00bc676a7669bfc9a51186b6\/082107_b31d1cd6c8666ef9df8f3bbafa403434.jpg","share_callback":"http:\/\/jjcbw.com\/News\/share\/id\/69622.html"},"show_message":""}';
        var news_setting = JSON.parse(news_setting_str);
        document.addEventListener("zzjjAppJSBridgeReady",function () {
            hookNewsLink();
            initOtherNews();
            api.setNewsSetting(news_setting_str);
            getAppInfo();
            initAppMsg();
            setImageClick();
        });
        function hookNewsLink(){
            $("a").each(function(i,o){
                var reg = new RegExp(/(http|https):\/\/(www|app)\.jjcbw\.com\/Api\/News\/news\/id\/\d*?\.html/ig);
                o = $(o);
                var url = o.attr("href");
                if (reg.test(url)){
                    var data = {url:url,type:"normal"};
                    o.attr("href","javascript:void(0)");
                    o.on("click",function () {
                        api.newOpenNews(JSON.stringify(data));
                    })
                }
            });
        }
        function setImageClick() {
            $('.news-content img:not([data-attr=notclick])').on('click',function(){
                var pa = $(this).parents('a');
                if(!pa.length){
                    var src = $(this).attr('src');
                    api.openImg(src);
                }
            });
        }
        function getAppInfo() {
            var data = JSON.parse(api.getAppInfo());
            if (typeof data != "object") return;
            appInfo = data;
            initShare();
        }
        function initOtherNews() {
            $(".news-other-list a").each(function (i, o) {
                var obj = $(o);
                var data = {url:obj.attr("href"),type:obj.data("type")};
                obj.attr("href","javascript:void(0)");
                obj.on("click",function () {
                    api.newOpenNews(JSON.stringify(data));
                })
            })
        }
        function initAppMsg() {
            window.appAlert = function (message, type) {
                var data = {info:message};
                if (typeof type!="undefined") data.status=type;
                api.showMsg(JSON.stringify(data));
            }
            window.appError = function (message) {
                appAlert(message,0);
            }
            window.appSuccess = function (message) {
                appAlert(message,1);
            }
            window.appStatus = function (message) {
                appAlert(message,2);
            }
            window.appMessageClose = function () {
                appAlert("",99);
            }
        }
        function initShare() {
            if (typeof appInfo.appinstall == "object"){
                if (appInfo.appinstall.wechat=="1"){
                    $(".news-share-button[data-action=share][data-type=wechat]").removeClass("hidden");
                    $(".news-share-button[data-action=share][data-type=wechattime]").removeClass("hidden");
                }
                if (appInfo.appinstall.qq=="1"){
                    $(".news-share-button[data-action=share][data-type=qq]").removeClass("hidden");
                }
            }
            $(".news-share-button[data-action=share]").on("click",function () {
                var type = $(this).data("type");
                if (typeof news_setting =="object" && typeof news_setting.share =="object"){
                    var data = news_setting.share;
                    data.type = type;
                    api.share(JSON.stringify(data));
                }
                else {
                    appError("参数错误，无法分享");
                }
            })
        }
    })();
</script> 
  <script type="text/javascript">

    $(function(){
        $(".news-content").find('*').each(function(i,o){
            o = $(o);
            var f = 0;
            f = o.css('font-size');
            f = f.replace(/(\d*).*/gi,function($0,$1){return($1)});
            if(!f || isNaN(f)){
                f = 14;
            }
            else{
                f = Number(f);
            }
            o.data('fontsize',f);
        });

        var fontsize = getCookie('fontsize');
        //console.log(fontsize);
        if(fontsize!=null && fontsize!=""){
            if(isNaN(fontsize) || Number(fontsize) > 5 || Number(fontsize) < 1){
                setCookie('fontsize','3',365);
                $('#fontsizemenu').find('li[data-index=3]').addClass("active");
                return;
            }
            setCookie('fontsize',fontsize,365);
            $('#fontsizemenu').find('li[data-index='+fontsize+']').addClass("active");
        }
        else{
            setCookie('fontsize','3',365);
            $('#fontsizemenu').find('li[data-index=3]').addClass("active");
        }
        $('#fontsizemenu a[data-size]').on('click',function(){
            fontsize = $(this).parent().data('index');
            if(isNaN(fontsize) || Number(fontsize) > 5 || Number(fontsize) < 1){
                return;
            }
            setCookie('fontsize',fontsize,365);
            $('#fontsizemenu').find('li').removeClass("active");
            $(this).parent().addClass("active");
            console.log($(this).data('size'));
            setfontsize($(this).data('size'));
        });
        setfontsize($('#fontsizemenu').find('li[data-index='+fontsize+']').find('a[data-size]').data('size'));
        function setfontsize(r){
            r = parseFloat(eval(r));
            $(".news-content").find('*').each(function(i,o){
                //console.log(i,o);
                o = $(o);
                var f = 0;
                if(!o.data('fontsize')){
                    return;
                }
                else{
                    f = o.data('fontsize');
                }
                //console.log(f+","+r+","+f*r);
                o.css('font-size',f*r+"px");

            });
        }
    });

    //下方为评论相关代码

    $(function () {
        $(function () {
            var url = "/News/commentdata/id/69622/hit/1.html";
            var content = $(".comment-content");
            var isload_dom = $(".comment-loadtip span[data-attr=isload]");
            var notload_doms = $(".comment-loadtip span[data-attr=notload]");
            var readmore_doms = $(".comment-loadtip span[data-attr=readmore]");

            isload_dom.removeClass("hidden");
            $.post(url,{p:1},function (data) {
                if (data.html){
                    var html = $(data.html);
                    content.append(html);
                    html.find(".comment-reply-more").click();
                }
                isload_dom.addClass("hidden");
                if (data.counts){
                    if (window.api && window.api.getAppInfo){
                        readmore_doms.removeClass("hidden");
                    }
                    if (data.counts > 0){
                        readmore_doms.find("span").html(data.counts);
                        var url = $("a",readmore_doms).attr("href");
                        $("a",readmore_doms).attr("href","javascript:void(0)").on("click",function () {
                            var info = {
                                url:url,
                                title:"查看评论"
                            };
                            api.newOpenNews(JSON.stringify(info));
                        })
                    }
                    else {
                        readmore_doms.removeClass("hidden");
                        readmore_doms.html("还没有评论");
                    }
                }
                else{
                    notload_doms.removeClass("hidden");
                }
            })
        });

        $(function () {
            $(".comment-content").on("click",".comment-reply-more",function () {
                var div = $(this);
                var count_dom = $("span[data-attr=count]",div);
                var load_dom = $("span[data-attr=load]",div);
                var load_icon = $("i",div);
                if (load_dom.hasClass("hide")) return;
                load_dom.addClass("hide");
                load_icon.removeClass("hide");
                var content_dom = div.parent().find(".comment-reply-content");

                var p = div.data("p");
                var id = div.data("id");
                var data = {p:p,id:id};
                div.data("p",Number(p)+1);
                $.post('/News/commentreply.html',data,function (obj) {
                    if (obj.end<=0){
                        div.hide();
                    }
                    else {
                        count_dom.html(obj.end);
                        load_icon.addClass("hide");
                        load_dom.removeClass("hide");
                    }
                    $.each(obj.data,function (i, o) {
                        var html = "<div><span class='comment-name'>"+o.name+"</span>："+o.content+"&nbsp;<span class='comment-time'>"+o.time+"</span></div>";
                        content_dom.append(html);
                    })
                })
            })
        });
        $(function () {
            $(".comment-content").on("click","a[data-action=comment_news]",function () {
                var a = $(this);
                var api_url = a.data("href");
                api.comment(api_url);
            })
        });
        $(function () {
            $(".comment-content").on("click","span.comment-action-zan",function () {
                var url = '/News/zan.html';
                var id = $(this).data("id");
                var icon = $(this).find(".icon-praise-gran");
                if (icon.hasClass("icon-praise-gran-checked")){
                    return;
                }
                var em = $(this).find("em");
                var num = 1;
                var onum = em.html();
                if (onum!=="" && !isNaN(onum)) num = Number(onum) + 1;
                em.html(num);
                icon.addClass("icon-praise-gran-checked");
                $.post(url,{id:id},function (obj) {

                })
            })
        });
    });
    //评论相关代码结束

