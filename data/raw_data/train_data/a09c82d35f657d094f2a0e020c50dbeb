  <script language="javascript" type="text/javascript">
    function ChangeTab(switchgroup, switchid, tabgroup, tabid, tabcss, tabselcss) {
        $("div[name=" + tabgroup + "]").removeClass().addClass(tabcss);
        $("#" + tabid).removeClass().addClass(tabselcss);
        $("div[name=" + switchgroup + "]").hide();
        $("#" + switchid).show();
    }

    $(function () {//文章详细内容的图片放大，缩放
        $("#artcontent img").each(function (i) {
            DrawImage($(this)[0]);
            //#region 变量
            var imgID = "example" + i;
            var pictitle = $(this).attr("alt");
            $(this).attr("title", pictitle);
            $(this).parent("a").attr("id", imgID);
            var thisSrc = $(this).attr("src");
            $(this).parent("a").attr("href", thisSrc);
            $(this).after(" <img id=\"imgzoom" + i + "\" src=\"http://articles.e-works.net.cn/images/zoom.gif\" title=\"放大图片\" />");
            $(this).parents("p").css("margin", "-1px");
            //#endregion
            var thisImgID = $(this).parent("a").attr("id");
            thisImgID = "a#" + thisImgID;
            //#region 点击图片
            $(this).click(function () {

                $(thisImgID).fancybox({
                    'titleShow': false,
                    'centerOnScroll': true
                });
            });
            $("#imgzoom" + i + "").click(function () {

                $(thisImgID).fancybox({
                    'titleShow': false,
                    'centerOnScroll': true
                });
            });
            //#endregion
        });

    })

    //差一个图片缩放

    //第三方监控代码
    ShowStatAndAd(415);
    SetUserArticleKeyword("\u0049\u0054\u5e94\u7528\u7ba1\u7406\u0020\u0045\u0050\u0043\u9879\u76ee\u0020\u6570\u5b57\u4e13\u7ebf\u0020\u0041\u0044\u57df\u0020\u9879\u76ee\u901a\u8baf");

    function reinitIframe() {
    document.domain = "e-works.net.cn";
    var iframe = document.getElementById("artcomment");
    try {
        var bHeight = iframe.contentWindow.document.body.scrollHeight;

        var dHeight = iframe.contentWindow.document.documentElement.scrollHeight;

        var height = Math.max(bHeight, dHeight);

        iframe.height = height;


    } catch (ex) { }

}
window.setInterval("reinitIframe()", 200);
    
</script> 
