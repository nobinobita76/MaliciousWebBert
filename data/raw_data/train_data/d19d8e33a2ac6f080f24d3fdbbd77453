<script type="text/javascript">
    $(document).ready(function() {
        if($('.maintli').length==1){}else{return;}
        t = $('.maintli').offset().top;
        mh = $('.mainnn').height();
        fh = $('.maintli').height();
        $(window).scroll(function(){
            s = $(document).scrollTop();    
            if(s > t - 10){
                $('.maintli').css('position','fixed');
                $('.maintli').css('top','1px');   
            }else{
                $('.maintli').css('position','');
            }
        })
    });
</script>

