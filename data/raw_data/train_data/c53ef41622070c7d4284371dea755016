    <script type="text/javascript">

        function findpwd() {
            //location.href = '/User/FindPwdByPhone?un=' + document.getElementById('UserName').value;
            //location.href = '/User/ResetPwdS1/?userName=' + document.getElementById('UserName').value;
            location.href = 'http://passport.ppts.xueda.com/PPTSWebApp/PPTSPassportService/Password/SendEmail.aspx?username=' + document.getElementById('UserName').value;

        }
        function toggleTip(flag) {
            if (flag) {
                $('.tp_error').show();
            }
            else {
                $('.tp_error').hide();
            }
        }
        function showRequest(formData, jqForm, options) {
            return true;
        }

        function addContactInfo(userid, phone, email, url) {
            $('#tphone').hide();
            $('#tmail').hide();
            var flag = true;
            if (!/^1\d{10}$/.test(phone)) {
                $('#tphone').show();
                flag = false;
            }

            if (!/^[a-zA-Z0-9_\.]+@[a-zA-Z0-9-]+[\.a-zA-Z]+$/.test(email)) {
                $('#tmail').show();
                flag = false;
            }
            if (!flag) return;
            $.post('/User/AddContactInfo', { userid: userid, phone: phone, email: email }, function (contactid) {

                if (contactid > 0) {
                    //alert('保存成功');
                    location.href = url;
                }
                else {
                    alert('请确认手机号和email格式');
                }
            }, 'json');
        }

        // post-submit callback 
        function showResponse(responseText, statusText, xhr, $form) {

            switch (responseText.code) {
                case 0: //登陆成功
                    {
                        if (responseText.needInputPhone) { //需要填写手机号和个人邮箱
                            $('#dlogin').hide();
                            $('#dcontact').show();
                            document.onkeydown = function () {
                                if (event.keyCode == 13)
                                    $('#btnContact').click();
                            }
                            $('#btnContact').click(function () { //添加联系人信息按钮                                
                                addContactInfo(responseText.userid, $('#phone').val(), $('#email').val(), responseText.url);
                            });
                        }
                        else {
                            location.href = responseText.url;
                        }
                    }
                    break;
                case 1: //密码错误
                    {
                        alert('请确认用户名密码');
                        $('#vcode').click();
                        return;
                    }
                    break;
                case 2: //用户不存在
                    {
                        alert('不存在此用户名');
                        $('#vcode').click();
                        return;
                    }
                    break;
                case 3: //验证码错误
                    {
                        alert('请确认验证码');
                        $('#vcode').click();
                        return;
                    }
                    break;
                case -1:
                    {
                        alert('验证码已超时，请重新输入');
                        $('#vcode').click();
                    } break;
                default: break;
            }

        }
        var options = {
            target: '#output2',   // target element(s) to be updated with server response 
            beforeSubmit: showRequest,  // pre-submit callback 
            success: showResponse,  // post-submit callback 

            // other available options: 
            //url:       url         // override for form's 'action' attribute 
            //type:      type        // 'get' or 'post', override for form's 'method' attribute 
            dataType: 'json'        // 'xml', 'script', or 'json' (expected server response type) 
            //clearForm: true        // clear all form fields after successful submit 
            //resetForm: true        // reset the form after successful submit 

            // $.ajax options can be used here too, for example: 
            //timeout:   3000
        };

        function getBrowser() {
            var s = '';
            if ($C.B._360)
                s = '360 ie';
            else if ($C.B.msie)
                s = 'ie';
            else if ($C.B.safari)
                s = 'safari';
            else if ($C.B.opera)
                s = 'opera';
            else if ($C.B.firefox)
                s = 'firefox';
            else if ($C.B.chrome)
                s = 'chrome';
            else
                s = 'unknow';
            return s + $C.B.version;
        }

        $(function () {
            $('#__pp_browser').val(getBrowser());
            $('#__pp_platform').val($C.OS);
            $('#__pp_screen').val(screen.width + 'x' + screen.height);

            if (($C.B.msie && $C.B.version < 8) || $C.B._360) {
                window.msg = new MessageBox();
                window.msg.InnerDivHeight = 370;
                window.msg.InnerDivWidth = 570;
                window.msg.Title = "浏览器升级提示";
                var transferurl = '/Help/IE8Tip';
                // window.msg.ShowIframeDialog(transferurl);
                window.msg.ShowIframeDialog(transferurl, 't', false);

            }
            var url = '/CheckCode/GetImg';
            $('#vcode').css({ 'cursor': 'pointer', 'display': 'inline' })
           .attr('src', url + '?r=' + Math.random())
           .click(function () {
               $(this).attr('src', url + '?r=' + Math.random());
           });

            window.setInterval("$('#vcode').click();", 1000 * 60 * 3);
            if (!(($C.B.msie && $C.B.version < 8) || $C.B._360)) {
                $('#UserName').focus();
            }
            $('form').submit(function () {
                if ($('#UserName').val() == '') {
                    alert('请输入用户名');
                    return false;
                }
                if ($('#Password').val() == '') {
                    alert('请输入密码');
                    return false;
                }
                if ($('#VerifyCode').val() == '') {
                    alert('请输入验证码');
                    return false;
                }

                //$(this).ajaxSubmit(options);
                //return false;
            });
        });


       
    </script>


