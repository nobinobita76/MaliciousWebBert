	box.onmouseout=function(){can=true}; 
	new function (){ 
	var stop=box.scrollTop%112==0&&!can; 
	if(!stop)box.scrollTop==parseInt(box.scrollHeight/2)?box.scrollTop=0:box.scrollTop++; 
	setTimeout(arguments.callee,box.scrollTop%112?10:1500); 
	};	
</script> 
   <link href="template/spring/css/weixin.css" rel="stylesheet" type="text/css" /> 
   <script src="template/spring/js/weixin.js" type="text/javascript"></script>   
  </div>
 </body>
</html>