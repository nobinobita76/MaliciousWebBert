<script src="http://static.xyimg.net/cn/static/js/xxtea.min.10.10.js" language="javascript"></script>
<script type="text/javascript">
    var advid = Array;
	function qqLogin(){
        location.href="http://www.xy.com/api/tencent?game_login_call=http%3A%2F%2Fmicro.xy.com%2Flanyue%2Findex%2F27%2F";
    }
    
    $("#submitRegForm").click(function(){
        //kad.customEvent('click',window.event,{'mark':'1009','op':'6'});
        var username = $("#usernameRegInput").val();
        var passwd   = $("#passwordRegInput").val();

        if(!XYUser.checkUsername(username)){
            alert("用户名不合法");
            return;
        }
        if(!XYUser.checkPassword(passwd)){
            alert("密码不合法");
            return;
        }
        if(passwd != $("#password2RegInput").val()){
            alert("2次密码不一致");
            return;
        }

        XYUser.registerExtra(username, passwd, {gid:96}, function(username, passwd, status){
            if(status == 'error4'){
                alert("用户名已存在");
            }else if(status == 'error3'){
                alert("用户名不合法");
            }
        },function(){
            //kad.customEvent('click',window.event,{'mark':'1004','op':8});

            document.location.href = "http://micro.xy.com/lanyue/logined/27?adkey=Array"
        });
    });

    document.onkeydown = function(){
        if (event.keyCode == 13) {
            $("#submitRegForm").click();
            return false ;
        }
    }
    $("#usernameRegInput").blur(function(){
        var uname = $("#usernameRegInput").val();
        $.getJSON("http://www.xy.com/account/check/username?username="+uname+"&jsoncallback=?", function(result){
            if(result.status == 'error'){
                alert('用户名已存在！');
                return false;
            }
        });
    });

</script>
