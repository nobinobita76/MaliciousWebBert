<script>
    var tmpToken = '08ce53f0e0cf1874be37eb3d3e8b616c';
    var tmpTime = '1491060450';
    function getUrlParams(name){
        var reg = new RegExp("(^|&)"+ name +"=([^&]*)(&|$)");
        var r = window.location.search.substr(1).match(reg);
        if (r!=null) return unescape(r[2]); return null;
    }

    function getref(){
        var ref = getUrlParams('ref');
        if (ref) {
            return  ref;
        } else {
            return  document.referrer;
        }
    }

    var adadvid = Array;
    var refer = getref();

    if(adadvid > 0){
        var kingnetObj = {advid:adadvid,uid:'',sid:1,op:5,outref:encodeURIComponent(refer)};
    }
</script>
