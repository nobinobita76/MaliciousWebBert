<script type="text/javascript">
    if ($('.index_leftwidth').width() > 800) {
        $('.index_leftwidth').width(800);
    }
    function GetAccountIdObj(accountIdStr) {
        var accountId = { AccountType: '', Key: '' },
        index = accountIdStr.indexOf(".");
        if (index === -1) {
            accountId.AccountType = accountIdStr;
        } else {
            accountId.AccountType = accountIdStr.substring(0, index);
            accountId.Key = accountIdStr.substring(index + 1);
        }
        return accountId;
    }

    var navigationString = "";
    var treeLogoDisplay = "false"
    var currentDatabase = "";
    var localUrl = document.location.href.toLocaleLowerCase();
    $.researcherLogin.setDefaults({ cookieName: 'WFKS.Auth', loginDomain: 'http://login.wanfangdata.com.cn/', communityDomain: 'http://social.wanfangdata.com.cn/' });
    (function () {
        //根据是否为编辑部用户并且用户权限是“优先出版”来决定是否显示优先出版页导航
        var context = GetAuthContext();
        var isMagazineInstitution = "false";
        var isPrePublish = "false";
        var isCurrentUser = false;
        if (context) {
            var personId = null;
            var magazineId = null;
            $(context.Context.AccountIds).each(function () {
                var _this = GetAccountIdObj(this);
                if (_this.AccountType == "Person") {
                    personId = _this.Key;
                }
                if (_this.AccountType == "MagazineInstitution") {
                    isMagazineInstitution = "true";
                    magazineId = _this.Key;
                }
            });
            var sendInfo = $("#sendinfor");
            if (personId != null && personId == magazineId) {//对于社区，登录的Person帐户与编辑部帐户一致才被认为是期刊帐户登录
                var displayName = GetDisplayName(context.Context, "MagazineInstitution", magazineId);

                if ('xzjxk-j' == displayName) {//判断该登录的编辑部帐号是不是对应的当前所在期刊
                    sendInfo.replaceWith('<a class="my_message" href="http://social.wanfangdata.com.cn/Blog/ChatHistory.aspx"></a>');
                } else {
                    sendInfo.show();
                }
            } else {
                sendInfo.show();
            }
            $(context.Context.Data).each(function () {
                if (this.Key.indexOf("PeriodicalRight") >= 0 && this.Value == "PrePublish")
                    isPrePublish = "true";
            });

            if (isMagazineInstitution == "true")
                $("#paperRegular").parent("li").show();

            if (isMagazineInstitution == "true" && isPrePublish == "true")
                $("#paperPublish").parent("li").show();
        }

        if (treeLogoDisplay.indexOf("true") >= 0)
            $("#treeLogo").show();

        $("#periodicalTab").children().removeClass("current");

        if (localUrl.indexOf("http://c.wanfangdata.com.cn/".toLocaleLowerCase()) >= 0 && localUrl.indexOf("periodicalprofile") < 0) {
            $("#linkPaper").parent().addClass("current");
            $("#SiteSelect_new").val("WF_QK");
        }
        if (localUrl.indexOf("http://contribute.wanfangdata.com.cn/".toLocaleLowerCase()) >= 0) {
            $("#linkArticleSolicitation").parent().addClass("current");
            $("#SiteSelect_new").val("ArticleSolicitation");
        }
        if (localUrl.indexOf("periodicalprofile") >= 0) {
            $("#linkMagazine").parent().addClass("current");
            $("#SiteSelect_new").val("CurrentPeriodical");
        }
        if (localUrl.indexOf("http://stats.editors.wanfangdata.com.cn/".toLocaleLowerCase()) >= 0) {
            $("#linkPeriodicalState").parent().addClass("current");
            $("#SiteSelect_new").val("Magazine");
        }
        if (localUrl.indexOf("/Blog".toLocaleLowerCase()) >= 0) {
            $("#linkBlog").parent().addClass("current");
            $("#SiteSelect_new").val("WF_QK");
        }
        if (localUrl.indexOf("http://publish.wanfangdata.com.cn/Publish".toLocaleLowerCase()) >= 0) {
            $("#paperPublish").parent().addClass("current");
            $("#SiteSelect_new").val("WF_QK");
        }
        if (localUrl.indexOf("http://publish.wanfangdata.com.cn/Regular".toLocaleLowerCase()) >= 0) {
            $("#paperRegular").parent().addClass("current");
            $("#SiteSelect_new").val("WF_QK");
        }
        $("#searchBox_qk").keypress(function (e) {
            if (e.which == 13)
                return search();
        });

        $("#searchButton_qk").click(function (event) {
            return search();
        });

        if (navigationString.indexOf(";") > 0 && navigationString.indexOf(".")) {
            var navigation = navigationString.split(";");
            $("#oneClass ").attr("href", "http://c.wanfangdata.com.cn/PeriodicalSubject.aspx?NodeID=" + navigation[0].split(".")[0]).html(navigation[0].split(".")[1]);
            $("#twoClass ").attr("href", "http://c.wanfangdata.com.cn/PeriodicalSubject.aspx?NodeID=" + navigation[1].split(".")[0]).html(navigation[1].split(".")[1]);
            $("#PeridicalNavigation").show();
        }

        getSubInfo($("#container_sub_qk"), "MagazineInstitution.xzjxk-j");
	showDoiPdf();
    })();

    function search() {
        var query = $.trim($("#searchBox_qk").val());
        currentDatabase = $("#SiteSelect_new").val();
        if (query == "") {
            alert('请输入检索词！');
            return false;
        }

        var from = "&f=" + ((currentDatabase == "CurrentPeriodical") ? "InJournals" : "c.Periodical");

        if (currentDatabase == "Magazine") {
            window.location.href = "http://s.wanfangdata.com.cn/Journal.aspx?q=" + encodeURIComponent(query) + from;
            return false;
        }

        if (currentDatabase == "CurrentPeriodical") {
            query = query + " PeriodicalID:xzjxk-j";
            window.location.href = "http://s.wanfangdata.com.cn/Paper.aspx?q=" + encodeURIComponent(query) + from;
            return false;
        }

        if (currentDatabase == "WF_QK") {
            query = query + " DBID:WF_QK"
            window.location.href = "http://s.wanfangdata.com.cn/Paper.aspx?q=" + encodeURIComponent(query) + from;
        }

        if (currentDatabase == "ArticleSolicitation") {
            window.location.href = "http://contribute.wanfangdata.com.cn/Search?keyword=" + encodeURIComponent(query);
            return false;
        }
        return false;
    }

     function showDoiPdf(){
            var isDoi="{IsDoiPeriodical}".toLocaleLowerCase();
            if(isDoi=="true")
		$(".doiLink").show();
	    else
		$(".doiLink").hide();
    }
</script>

