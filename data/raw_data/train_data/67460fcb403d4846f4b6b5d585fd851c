        <script>
            function showImgDelay(imgObj, imgSrc, maxErrorNum) {
                if (maxErrorNum > 0) {
                    imgObj.onerror = function () {
                        showImgDelay(imgObj, imgSrc, maxErrorNum - 1);
                    };
                    setTimeout(function () {
                        imgObj.src = imgSrc;
                    }, 5);
                } else {
                    imgObj.onerror = null;
                }
            }
        </script>
