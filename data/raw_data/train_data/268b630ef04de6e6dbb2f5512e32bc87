  <script type="text/javascript">
function auto_height(){
     var h= document.documentElement.clientHeight-0;
 var high = document.getElementById('wp');
 high.style.height=h+"px";
 }	
 jqjq('#side_open').bind('click', function() {
    if(jqjq('body').css('overflow-x') != 'hidden') {
jqjq("#side_nv").show();
        jqjq('body').css('overflow-x', 'hidden'); 
        jqjq('#content_other').addClass('open');
jqjq('#side_nv').addClass('oy');
jqjq('#side_pr').addClass('sd_pr');
jqjq('#side_open').addClass('msk');
    } else {
jqjq("#side_nv").hide();
        jqjq('body').css('overflow-x', '');
        jqjq('#content_other').removeClass('open');
jqjq('#side_nv').removeClass('oy');
jqjq('#side_pr').removeClass('sd_pr');
jqjq('#side_open').removeClass('msk');
    }
});


if(window.onload!=null){   
    window.onload=function(){auto_height();};  
}
</script>  
