              <dd style="line-height:18px; float:none; height:auto; width:100%; color:#333;"></dd>
              <dd style="text-align:right; line-height:14px;width:100%;float:none; height:auto;">
               <a href="medals_detail.php?uid=813426" style="color:#8b4722; text-decoration:underline; font-family:'宋体'" target="_blank">查看详情&gt;&gt;</a>
              </dd>
             </dl>
