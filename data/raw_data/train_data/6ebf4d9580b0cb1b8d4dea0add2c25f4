   <script type="text/javascript">
function chkfrmss(frm,kwobj,searchtype){
	var keyword=kwobj.value;
	if(keyword=="" || keyword.indexOf("搜索其实很简单  (^_^)")!=-1){
		alert("搜索其实很简单  (^_^)");
		kwobj.focus();
		return false;
	}

	if(document.getElementById('meta').value=='forumtitle'){
		document.frmforumsearchbbs.forumkeyword.value=keyword;
		document.frmforumsearchbbs.submit();
		return false;
	}
}

function checkcss(wang_a){
	document.getElementById('wang').style.display='block';
	document.getElementById('wang_a').className="xx_hover";
}

function xiaoren(wang_a){
	document.getElementById('wang').style.display='none';
	document.getElementById('wang_a').className="xx";
}

function wangxiaoren(xiao_a){
	document.getElementById('xiao').style.display='block';
	document.getElementById('xiao_a').className="sz_hover";
}

function zheng(xiao_a){
	document.getElementById('xiao').style.display='none';
	document.getElementById('xiao_a').className="sz";
}

function InitAjax()
{
　var ajax=false; 
　try { 
　　ajax = new ActiveXObject("Msxml2.XMLHTTP"); 
　} catch (e) { 
　　try { 
　　　ajax = new ActiveXObject("Microsoft.XMLHTTP"); 
　　} catch (E) { 
　　　ajax = false; 
　　} 
　}
　if (!ajax && typeof XMLHttpRequest!='undefined') { 
　　ajax = new XMLHttpRequest(); 
　} 
　return ajax;
}
function ajaxmessage(){
	if(document.getElementById('wang_a')){
		var url='/njs_newmessage.php?action=getnewmessage';
		var ajax = InitAjax();
		//使用Get方式进行请求
		ajax.open("GET", url, true);
		//获取执行状态
		ajax.onreadystatechange = function(){
			//如果执行是状态正常，那么就把返回的内容赋值给上面指定的层
			if (ajax.readyState == 4 && ajax.status == 200) {
				var ajax_responseText=ajax.responseText;
				if(ajax_responseText>0){
					document.getElementById('wang_a').innerHTML='悄悄话('+ajax_responseText+')';
					document.getElementById('wang_a').className='xx';
				}
				else{
					document.getElementById('wang_a').innerHTML='悄悄话';
					document.getElementById('wang_a').className='xx_w';
				}
		　　}
		}
		ajax.setRequestHeader("If-Modified-Since","0");
		ajax.send(null);
		window.setTimeout("ajaxmessage()",30000);
	}
}
if (document.all) 
window.attachEvent("onload",ajaxmessage); 
else 
window.addEventListener("load",ajaxmessage,false);
</script> 
