  <script type="text/javascript">
var dk_title= ['','好爽','愉快','还行','烦躁'];
jQuery(function(){
	jQuery('.mood_sign').fixed();
	var mood_left=(jQuery(window).width()-1000)/2-150;
	if(mood_left<50) mood_left=50;
	jQuery('.mood_sign').css({'top':285 +'px','left':mood_left + 'px'});
	jQuery('.mood_sign_head').click(function(){
			jQuery.get("ajax_dkqd.php?action=get_dk",function(data){
				if(data=='-1'){
					jQuery('.ui-dialog').show();
				}else if(data=='1' || data=='2' || data=='3' || data=='4'){
						jQuery('.mood_sign_main').html('<p class="mooding"><img src="static/images/mains/mood' + data + '.png" />' + dk_title[data] + '</p>');
					jQuery('.mood_sign_cont').toggle();
				}else{
					jQuery('.mood_sign_cont').toggle();
				}
			});
	});
	jQuery('.mood_sign_main').find("li").click(function(){
		var mood = jQuery(this).attr("title"),
		index = jQuery(this).attr("typeid");
		jQuery.get("ajax_dkqd.php?action=dk&typeid="+index,function(data){
			if(data=='-1'){
				jQuery('.ui-dialog').show();
			}else if(data=='签到成功'){
				jQuery('.mood_sign_main').html('<p class="mooding"><img src="static/images/mains/mood' + index + '.png" />' + mood + '</p>');
				jQuery('.mood_sign_cont').toggle();
			}else if(data=='小样儿，别以为穿了马甲就不认识你了！'){
				alert(data);
			}else{
				jQuery(this).parent().hide();
				jQuery('.mood_sign_cont').hide();
				alert(data);
			}
		});	
	});
	jQuery(document).click(function(){    
		jQuery(".mood_sign_cont").hide();
	});
})
</script> 
