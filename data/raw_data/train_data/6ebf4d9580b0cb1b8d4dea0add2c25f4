  <script src="/css/2009sun/js/jquery.libs-1.2.6pack.js?t=201401" type="text/javascript"></script> 
  <script>
(function($){
	var defaults = {
		top : 270 //300
	};
	$.fn.fixed= function(options){
		options = $.extend({},defaults,options);
		return this.each(function(){
			var self = $(this);
			var isIE6 = $.browser.msie && ($.browser.version == "6.0");
			if(isIE6)
			{
				self.css({'position':'absolute','top':options.top + $(window).scrollTop() +'px'})
				$(window).scroll(function(){
					self.css({
						'top' : $(window).scrollTop() + options.top + 'px'
					})
				})
			}
			else
			{
				self.css({'position':'fixed','top':options.top+'px'})
			}
		});
	}
})(jQuery);
jQuery(function(){
	jQuery('#bbsFixedNav').fixed();
	jQuery('.feedback').hover(function(){
		jQuery('.BBS-QQ').show()
	},function(){
		jQuery('.BBS-QQ').hide()
	});
	jQuery('.BBS-QQ').hover(function(){
		jQuery(this).show()
		jQuery('.feedback a').addClass('on')
	},function(){
		jQuery(this).hide()
		jQuery('.feedback a').removeClass('on')
	});
	jQuery('a.go-tops').click(function(){
		jQuery(window).scrollTop(0)
	});
	jQuery('#bbsFixedNav ul a').click(function(){
		var oID = jQuery(this).attr('data-anchor');
		var oIDH = jQuery('#' + oID).offset().top;
		jQuery(window).scrollTop(oIDH - 50)
	});
	//鼠标移入显示，移出隐藏
	jQuery(".cfgg_hover").hover(function(){
		jQuery(this).find("a").eq(0).addClass("on");
		jQuery(this).find(".weixinBBS").show();
	},function(){
		jQuery(this).find("a").eq(0).removeClass("on");
		jQuery(this).find(".weixinBBS").hide();
	});
})
</script> 
