<script type="text/javascript">

// 微信配置
wx.config({

    debug: false,

    appId:"", 

    timestamp:"", 

    nonceStr:"", 

    signature:"",

    jsApiList:['onMenuShareTimeline', 'onMenuShareAppMessage', 'chooseImage','uploadImage'] // 功能列表，我们要使用JS-SDK的什么功能

});

// config信息验证后会执行ready方法，所有接口调用都必须在config接口获得结果之后，config是一个客户端的异步操作，所以如果需要在 页面加载时就调用相关接口，则须把相关接口放在ready函数中调用来确保正确执行。对于用户触发时才调用的接口，则可以直接调用，不需要放在ready 函数中。


var wxtitle = "“寒山闻钟”论坛联手名城苏州在线交流直播";    
//var wxtitle = "“苏州十佳餐厅”评选开启，快为你喜爱的餐厅投一票！好不好你说了算！";
//分享的标题

var wxurl = window.location;
wxurl = wxurl.toString();  //这里的是分享的链接

wx.ready(function(){

    // 获取“分享到朋友圈”按钮点击状态及自定义分享内容接口
	
	
		
    wx.onMenuShareTimeline({

        title:wxtitle, // 分享标题

        link:wxurl,

        imgUrl: "http://special.2500sz.com/zt/2016/06/zjgzj/hswz.jpg", // 分享图标
		
		/*success:function(){
			alert("2:"+wxurl);
		},
		cancel:function()
		{
			
			alert("1:"+wxurl);
			
		}*/

    });

    // 获取“分享给朋友”按钮点击状态及自定义分享内容接口

    wx.onMenuShareAppMessage({

        title: wxtitle, // 分享标题

        desc: wxtitle, // 分享描述

        link:wxurl,

        imgUrl: "http://special.2500sz.com/zt/2016/06/zjgzj/hswz.jpg", // 分享图标

        type: 'link', // 分享类型,music、video或link，不填默认为link

    });

});

</script>


