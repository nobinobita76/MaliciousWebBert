        $(function () {
            $.ajax({
                type: "POST",
                url: "webajax/notes.ashx?gettype=1",
                dataType: "json",
                async: false,
                success: function (msg) {
                    if (msg != "0") {
                        json = eval(msg.rows)
                        for (var i = 0; i < json.length; i++) {
                            document.getElementById("lbtitle").innerText = json[i].title;
                            document.getElementById("lbtt").innerText = json[i].create_date;
                        }
                    }
                }
            });
        })
    </script>
