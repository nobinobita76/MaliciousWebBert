    <script type="text/javascript" language="javascript">
        var times = 1;
        var notifyURL = '';
        function clock() {
            var result = "error";
            $.ajax({
                type: 'get',
                url: "/tools/QueryOrder.ashx?aliorderid=6877170208000375", //实际修改为查询我们数据库里面支付结果记录
                dataType: "json",
                success: function (json) {
                    if (json.url != '' && json.result == "1") {
                        notifyURL = json.url;
                    }
                    checkResult(json.result);
                }
            });
        }

        function checkResult(result) {
            if (result == "0") {
                //执行定时请求
                if (times < 5 * 60) {
                    setTimeout("clock();", 1000);
                    times++;
                }

            } else if (result == "1") {
                $("#codem").hide();
                $("#res").show();
                delayURL();
                $("#J_orderPaySuccessNotice").css("display", 'block');
                //alert("支付成功！请关闭此页面！");
                return;
            } else if (result == "ERR1") {
                $("#res .ti").html("参数错误");
                $("#res").show();
            }
            else if (result == "ERR2") {
                $("#res .ti").html("支付记录不存在，请返回商户页面重新提交！");
                $("#res").show();
            }
        }

        function CloseWebPage() {
            var userAgent = navigator.userAgent;
            if (userAgent.indexOf("MSIE") > 0) {
                if (userAgent.indexOf("MSIE 6.0") > -1) {
                    window.opener = null;
                    window.close();
                } else {
                    window.open('', '_top');
                    window.top.close();
                }
            }
            else if (userAgent.indexOf("Firefox") > -1) {
                window.location.href = 'about:blank ';
            } else {
                window.opener = null;
                window.open('', '_self', '');
                window.close();
            }
            if (userAgent.indexOf("Firefox") != -1 || userAgent.indexOf("Chrome") != -1) {
                window.location.href = "about:blank";
            } else {
                window.opener = null;
                window.open("", "_self");
                window.close();
            }
        }

        function jumpUrl() {
            document.location.href = "/PayOk.aspx?orderid=6877170208000375"; //商户跳转页面
        }

        $(document).ready(function () {
            setTimeout("clock();", 30000);
        });

        function delayURL() {
            var delay = document.getElementById("time").innerHTML;
            var t = setTimeout("delayURL()", 1000);
            if (delay > 0) {
                delay--;
                document.getElementById("time").innerHTML = delay;
            } else {
                clearTimeout(t);
                if (notifyURL != '') {
                    window.location.href = notifyURL;
                } else {
                    alert("支付成功！请关闭此页面！");
                }
            }
        }

        //加载支付二维码
        $(function () {
            var commitUrl = "";
            var orderNum = "";
            var tran_time = "";
            var supId = '11207';
            var orderId = '6877170208000375';
            var orderAmt = '100.00';
            var bankId = '';
            var sign = '3c56d410d358b813831483cc70cdb7e7';
            var datas = "{'supId': '" + supId + "','orderId':'" + orderId + "','orderAmt': '" + orderAmt + "','bankId':'" + bankId + "','sign':'" + sign + "'}";
            $.ajax({
                type: "post",
                url: "GetCommitUrl.ashx",
                data: datas,
                success: function (data) {
                    if (data != null) {
                        var valueList = data.split('^');
                        commitUrl = valueList[0];
                        orderNum = valueList[1];
                        tran_time = valueList[2];

                        if (commitUrl.indexOf("FLCode") != -1) {
                            $("#FLCode").show();
                            $('#FLCode').qrcode(commitUrl.replace("FLCode", ""));
                            $('#FLCode canvas').css('width', '168px');
                            $('#FLCode canvas').css('height', '168px');
                        } else {
                            $("#image3").show();
                            $("#image3").attr("src", commitUrl);
                        }
                        $("#loading").hide();
                        $("#orderId").html(orderNum);
                        $("#tranTime").html(tran_time);
                    }
                },
                error: function (e, x, r) {
                    alert(r);
                }
            });
        });
    </script>
